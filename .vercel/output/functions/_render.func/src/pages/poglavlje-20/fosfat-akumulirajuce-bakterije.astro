---
import SubPageLayoutWithBase from "../../components/SubPageLayoutWithBase.astro";

const title = 'Fosfat-akumulirajuće bakterije';
const description = 'Bakterije koje intracelularno akumuliraju fosfate u obliku polifosfatnih zrnaca';
---

<SubPageLayoutWithBase chapterNumber={20} 
  title={title}
  description={description}
  chapterNumber={20}
  primaryColor="teal"
  prevLink="/poglavlje-20/biogeokemijski-ciklus-fosfora/"
  prevText="← Biogeokemijski ciklus fosfora"
  nextLink="/poglavlje-20/fosfomobilizatori/"
  nextText="Fosfomobilizatori →"
>

  <!-- Main Content with Sidebar -->
  <div class="flex max-w-7xl mx-auto">
    
    <!-- Table of Contents Sidebar -->
    <aside class="hidden lg:block w-64 p-6 bg-gradient-to-b from-gray-50 to-gray-100 border-r border-gray-200 sticky top-0 h-screen overflow-y-auto shadow-lg">
      <div class="mb-6">
        <div class="flex items-center mb-6">
          <div class="w-8 h-8 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-gray-900">Sadržaj stranice</h3>
        </div>
        
        <!-- Bookmark Button -->
        <button id="bookmark-btn" class="flex items-center space-x-3 text-sm text-gray-600 hover:text-teal-600 transition-all duration-300 mb-6 p-3 rounded-lg hover:bg-teal-50 w-full">
          <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          <span id="bookmark-text" class="font-medium">Označiti kao bookmark</span>
        </button>
        
        <!-- Table of Contents -->
        <nav class="space-y-1">
          <div class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Sadržaj stranice</div>
          <a href="#karakteristike" class="toc-link group flex items-center text-sm text-gray-600 hover:text-teal-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-teal-50" data-target="karakteristike">
            <span class="w-2 h-2 bg-purple-400 rounded-full mr-3 transition-all duration-300"></span>
            Karakteristike i primjena
          </a>
          <a href="#bojenje-neisser" class="toc-link group flex items-center text-sm text-gray-600 hover:text-teal-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-teal-50" data-target="bojenje-neisser">
            <span class="w-2 h-2 bg-blue-400 rounded-full mr-3 transition-all duration-300"></span>
            Bojanje po Neisserovoj metodi
          </a>
          <a href="#mikroskopski-prikaz" class="toc-link group flex items-center text-sm text-gray-600 hover:text-teal-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-teal-50" data-target="mikroskopski-prikaz">
            <span class="w-2 h-2 bg-green-400 rounded-full mr-3 transition-all duration-300"></span>
            Mikroskopski prikaz
          </a>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 px-6 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          
          <!-- Content Blocks -->
          <div class="space-y-8">
            
            <!-- Karakteristike i primjena -->
            <div id="karakteristike" class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-xl p-6 shadow-lg border border-purple-200">
              <div class="flex items-center mb-4">
                <span class="text-3xl mr-4">🏭</span>
                <h3 class="text-2xl font-bold text-purple-900">Karakteristike i primjena</h3>
              </div>
              <p class="text-gray-700 leading-relaxed mb-4">
                Fosfat-akumulirajuće bakterije prirodno se nalaze u visoko opterećenim otpadnim vodama. Zbog svojstva akumulacije fosfata intracelularno u obliku u vodi netopivih zrnaca polifosfata primjenjuju se u uređajima za pročišćivanje otpadnih voda radi boljeg uklanjanja fosfata iz otpadnih voda.
              </p>
              <p class="text-gray-700 leading-relaxed mb-4">
                Najčešće primjenjivana metoda pročišćivanja otpadnih voda uređaji su s aktivnim muljem.
              </p>
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <h4 class="font-semibold text-purple-800 mb-3">Uvjeti za akumulaciju:</h4>
                <p class="text-gray-700">
                  Aerobna sredina s malom količinom organske tvari i suviškom otopljenih fosfata
                </p>
              </div>
            </div>

            <!-- Bojanje po Neisserovoj metodi -->
            <div id="bojenje-neisser" class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-xl p-6 shadow-lg border border-blue-200">
              <div class="flex items-center mb-4">
                <span class="text-3xl mr-4">🔬</span>
                <h3 class="text-2xl font-bold text-blue-900">Bojanje po Neisserovoj metodi</h3>
              </div>
              
              <p class="text-gray-700 leading-relaxed mb-4">
                One se lako mogu dokazati u flokulama aktivnog mulja bojenjem po Neisserovoj metodi. Po Neisserovoj metodi protoplazma bakterija oboji se smeđkasto, a zrnca polifosfata tamnomodro (slika 86).
              </p>

              <!-- Postupak bojenja -->
              <div class="bg-white rounded-lg p-4 shadow-sm">
                <h4 class="font-semibold text-blue-800 mb-3">Postupak bojenja</h4>
                <ol class="list-decimal list-inside space-y-3 text-gray-700">
                  <li class="leading-relaxed">
                    <strong>Korak 1:</strong> Osušeni i na plamenu fiksirani razmaz prelije se otopinom boje Neisser I i boja na njemu ostavi 1–2 min.
                  </li>
                  <li class="leading-relaxed">
                    <strong>Korak 2:</strong> Preparat se opere destiliranom vodom.
                  </li>
                  <li class="leading-relaxed">
                    <strong>Korak 3:</strong> Preparat se prelije otopinom boje Neisser II i boja na njemu ostavi 1–2 min.
                  </li>
                  <li class="leading-relaxed">
                    <strong>Korak 4:</strong> Preparat se opere vodom iz slavine, osuši između papira za filtriranje i promatra na mikroskopu imerzijskog objektiva.
                  </li>
                </ol>
                <div class="mt-4 p-3 bg-blue-100 border border-blue-300 rounded-lg">
                  <p class="text-blue-800 font-semibold text-sm">
                    🎨 Rezultat: Protoplazma smeđkasta, zrnca polifosfata tamnomodra
                  </p>
                </div>
              </div>
            </div>

            <!-- Mikroskopski prikaz -->
            <div id="mikroskopski-prikaz" class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-xl p-6 shadow-lg border border-green-200">
              <div class="flex items-center mb-4">
                <span class="text-3xl mr-4">🔍</span>
                <h3 class="text-2xl font-bold text-green-900">Mikroskopski prikaz</h3>
              </div>
              
              <figure class="image-figure bg-white rounded-lg p-4 shadow-sm mt-6">
                <img src="/Images/slika86.jpg" alt="Plavo obojena zrnca polifosfata u flokuli aktivnog mulja" class="w-3/5 h-auto rounded-lg mx-auto" />
                <figcaption class="mt-4 text-center">
                  <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">Slika 86</span>
                  <span class="block mt-2 text-gray-700">Plavo obojena zrnca polifosfata u flokuli aktivnog mulja</span>
                </figcaption>
              </figure>
            </div>

          </div>

        </div>
      </div>
    </main>
  </div>

  <!-- Mobile TOC Toggle -->
  <button id="mobile-toc-toggle" class="lg:hidden fixed bottom-4 right-4 bg-teal-600 text-white p-3 rounded-full shadow-lg z-50">
    <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h7"></path>
    </svg>
  </button>

  <!-- Mobile TOC Overlay -->
  <div id="mobile-toc-overlay" class="lg:hidden fixed inset-0 bg-black bg-opacity-50 z-40 hidden">
    <div class="fixed right-0 top-0 h-full w-80 bg-white shadow-xl transform translate-x-full transition-transform duration-300" id="mobile-toc-panel">
      <div class="p-6">
        <div class="flex justify-between items-center mb-6">
          <h3 class="text-lg font-semibold text-gray-900">Brza navigacija</h3>
          <button id="mobile-toc-close" class="text-gray-500 hover:text-gray-700">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
            </svg>
          </button>
        </div>
        
        <!-- Bookmark Button -->
        <button id="mobile-bookmark-btn" class="flex items-center space-x-2 text-sm text-gray-600 hover:text-teal-600 transition-colors duration-200 mb-4 w-full">
          <svg id="mobile-bookmark-icon" class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>
          </svg>
          <span id="mobile-bookmark-text">Označiti kao bookmark</span>
        </button>
        
        <!-- Navigation Links -->
        <nav class="space-y-2">
          <a href="/poglavlje-20/" class="mobile-toc-link block text-sm text-gray-600 hover:text-teal-600 transition-colors duration-200 py-2 border-l-2 border-transparent hover:border-teal-600 pl-3">
            Pregled poglavlja
          </a>
          <a href="/sadrzaj/" class="mobile-toc-link block text-sm text-gray-600 hover:text-teal-600 transition-colors duration-200 py-2 border-l-2 border-transparent hover:border-teal-600 pl-3">
            Svi sadržaji
          </a>
        </nav>
      </div>
    </div>
  </div>

  <!-- Navigacijski gumbovi -->
  <div class="flex justify-between mt-16 mb-8 max-w-4xl mx-auto px-4 sm:px-6">
    <!-- Prethodna stranica -->
    <a
      href="/poglavlje-20/biogeokemijski-ciklus-fosfora/"
      class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gray-600 to-gray-700 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 no-underline transform hover:-translate-y-1"
      aria-label="Prijeđi na prethodnu stranicu: Biogeokemijski ciklus fosfora"
    >
      ←
      <span class="text-lg">Biogeokemijski ciklus fosfora</span>
    </a>
    
    <!-- Iduća stranica -->
    <a
      href="/poglavlje-20/fosfomobilizatori/"
      class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-teal-600 to-teal-700 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 no-underline transform hover:-translate-y-1"
      aria-label="Prijeđi na sljedeću stranicu: Fosfomobilizatori"
    >
      <span class="text-lg">Fosfomobilizatori</span>
      →
    </a>
  </div>

  <!-- CSS Styles for Active State -->
  <style>
    .toc-link.active {
      @apply text-teal-600 bg-teal-50 font-semibold;
    }
    
    .toc-link.active span {
      @apply w-3 h-3 scale-125;
    }
  </style>

  <!-- JavaScript -->
  <script>
    // Bookmark functionality
    function initBookmarks() {
      const bookmarkKey = 'bookmark-fosfat-akumulirajuce-bakterije';
      const bookmarkBtn = document.getElementById('bookmark-btn');
      const bookmarkIcon = document.getElementById('bookmark-icon');
      const bookmarkText = document.getElementById('bookmark-text');
      const mobileBookmarkBtn = document.getElementById('mobile-bookmark-btn');
      const mobileBookmarkIcon = document.getElementById('mobile-bookmark-icon');
      const mobileBookmarkText = document.getElementById('mobile-bookmark-text');
      
      // Check if bookmarked
      const isBookmarked = localStorage.getItem(bookmarkKey) === 'true';
      updateBookmarkUI(isBookmarked);
      
      function updateBookmarkUI(bookmarked: boolean) {
        const fillAttribute = bookmarked ? 'currentColor' : 'none';
        const text = bookmarked ? 'Ukloniti bookmark' : 'Označiti kao bookmark';
        
        if (bookmarkIcon) bookmarkIcon.setAttribute('fill', fillAttribute);
        if (bookmarkText) bookmarkText.textContent = text;
        if (mobileBookmarkIcon) mobileBookmarkIcon.setAttribute('fill', fillAttribute);
        if (mobileBookmarkText) mobileBookmarkText.textContent = text;
      }
      
      function toggleBookmark() {
        const currentlyBookmarked = localStorage.getItem(bookmarkKey) === 'true';
        const newBookmarkState = !currentlyBookmarked;
        localStorage.setItem(bookmarkKey, newBookmarkState.toString());
        updateBookmarkUI(newBookmarkState);
      }
      
      if (bookmarkBtn) bookmarkBtn.addEventListener('click', toggleBookmark);
      if (mobileBookmarkBtn) mobileBookmarkBtn.addEventListener('click', toggleBookmark);
    }

    // Mobile TOC
    function initMobileTOC() {
      const toggleBtn = document.getElementById('mobile-toc-toggle');
      const overlay = document.getElementById('mobile-toc-overlay');
      const panel = document.getElementById('mobile-toc-panel');
      const closeBtn = document.getElementById('mobile-toc-close');
      const tocLinks = document.querySelectorAll('.mobile-toc-link');
      
      function openTOC() {
        if (overlay && panel) {
          overlay.classList.remove('hidden');
          setTimeout(() => {
            panel.classList.remove('translate-x-full');
          }, 10);
        }
      }
      
      function closeTOC() {
        if (panel && overlay) {
          panel.classList.add('translate-x-full');
          setTimeout(() => {
            overlay.classList.add('hidden');
          }, 300);
        }
      }
      
      if (toggleBtn) toggleBtn.addEventListener('click', openTOC);
      if (closeBtn) closeBtn.addEventListener('click', closeTOC);
      if (overlay) {
        overlay.addEventListener('click', (e) => {
          if (e.target === overlay) closeTOC();
        });
      }
      
      // Close TOC when clicking on a link
      tocLinks.forEach(link => {
        link.addEventListener('click', closeTOC);
      });
    }

    // Scroll Spy for TOC
    function initScrollSpy() {
      const sections = document.querySelectorAll('[id^="karakteristike"], [id^="bojenje-"], [id^="mikroskopski-"]');
      const tocLinks = document.querySelectorAll('.toc-link');
      
      function updateActiveLink() {
        let currentSection = '';
        
        sections.forEach(section => {
          const rect = section.getBoundingClientRect();
          if (rect.top <= 100 && rect.bottom >= 100) {
            currentSection = section.id;
          }
        });
        
        // Remove active class from all links
        tocLinks.forEach(link => {
          link.classList.remove('active');
        });
        
        // Add active class to current section link
        if (currentSection) {
          const activeLink = document.querySelector(`[data-target="${currentSection}"]`);
          if (activeLink) {
            activeLink.classList.add('active');
          }
        }
      }
      
      // Listen for scroll events
      window.addEventListener('scroll', updateActiveLink);
      
      // Initial check
      updateActiveLink();
    }

    // Initialize everything
    document.addEventListener('DOMContentLoaded', () => {
      initBookmarks();
      initMobileTOC();
      initScrollSpy();
    });
  </script>

</SubPageLayoutWithBase>