---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Izolacija anaerobnih fototrofnih bakterija u stupcu po Vinogradskom',
  description = 'Purpurne sumporne bakterije.'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={23}
  primaryColor="gray"
  prevLink="/poglavlje-22/"
  nextLink="/sadrzaj/" 
  prevText="← Poglavlje 22"
  nextText="Sadržaj →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Sadržaj" 
  ctaPrimaryLink="/sadrzaj/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 23', url: '/poglavlje-23/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border border-gray-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gray-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900 mb-3">Dobrodošli u Poglavlje 23</h3>
        <p class="text-gray-800 text-lg leading-relaxed">
          Izolacija anaerobnih fototrofnih bakterija u stupcu po Vinogradskom
        </p>
      </div>
    </div>
  </div>

  <!-- Ciljevi učenja -->
  <div class="bg-gradient-to-br from-gray-50 to-gray-100 rounded-xl p-8 border border-gray-200 mb-8">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gray-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-gray-900 mb-4 font-heading">Ciljevi učenja</h3>
        <ul class="text-gray-800 text-lg leading-relaxed font-body space-y-2">
          <li class="flex items-start">
            <span class="text-gray-600 mr-2">•</span>
            Razumjeti karakteristike anaerobnih fototrofnih bakterija
          </li>
          <li class="flex items-start">
            <span class="text-gray-600 mr-2">•</span>
            Naučiti o purpurnim sumpornim bakterijama i njihovoj ekologiji
          </li>
          <li class="flex items-start">
            <span class="text-gray-600 mr-2">•</span>
            Steći praktične vještine u izolaciji bakterija u stupcu po Vinogradskom
          </li>
          <li class="flex items-start">
            <span class="text-gray-600 mr-2">•</span>
            Razumjeti važnost fototrofnih bakterija u biogeokemijskim ciklusima
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sadržaj i vježbe -->
  <div class="mb-12">
    <div class="grid md:grid-cols-2 gap-8">
      
      <!-- Sadržaj poglavlja -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Sadržaj</h2>
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <!-- Purpurne sumporne bakterije -->
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Izolacija anaerobnih fototrofnih bakterija</h3>
          </div>
          
          <a href="/poglavlje-23/purpurne-sumporne-bakterije/" class="text-blue-600 font-semibold hover:text-blue-800 transition-colors duration-300">
            Pročitaj više →
          </a>
        </div>
      </div>
      
      <!-- Laboratorijske vježbe -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Laboratorijske vježbe</h2>
        <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-2xl p-6 border-2 border-red-200">
          <!-- Vježbe 23: Stupac po Vinogradskom -->
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-red-900">Stupac po Vinogradskom</h3>
          </div>
          
          <div class="flex items-center justify-end">
            <a href="/poglavlje-23/vjezba-23/" class="inline-flex items-center text-red-700 font-semibold">
              Pročitaj više
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
      
    </div>
  </div>

  <!-- Quiz - Provjeri svoje znanje -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Provjeri svoje znanje</h2>
    
    <div class="max-w-2xl mx-auto">
      <div class="bg-gradient-to-br from-rose-50 to-rose-100 rounded-2xl p-8 border-2 border-rose-200 shadow-lg">
        <div class="text-center">
          <div class="w-20 h-20 bg-rose-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-rose-900 mb-4">Quiz - Poglavlje 23</h3>
          <p class="text-rose-800 text-lg mb-6">Testirajte svoje znanje iz ovog poglavlja s 5 pitanja</p>
          <a href="/poglavlje-23/quiz-23/" class="inline-flex items-center justify-center px-8 py-4 bg-rose-600 text-white font-bold text-lg rounded-xl hover:bg-rose-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Započni quiz
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

</ChapterLayout>