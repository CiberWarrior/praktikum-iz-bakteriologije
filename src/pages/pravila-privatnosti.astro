---
// Pravila privatnosti stranica
import '../styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Pravila privatnosti',
  description = 'Pravila privatnosti za mrežni udžbenik iz bakteriologije'
} = Astro.props;
---

<!doctype html>
<html lang="hr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-page font-sans text-page">
    
    <!-- Navigation -->
    <nav class="bg-gray-800 shadow-sm border-b border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center py-4">
          <a href="/" class="text-xl font-bold text-white hover:text-blue-400 transition-colors duration-300">
            Bakteriologija
          </a>
          <!-- Desktop navigacija -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/sadrzaj/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Sadržaj
            </a>
            <a href="/predgovor/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Predgovor
            </a>
            <a href="/rječnik/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Rječnik
            </a>
            <a href="/o-nama/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              O nama
            </a>
            <a href="/kontakt/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Kontakt
            </a>
            <!-- Search -->
            <div class="relative">
              <a href="/pretraga/" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300" title="Pretraga">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Mobilni hamburger menu -->
          <div class="md:hidden">
            <button 
              id="mobile-menu-button" 
              class="text-gray-300 hover:text-white transition-colors duration-300"
              aria-label="Otvori navigacijski menu"
              aria-expanded="false"
              aria-controls="mobile-menu"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobilni menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-700" role="navigation" aria-label="Mobilna navigacija">
          <div class="flex flex-col space-y-4 pt-4">
            <a href="/sadrzaj/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Sadržaj
            </a>
            <a href="/predgovor/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Predgovor
            </a>
            <a href="/rječnik/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Rječnik
            </a>
            <a href="/o-nama/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              O nama
            </a>
            <a href="/pretraga/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Pretraga
            </a>
            <a href="/kontakt/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm">
              Kontakt
            </a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Main Content -->
    <main class="min-h-screen bg-gradient-to-br from-gray-50 via-blue-50 to-indigo-50">
      <!-- Header Section -->
      <section class="bg-gradient-to-r from-blue-600 via-purple-600 to-indigo-700 text-white relative overflow-hidden">
        <!-- Background pattern -->
        <div class="absolute inset-0 opacity-10">
          <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.15) 1px, transparent 0); background-size: 20px 20px;"></div>
        </div>
        
        <div class="relative max-w-4xl mx-auto px-4 sm:px-6 py-20">
          <div class="text-center">
            <!-- Icon -->
            <div class="mb-6 flex justify-center">
              <div class="w-20 h-20 bg-white/20 rounded-full flex items-center justify-center backdrop-blur-sm">
                <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
                </svg>
              </div>
            </div>
            
            <h1 class="text-4xl md:text-5xl font-bold mb-6 font-heading tracking-tight">
              Pravila privatnosti
            </h1>
            <p class="text-xl text-blue-100 max-w-3xl mx-auto font-body leading-relaxed">
              Kako prikupljamo, koristimo i štitimo vaše osobne podatke.
            </p>
            <div class="mt-8 inline-flex items-center space-x-2 bg-white/20 backdrop-blur-sm rounded-full px-6 py-3">
              <svg class="w-5 h-5 text-blue-100" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <span class="text-sm text-blue-100">Zadnje ažuriranje: {new Date().toLocaleDateString('hr-HR')}</span>
            </div>
          </div>
        </div>
      </section>

      <!-- Content Section -->
      <section class="py-16 -mt-8 relative z-10">
        <div class="max-w-4xl mx-auto px-4 sm:px-6">
          <div class="bg-white rounded-2xl shadow-xl border border-gray-200 overflow-hidden transform hover:shadow-2xl transition-all duration-500">
            
            <!-- Table of Contents -->
            <div class="bg-gradient-to-r from-blue-50 to-indigo-50 px-8 py-6 border-b border-blue-200">
              <h2 class="text-xl font-bold text-gray-900 mb-4 flex items-center">
                <svg class="w-6 h-6 text-blue-600 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                Sadržaj
              </h2>
              <nav class="flex flex-wrap gap-3">
                <a href="#uvod" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Uvod
                </a>
                <a href="#podaci" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Prikupljeni podaci
                </a>
                <a href="#korištenje" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Korištenje podataka
                </a>
                <a href="#dijeljenje" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Dijeljenje podataka
                </a>
                <a href="#sigurnost" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Sigurnost
                </a>
                <a href="#prava" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Vaša prava
                </a>
                <a href="#kontakt" class="text-blue-700 hover:text-white text-sm bg-white border border-blue-200 px-4 py-2 rounded-full hover:bg-blue-600 hover:border-blue-600 transition-all duration-300 shadow-sm hover:shadow-md transform hover:-translate-y-1">
                  Kontakt
                </a>
              </nav>
            </div>

            <!-- Content -->
            <div class="px-8 py-10 space-y-10">
              
              <!-- Uvod -->
              <section id="uvod" class="group">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-blue-500 to-indigo-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg">
                    1
                  </div>
                  <div class="flex-1">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6 font-heading group-hover:text-blue-700 transition-colors duration-300">1. Uvod</h2>
                    <div class="prose prose-gray max-w-none">
                      <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-6 rounded-xl border-l-4 border-blue-500 shadow-sm">
                        <p class="text-gray-700 mb-4 font-body leading-relaxed text-lg">
                          Ova pravila privatnosti objašnjavaju kako prikupljamo, koristimo, čuvamo i štitimo vaše osobne podatke kada koristite našu web stranicu.
                        </p>
                        <p class="text-gray-700 mb-4 font-body leading-relaxed text-lg">
                          Korištenjem naše web stranice pristajete na prikupljanje i korištenje podataka u skladu s ovim pravilima privatnosti. Ako se ne slažete s ovim pravilima, molimo vas da ne koristite našu web stranicu.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </section>

              <!-- Prikupljeni podaci -->
              <section id="podaci" class="group">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-500 to-emerald-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg">
                    2
                  </div>
                  <div class="flex-1">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6 font-heading group-hover:text-green-700 transition-colors duration-300">2. Prikupljeni podaci</h2>
                    <div class="prose prose-gray max-w-none space-y-6">
                      
                      <div class="bg-gradient-to-r from-green-50 to-emerald-50 p-6 rounded-xl border-l-4 border-green-500 shadow-sm">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                          <svg class="w-5 h-5 text-green-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                          </svg>
                          2.1 Podaci koje prikupljamo automatski
                        </h3>
                        <ul class="space-y-3">
                          <li class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Podaci o uređaju:</strong> 
                              <span class="text-gray-700">IP adresa, tip uređaja, operacijski sustav, verzija preglednika</span>
                            </div>
                          </li>
                          <li class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Podaci o korištenju:</strong> 
                              <span class="text-gray-700">Vrijeme pristupa, stranice koje posjećujete, vrijeme provedeno na stranici</span>
                            </div>
                          </li>
                          <li class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-green-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Tehnički podaci:</strong> 
                              <span class="text-gray-700">Tip veze, geografska lokacija (općenito)</span>
                            </div>
                          </li>
                        </ul>
                      </div>

                      <div class="bg-gradient-to-r from-blue-50 to-cyan-50 p-6 rounded-xl border-l-4 border-blue-500 shadow-sm">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                          <svg class="w-5 h-5 text-blue-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                          </svg>
                          2.2 Podaci koje vi pružate
                        </h3>
                        <ul class="space-y-3">
                          <li class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Kontakt podaci:</strong> 
                              <span class="text-gray-700">Ime, e-mail adresa (samo ako nas kontaktirate)</span>
                            </div>
                          </li>
                          <li class="flex items-start space-x-3">
                            <div class="w-2 h-2 bg-blue-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Povratne informacije:</strong> 
                              <span class="text-gray-700">Komentari, sugestije, pitanja</span>
                            </div>
                          </li>
                        </ul>
                      </div>

                      <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl border-l-4 border-purple-500 shadow-sm">
                        <h3 class="text-xl font-semibold text-gray-800 mb-4 flex items-center">
                          <svg class="w-5 h-5 text-purple-600 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"></path>
                          </svg>
                          2.3 Kolačići (Cookies)
                        </h3>
                        <p class="text-gray-700 font-body leading-relaxed text-lg">
                          Koristimo kolačiće za poboljšanje funkcionalnosti stranice i analizu prometa. Možete kontrolirati kolačiće kroz postavke vašeg preglednika.
                        </p>
                      </div>
                    </div>
                  </div>
                </div>
              </section>

              <!-- Korištenje podataka -->
              <section id="korištenje" class="group">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-orange-500 to-red-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg">
                    3
                  </div>
                  <div class="flex-1">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6 font-heading group-hover:text-orange-700 transition-colors duration-300">3. Kako koristimo vaše podatke</h2>
                    <div class="prose prose-gray max-w-none">
                      <div class="bg-gradient-to-r from-orange-50 to-red-50 p-6 rounded-xl border-l-4 border-orange-500 shadow-sm">
                        <p class="text-gray-700 mb-6 font-body leading-relaxed text-lg">
                          Vaše podatke koristimo za sljedeće svrhe:
                        </p>
                        <div class="grid md:grid-cols-2 gap-4">
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Pružanje i održavanje naše web stranice</span>
                          </div>
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Poboljšanje funkcionalnosti i korisničkog iskustva</span>
                          </div>
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Analiza korištenja stranice za poboljšanje sadržaja</span>
                          </div>
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Odgovaranje na vaše upite i povratne informacije</span>
                          </div>
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Detekcija i sprječavanje zlouporabe</span>
                          </div>
                          <div class="flex items-start space-x-3 p-3 bg-white/50 rounded-lg">
                            <div class="w-2 h-2 bg-orange-500 rounded-full mt-2 flex-shrink-0"></div>
                            <span class="text-gray-700">Ispunjavanje zakonskih obveza</span>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>

              <!-- Dijeljenje podataka -->
              <section id="dijeljenje" class="group">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-purple-500 to-pink-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg">
                    4
                  </div>
                  <div class="flex-1">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6 font-heading group-hover:text-purple-700 transition-colors duration-300">4. Dijeljenje vaših podataka</h2>
                    <div class="prose prose-gray max-w-none">
                      <div class="bg-gradient-to-r from-purple-50 to-pink-50 p-6 rounded-xl border-l-4 border-purple-500 shadow-sm">
                        <div class="bg-red-50 border border-red-200 rounded-lg p-4 mb-6">
                          <p class="text-red-800 font-semibold text-lg text-center">
                            <svg class="w-6 h-6 inline mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.732 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                            </svg>
                            Ne prodajemo, ne iznajmljujemo niti ne dijelimo vaše osobne podatke s trećim stranama
                          </p>
                        </div>
                        <p class="text-gray-700 mb-6 font-body leading-relaxed text-lg">
                          Podatke dijelimo <strong>samo</strong> u sljedećim slučajevima:
                        </p>
                        <div class="space-y-4">
                          <div class="flex items-start space-x-3 p-4 bg-white/50 rounded-lg border border-purple-200">
                            <div class="w-3 h-3 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Uz vaš izričit pristanak</strong>
                              <p class="text-gray-600 text-sm mt-1">Samo kada ste eksplicitno pristali na dijeljenje</p>
                            </div>
                          </div>
                          <div class="flex items-start space-x-3 p-4 bg-white/50 rounded-lg border border-purple-200">
                            <div class="w-3 h-3 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Kada je to potrebno za pružanje usluge</strong>
                              <p class="text-gray-600 text-sm mt-1">Npr. hosting provajder, analitički servisi</p>
                            </div>
                          </div>
                          <div class="flex items-start space-x-3 p-4 bg-white/50 rounded-lg border border-purple-200">
                            <div class="w-3 h-3 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Kada to zahtijeva zakon ili sudski nalog</strong>
                              <p class="text-gray-600 text-sm mt-1">Obvezno po zakonskim odredbama</p>
                            </div>
                          </div>
                          <div class="flex items-start space-x-3 p-4 bg-white/50 rounded-lg border border-purple-200">
                            <div class="w-3 h-3 bg-purple-500 rounded-full mt-2 flex-shrink-0"></div>
                            <div>
                              <strong class="text-gray-800">Za zaštitu naših prava, sigurnosti ili sigurnosti drugih</strong>
                              <p class="text-gray-600 text-sm mt-1">U slučaju sigurnosnih prijetnji</p>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </section>

              <!-- Sigurnost -->
              <section id="sigurnost" class="group">
                <div class="flex items-start space-x-4">
                  <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-teal-500 to-cyan-600 text-white rounded-xl flex items-center justify-center font-bold text-lg shadow-lg">
                    5
                  </div>
                  <div class="flex-1">
                    <h2 class="text-3xl font-bold text-gray-900 mb-6 font-heading group-hover:text-teal-700 transition-colors duration-300">5. Sigurnost podataka</h2>
                    <div class="prose prose-gray max-w-none">
                      <div class="bg-gradient-to-r from-teal-50 to-cyan-50 p-6 rounded-xl border-l-4 border-teal-500 shadow-sm">
                        <div class="grid md:grid-cols-2 gap-6">
