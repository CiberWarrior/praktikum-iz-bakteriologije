---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Bakteriološki praktikum',
  description = 'Uvod u sigurnost, opremu i osnovne tehnike rada u bakteriološkom laboratoriju'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={1}
  primaryColor="purple"
  prevLink="/predgovor/"
  nextLink="/poglavlje-2/" 
  prevText="← Predgovor"
  nextText="Poglavlje 2 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte tehnike sterilizacije i dezinfekcije." 
  ctaPrimaryText="Poglavlje 2" 
  ctaPrimaryLink="/poglavlje-2/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 1', url: '/poglavlje-1/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>
  <!-- Uvod u poglavlje -->
  <div class="bg-gray-800 rounded-xl p-8 border border-purple-500/30 mb-8 shadow-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-purple-400 to-purple-600 rounded-lg flex items-center justify-center mr-4">
