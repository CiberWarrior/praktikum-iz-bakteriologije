    <!-- Scroll Animacije JavaScript -->
    <script>
      // Intersection Observer za scroll animacije
      const observerOptions = {
        threshold: 0.1,
        rootMargin: '0px 0px -50px 0px'
      };

      const observer = new IntersectionObserver((entries) => {
        entries.forEach(entry => {
          if (entry.isIntersecting) {
            entry.target.classList.add('animate');
          }
        });
      }, observerOptions);

      // Mobilni menu funkcionalnost
      const mobileMenuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      if (mobileMenuButton && mobileMenu) {
        mobileMenuButton.addEventListener('click', () => {
          const isHidden = mobileMenu.classList.contains('hidden');
          mobileMenu.classList.toggle('hidden');
          mobileMenuButton.setAttribute('aria-expanded', (!isHidden).toString());
        });
        
        // Zatvori menu na klik izvan njega
        document.addEventListener('click', (event) => {
          const target = event.target;
          if (target && !mobileMenuButton.contains(target as Node) && !mobileMenu.contains(target as Node)) {
            mobileMenu.classList.add('hidden');
            mobileMenuButton.setAttribute('aria-expanded', 'false');
          }
        });
      }
      
      // Back to top funkcionalnost
      const backToTopButton = document.getElementById('back-to-top');
      
      if (backToTopButton) {
        // Prika≈æi gumb nakon scrolla
        window.addEventListener('scroll', () => {
          if (window.pageYOffset > 300) {
            backToTopButton.classList.remove('opacity-0', 'invisible');
            backToTopButton.classList.add('opacity-100', 'visible');
          } else {
            backToTopButton.classList.add('opacity-0', 'invisible');
            backToTopButton.classList.remove('opacity-100', 'visible');
          }
        });
        
        // Scroll na vrh
        backToTopButton.addEventListener('click', () => {
          window.scrollTo({
            top: 0,
            behavior: 'smooth'
          });
        });
      }
      
      // Dodaj animacije na elemente
      document.addEventListener('DOMContentLoaded', () => {
        // Hero sekcija
        const heroText = document.querySelector('.hero-text');
        const heroImage = document.querySelector('.hero-image');
        if (heroText) heroText.classList.add('scroll-fade-left');
        if (heroImage) heroImage.classList.add('scroll-fade-right');
        
        // Brzi start kartice
        const quickStartCards = document.querySelectorAll('.quick-start-card');
        quickStartCards.forEach(card => {
          card.classList.add('scroll-stagger');
          observer.observe(card);
        });

        // Features kartice
        const featureCards = document.querySelectorAll('.feature-card');
        featureCards.forEach(card => {
          card.classList.add('scroll-stagger');
          observer.observe(card);
        });

        // Kako koristiti koraci
        const howToSteps = document.querySelectorAll('.how-to-step');
        howToSteps.forEach(step => {
          step.classList.add('scroll-stagger');
          observer.observe(step);
        });

        // Blurbovi
        const blurbs = document.querySelectorAll('.blurb-item');
        blurbs.forEach(blurb => {
          blurb.classList.add('scroll-fade-in');
          observer.observe(blurb);
        });

        // Naslovi sekcija
        const sectionTitles = document.querySelectorAll('.section-title');
        sectionTitles.forEach(title => {
          title.classList.add('scroll-fade-in');
          observer.observe(title);
        });

        // Preporuka box
        const recommendationBox = document.querySelector('.recommendation-box');
        if (recommendationBox) {
          recommendationBox.classList.add('scroll-scale-in');
          observer.observe(recommendationBox);
        }
      });
    </script>

