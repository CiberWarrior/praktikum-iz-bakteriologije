---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getChapterConfig } from '../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Pokretljivost bakterija',
  description = 'Tehnike ispitivanja pokretljivosti bakterija u bakteriološkom laboratoriju'
} = Astro.props;

const chapterConfig = getChapterConfig(4);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={4}
  primaryColor="yellow"
  prevLink="/poglavlje-3/" 
  nextLink="/poglavlje-5/" 
  prevText="← Poglavlje 3" 
  nextText="Poglavlje 5 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte biokemijska svojstva bakterija." 
  ctaPrimaryText="Poglavlje 5" 
  ctaPrimaryLink="/poglavlje-5/" 
  ctaSecondaryText="Povratak na sadržaj" 
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 4', url: '/poglavlje-4/' }
  ]}
>
  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-yellow-50 to-yellow-100 rounded-xl p-8 border border-yellow-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-yellow-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-yellow-900 mb-3 font-heading">Dobrodošli u Poglavlje 4</h3>
        <p class="text-yellow-800 text-lg leading-relaxed font-body">
          Ovo poglavlje vodi vas kroz ključne tehnike ispitivanja pokretljivosti bakterija u bakteriološkom laboratoriju. 
          Naučit ćete o različitim metodama određivanja pokretljivosti i njihovoj interpretaciji.
        </p>
      </div>
    </div>
  </div>

  <!-- Teorijski sadržaj -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Teorijski sadržaj</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Pokretljivost bakterija -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-yellow-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Pokretljivost bakterija</h3>
        </div>
        <p class="text-gray-600 mb-4">Osnove pokretljivosti i načini kretanja bakterija.</p>
        <a href="/pokretljivost-bakterija/" class="text-yellow-600 font-semibold hover:text-yellow-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>

      <!-- Metode ispitivanja pokretljivosti -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-orange-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Metode ispitivanja pokretljivosti</h3>
        </div>
        <p class="text-gray-600 mb-4">Različite tehnike za određivanje pokretljivosti.</p>
        <a href="/metode-ispitivanja-pokretljivosti/" class="text-orange-600 font-semibold hover:text-orange-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>

      <!-- TTC test -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
