---
import ChapterLayout from '../../components/ChapterLayout.astro';
---

<ChapterLayout
  title="Quiz - Poglavlje 23: Purpurne sumporne bakterije"
  description="Testirajte svoje znanje iz poglavlja o purpurnim sumpornim bakterijama"
  chapterNumber={23}
  primaryColor="rose"
  prevLink="/poglavlje-22/"
  nextLink="/poglavlje-23/"
  prevText="← Poglavlje 22"
  nextText="Poglavlje 23 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem."
  ctaPrimaryText="Poglavlje 23"
  ctaPrimaryLink="/poglavlje-23/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 23', url: '/poglavlje-23/' },
    { name: 'Quiz 23', url: '/poglavlje-23/quiz-23/' }
  ]}
>
  <!-- Quiz Header -->
  <div class="text-center mb-12">
    <div class="w-24 h-24 bg-rose-600 rounded-full flex items-center justify-center mx-auto mb-6">
      <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
    </div>
    <h1 class="text-4xl font-bold text-gray-900 mb-4">Quiz - Poglavlje 23</h1>
    <h2 class="text-2xl font-semibold text-rose-700 mb-6">Purpurne sumporne bakterije</h2>
    <p class="text-lg text-gray-600 max-w-2xl mx-auto">
      Testirajte svoje znanje iz poglavlja o purpurnim sumpornim bakterijama. 
      Odgovorite na 5 pitanja i provjerite koliko znate!
    </p>
  </div>

  <!-- Quiz Instructions -->
  <div class="bg-rose-50 rounded-xl p-6 mb-8 border border-rose-200">
    <h3 class="text-xl font-bold text-rose-900 mb-3">Upute za quiz</h3>
    <ul class="text-rose-800 space-y-2">
      <li>Odgovorite na sva 5 pitanja</li>
      <li>Svako pitanje ima 4 moguća odgovora (a, b, c, d)</li>
      <li>Možete promijeniti odgovor prije slanja</li>
      <li>Nakon slanja vidjet ćete svoj rezultat i postotak uspjeha</li>
      <li>Možete pokušati ponovno ako niste zadovoljni rezultatom</li>
    </ul>
  </div>

    <!-- Quiz Form -->
    <form id="quizForm" class="space-y-8">
      <!-- Question 1 -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">1. Što su purpurne sumporne bakterije?</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q1" value="a" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">a) Bakterije koje razgrađuju proteine</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q1" value="b" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">b) Fotosintetske bakterije koje koriste sumpor i proizvode purpurne pigmente</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q1" value="c" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">c) Bakterije koje razgrađuju masti</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q1" value="d" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">d) Bakterije koje razgrađuju škrob</span>
          </label>
        </div>
      </div>

      <!-- Question 2 -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">2. Gdje se najčešće nalaze purpurne sumporne bakterije?</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q2" value="a" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">a) U zraku</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q2" value="b" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">b) U anaerobnim uvjetima bogatim sumporom i svjetlošću</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q2" value="c" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">c) U vodi</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q2" value="d" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">d) U tlu</span>
          </label>
        </div>
      </div>

      <!-- Question 3 -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">3. Što proizvode purpurne sumporne bakterije?</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q3" value="a" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">a) Metan</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q3" value="b" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">b) Elementarni sumpor i purpurne pigmente</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q3" value="c" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">c) Sumporovodik</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q3" value="d" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">d) Ugljični dioksid</span>
          </label>
        </div>
      </div>

      <!-- Question 4 -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">4. Kako se testira fotosintetska aktivnost purpurnih sumpornih bakterija?</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q4" value="a" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">a) Testom s vodikovim peroksidom</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q4" value="b" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">b) Testom s Vinogradskijevim stupcem</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q4" value="c" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">c) Testom s laktozom</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q4" value="d" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">d) Testom s glukozom</span>
          </label>
        </div>
      </div>

      <!-- Question 5 -->
      <div class="bg-white rounded-xl p-6 shadow-lg border border-gray-200">
        <h3 class="text-lg font-bold text-gray-900 mb-4">5. Zašto su purpurne sumporne bakterije važne?</h3>
        <div class="space-y-3">
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q5" value="a" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">a) Zato što su jeftine</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q5" value="b" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">b) Zato što sudjeluju u biogeokemijskom ciklusu sumpora i fotosintezi</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q5" value="c" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">c) Zato što su brze</span>
          </label>
          <label class="flex items-center space-x-3 cursor-pointer">
            <input type="radio" name="q5" value="d" class="w-4 h-4 text-rose-600 bg-gray-100 border-gray-300 focus:ring-rose-500">
            <span class="text-gray-700">d) Zato što su jednostavne</span>
          </label>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center">
        <button type="submit" class="bg-rose-600 hover:bg-rose-700 text-white font-bold py-4 px-8 rounded-xl text-lg transition-all duration-300 transform hover:scale-105 shadow-lg">
          Pošalji odgovore
        </button>
      </div>
    </form>

    <!-- Quiz Results (Hidden by default) -->
    <div id="quizResults" class="hidden mt-12">
      <div class="bg-gradient-to-br from-rose-50 to-rose-100 rounded-2xl p-8 border-2 border-rose-200 shadow-lg">
        <div class="text-center">
          <div class="w-20 h-20 bg-rose-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          
          <div id="resultMessage" class="text-xl text-rose-700 mb-8 font-semibold leading-relaxed"></div>
          
          <div class="bg-white rounded-xl p-6 mb-6 inline-block">
            <p class="text-rose-800 text-lg font-semibold">
              Rezultat: <span id="correctAnswers" class="text-2xl font-bold text-rose-600"></span> od <span id="totalQuestions" class="text-2xl font-bold text-rose-600"></span> točnih odgovora
            </p>
            <p class="text-rose-700 text-lg mt-2">
              Postotak uspjeha: <span id="percentage" class="text-2xl font-bold text-rose-600"></span>%
            </p>
          </div>
          
          <button onclick="resetQuizGlobal()" class="bg-rose-600 hover:bg-rose-700 text-white font-bold py-3 px-6 rounded-xl transition-all duration-300 transform hover:scale-105 shadow-lg">
            Pokušaj ponovno
          </button>
        </div>
      </div>
    </div>
  </div>
</ChapterLayout>

<script>
  // Quiz functionality
  const correctAnswers: Record<string, string> = {
    q1: 'b', // Fotosintetske bakterije koje koriste sumpor i proizvode purpurne pigmente
    q2: 'b', // U anaerobnim uvjetima bogatim sumporom i svjetlošću
    q3: 'b', // Elementarni sumpor i purpurne pigmente
    q4: 'b', // Testom s Vinogradskijevim stupcem
    q5: 'b'  // Zato što sudjeluju u biogeokemijskom ciklusu sumpora i fotosintezi
  };

  const totalQuestions = Object.keys(correctAnswers).length;

  document.getElementById('quizForm')?.addEventListener('submit', function(e) {
    e.preventDefault();

    let correctCount = 0;

    // Check each answer
    Object.keys(correctAnswers).forEach(question => {
      const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`) as HTMLInputElement;
      if (selectedAnswer && selectedAnswer.value === correctAnswers[question]) {
        correctCount++;
      }
    });

    // Calculate percentage
    const percentage = Math.round((correctCount / totalQuestions) * 100);

    // Update results
    const correctAnswersEl = document.getElementById('correctAnswers');
    const totalQuestionsEl = document.getElementById('totalQuestions');
    const percentageEl = document.getElementById('percentage');
    
    if (correctAnswersEl) correctAnswersEl.textContent = correctCount.toString();
    if (totalQuestionsEl) totalQuestionsEl.textContent = totalQuestions.toString();
    if (percentageEl) percentageEl.textContent = percentage.toString();

    // Set result message
    const resultMessage = document.getElementById('resultMessage');
    if (resultMessage) {
      if (percentage === 100) {
        resultMessage.innerHTML = '🎉 <strong>Odlično!</strong><br><span class="text-lg">Odgovorili ste na sva pitanja bez greške!<br>Vaše znanje iz ovog poglavlja je <em>izvrsno</em> i možete nastaviti s učenjem sljedećeg poglavlja.</span>';
        resultMessage.className = 'text-xl text-rose-700 mb-8 font-semibold leading-relaxed';
      } else if (percentage >= 80) {
        resultMessage.innerHTML = '👏 <strong>Izvrsno!</strong><br><span class="text-lg">Imate <em>odlično</em> znanje iz ovog poglavlja!<br>Samo malo više pažnje i bit ćete savršeni. Nastavite s učenjem!</span>';
        resultMessage.className = 'text-xl text-rose-600 mb-8 font-semibold leading-relaxed';
      } else if (percentage >= 60) {
        resultMessage.innerHTML = '👍 <strong>Dobro!</strong><br><span class="text-lg">Imate <em>solidno</em> znanje iz ovog poglavlja.<br>Preporučujemo da ponovno pročitate gradivo za još bolje razumijevanje.</span>';
        resultMessage.className = 'text-xl text-blue-700 mb-8 font-semibold leading-relaxed';
      } else if (percentage >= 40) {
        resultMessage.innerHTML = '⚠️ <strong>Prosjecno</strong><br><span class="text-lg">Potrebno je <em>više učenja</em>.<br>Vratite se na gradivo, pročitajte ponovno i pokušajte quiz ponovno.</span>';
        resultMessage.className = 'text-xl text-yellow-700 mb-8 font-semibold leading-relaxed';
      } else {
        resultMessage.innerHTML = '📚 <strong>Potrebno više učenja</strong><br><span class="text-lg">Preporučujemo da <em>detaljno pročitate</em> sve dijelove poglavlja.<br>Učenje je proces - ne odustajte, vratite se na gradivo!</span>';
        resultMessage.className = 'text-xl text-red-700 mb-8 font-semibold leading-relaxed';
      }
    }

    // Show results
    const quizResults = document.getElementById('quizResults');
    if (quizResults) {
      quizResults.classList.remove('hidden');
      quizResults.scrollIntoView({ behavior: 'smooth' });
    }
  });

  function resetQuiz() {
    // Reset form
    const form = document.getElementById('quizForm') as HTMLFormElement;
    if (form) form.reset();

    // Hide results
    const quizResults = document.getElementById('quizResults');
    if (quizResults) quizResults.classList.add('hidden');

    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
</script>
