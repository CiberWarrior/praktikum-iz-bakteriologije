---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getCollection } from 'astro:content';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Biogeokemijski ciklus fosfora',
  description = 'Proučavanje biogeokemijskog ciklusa fosfora, fosfat-akumulirajućih bakterija i fosfomobilizatora'
} = Astro.props;

// Dohvati sve MDX datoteke iz chapters kolekcije za ovo poglavlje
const allDocs = await getCollection('chapters');
const poglavljeDocs = allDocs
  .filter(entry => entry.id.startsWith('poglavlje-20/') && entry.id !== 'poglavlje-20/index')
  .sort((a, b) => {
    // Sortiraj po chapterNumber iz frontmattera, ako ne postoji koristi 0
    const aOrder = (a.data as any).chapterNumber || 0;
    const bOrder = (b.data as any).chapterNumber || 0;
    return aOrder - bOrder;
  });
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={20}
  primaryColor="teal"
  prevLink="/poglavlje-19/"
  nextLink="/poglavlje-21/" 
  prevText="← Poglavlje 19"
  nextText="Poglavlje 21 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 21" 
  ctaPrimaryLink="/poglavlje-21/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 20', url: '/poglavlje-20/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-8 border border-teal-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-teal-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-teal-900 mb-3 font-heading">Biogeokemijski ciklus fosfora</h3>
        <p class="text-teal-800 text-lg leading-relaxed font-body">
          Ovdje ćete proučiti uloge mikroorganizama u ciklusu fosfora, karakteristike fosfat-akumulirajućih bakterija i fosfomobilizatora te praktične metode za njihovo dokazivanje.
        </p>
      </div>
    </div>
  </div>

  <!-- Sadržaj poglavlja - Svi dostupni linkovi -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Sadržaj</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Biogeokemijski ciklus fosfora -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Biogeokemijski ciklus fosfora</h3>
        </div>
        
        <a href="/poglavlje-20/biogeokemijski-ciklus-fosfora/" class="text-blue-600 font-semibold hover:text-blue-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Fosfat-akumulirajuće bakterije -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Fosfat-akumulirajuće bakterije</h3>
        </div>
        
        <a href="/poglavlje-20/fosfat-akumulirajuce-bakterije/" class="text-red-600 font-semibold hover:text-red-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Fosfomobilizatori -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Fosfomobilizatori</h3>
        </div>
        
        <a href="/poglavlje-20/fosfomobilizatori/" class="text-green-600 font-semibold hover:text-green-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
    </div>
  </div>

  <!-- Laboratorijske vježbe -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Laboratorijske vježbe</h2>
    
    <div class="grid md:grid-cols-1 lg:grid-cols-2 gap-6">
      <!-- Vježbe 20 -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 7.172V5L8 4z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Određivanje fosfomibilizatora</h3>
        </div>
        <a href="/poglavlje-20/vjezba-20/" class="text-teal-600 font-semibold hover:text-teal-800 transition-colors duration-300">
          Počni s vježbama →
        </a>
      </div>
    </div>
  </div>

</ChapterLayout>