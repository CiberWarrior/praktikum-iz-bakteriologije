---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getChapterConfig } from '../config/chapters';
import { getCollection } from 'astro:content';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Sterilizacija',
  description = 'Tehnike sterilizacije i dezinfekcije u bakteriološkom laboratoriju'
} = Astro.props;

const chapterConfig = getChapterConfig(2);

// Dohvati sve MDX datoteke iz poglavlje-2/ direktorija, osim index.mdx
const allDocs = await getCollection('chapters');
const poglavlje2Docs = allDocs
  .filter(entry => entry.id.startsWith('poglavlje-2/') && entry.id !== 'poglavlje-2/index')
  .sort((a, b) => {
    // Sortiraj po chapterNumber iz frontmattera, ako ne postoji koristi 0
    const aOrder = (a.data as any).chapterNumber || 0;
    const bOrder = (b.data as any).chapterNumber || 0;
    return aOrder - bOrder;
  });
