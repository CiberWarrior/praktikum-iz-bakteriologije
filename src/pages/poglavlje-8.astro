---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getChapterConfig } from '../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Bakterije indikatori sanitarnog stanja',
  description = 'Koliformne bakterije i fekalni streptokoki kao indikatori sanitarnog stanja u bakteriološkom laboratoriju'
} = Astro.props;

const chapterConfig = getChapterConfig(8);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={8}
  primaryColor="teal"
  prevLink="/poglavlje-7/" 
  nextLink="/poglavlje-9/" 
  prevText="← Poglavlje 7" 
  nextText="Poglavlje 9 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte tehnike izolacije bakterija." 
  ctaPrimaryText="Poglavlje 9" 
  ctaPrimaryLink="/poglavlje-9/" 
  ctaSecondaryText="Povratak na sadržaj" 
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 8', url: '/poglavlje-8/' }
  ]}
>
  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-teal-50 to-teal-100 rounded-xl p-8 border border-teal-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-teal-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-teal-900 mb-3 font-heading">Dobrodošli u Poglavlje 8</h3>
        <p class="text-teal-800 text-lg leading-relaxed font-body">
          Ovo poglavlje vodi vas kroz ključne bakterije indikatore sanitarnog stanja u bakteriološkom laboratoriju. 
          Naučit ćete o koliformnim bakterijama i fekalnim streptokocima kao indikatorima fekalnog zagađenja.
        </p>
      </div>
    </div>
  </div>

  <!-- Teorijski sadržaj -->
  <div class="mb-12">
