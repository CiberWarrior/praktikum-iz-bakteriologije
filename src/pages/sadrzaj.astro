  <style>
    /* Header s pozadinskom fotografijom */
    .page-hero {
      min-height: 38vh;
      display: flex;
      align-items: end;
      position: relative;
      overflow: hidden;
      background: linear-gradient(135deg, #138d75 0%, #0e6655 100%);
      background-image:
        linear-gradient(135deg, #138d75 0%, #0e6655 100%),
        radial-gradient(circle at 20% 80%, rgba(255,255,255,0.1) 0%, transparent 50%),
        radial-gradient(circle at 80% 20%, rgba(255,255,255,0.05) 0%, transparent 50%);
      background-size: cover, 300px 300px, 200px 200px;
      background-position: center;
    }
    .page-hero::after {
      content: '';
      position: absolute;
      inset: 0;
      background: linear-gradient(to bottom, rgba(0,0,0,.35), rgba(0,0,0,.5));
    }
    .page-hero__inner {
      position: relative;
      z-index: 1;
      max-width: 1100px;
      margin: 0 auto;
      padding: 3.5rem 1.25rem;
      color: #fff;
      text-align: left;
    }
    .h1 {
      margin: 0 0 .5rem 0;
      font-weight: 800;
      font-size: clamp(1.8rem, 3.5vw, 2.6rem);
      text-shadow: 0 2px 16px rgba(0,0,0,.35);
    }
    .page-hero__tagline {
      margin: 0;
      font-size: clamp(1rem, 2vw, 1.2rem);
      opacity: .95;
      text-shadow: 0 1px 12px rgba(0,0,0,.3);
    }
    @media (max-width: 560px){
      .page-hero{ min-height: 30vh; }
      .page-hero__inner{ padding: 2.25rem 1rem; }
    }

    .content-wrapper {
      max-width: 1100px;
      margin: 0 auto;
      padding: 2rem 1.25rem;
    }

    .section-title {
      color: #096279;
      font-size: 1.4rem;
      font-weight: 600;
      margin: 1.5rem 0 1rem 0;
    }

    /* Chapters grid styles */
    .chapters {
      margin: 2rem 0 3rem;
    }

    .chapters__grid {
      display: grid;
      gap: 0.75rem;
      grid-template-columns: repeat(1, minmax(0, 1fr));
    }

    @media (min-width: 640px) {
      .chapters__grid { grid-template-columns: repeat(2, 1fr); }
    }

    .chapters__item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 0.75rem;
      padding: 0.9rem 1rem;
      border-radius: 0.75rem;
      background: #f7f9f8;
      color: #0f2d2a;
      text-decoration: none;
      border: 1px solid rgba(0, 0, 0, 0.06);
      transition: transform .12s ease, background-color .12s ease, border-color .12s ease;
    }

    .chapters__item:hover {
      transform: translateY(-1px);
      background: #eef6f4;
      border-color: rgba(0, 0, 0, 0.12);
    }

    .chapters__item:focus-visible {
      outline: 3px solid #138d75;
      outline-offset: 2px;
    }

    .chapters__text {
      font-weight: 600;
      line-height: 1.2;
    }

    .chapters__icon {
      width: 22px;
      height: 22px;
      opacity: 0.85;
    }

    .chapters__heading {
      font-size: 0.9rem;
      font-weight: 600;
      color: #138d75;
      margin-bottom: 0.2rem;
      line-height: 1.3;
    }

    .chapters__heading,
    .chapters__text {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 100%;
    }
  </style>
