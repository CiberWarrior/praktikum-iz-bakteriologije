  description={description}
  chapterNumber={9}
  primaryColor="red"
  prevLink="/poglavlje-8/"
  nextLink="/poglavlje-10/" 
  prevText="← Poglavlje 8"
  nextText="Poglavlje 10 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 10" 
  ctaPrimaryLink="/poglavlje-10/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
