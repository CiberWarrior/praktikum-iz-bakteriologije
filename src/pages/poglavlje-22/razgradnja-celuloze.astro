  ctaDescription="Nastavite s učenjem i upoznajte Zaključak." 
  ctaPrimaryText="Poglavlje 23" 
  ctaPrimaryLink="/poglavlje-23/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-22/"
