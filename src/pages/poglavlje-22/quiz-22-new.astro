---
import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    question: "Što su streptomiceti?",
    options: {
      a: "Gram-negativne bakterije",
      b: "Gram-pozitivne bakterije iz reda Actinomycetales",
      c: "Gljivice",
      d: "Protozoe"
    },
    correctAnswer: "b" as const
  },
  {
    question: "Koji enzim je ključan za razgradnju celuloze?",
    options: {
      a: "Amilaza",
      b: "Celulaza",
      c: "Lipaza",
      d: "Proteaza"
    },
    correctAnswer: "b" as const
  },
  {
    question: "Koji medij se koristi za izolaciju streptomiceta?",
    options: {
      a: "MacConkey agar",
      b: "Czapekov agar",
      c: "Blood agar",
      d: "Mannitol salt agar"
    },
    correctAnswer: "b" as const
  },
  {
    question: "Što proizvode streptomiceti?",
    options: {
      a: "Samo toksine",
      b: "Samo vitamine",
      c: "Antibiotike, enzime i sekundarne metabolite",
      d: "Samo plinove"
    },
    correctAnswer: "c" as const
  },
  {
    question: "Kako se testira antibiotska aktivnost streptomiceta?",
    options: {
      a: "Samo mikroskopski",
      b: "Samo biokemijskim testovima",
      c: "Testom inhibicije rasta test organizama",
      d: "Samo PCR metodom"
    },
    correctAnswer: "c" as const
  }
];

const breadcrumbPath = [
  { name: 'Sadržaj', url: '/sadrzaj/' },
  { name: 'Poglavlje 22', url: '/poglavlje-22/' },
  { name: 'Quiz 22', url: '/poglavlje-22/quiz-22/' }
];
---

<QuizTemplate
  chapterNumber={22}
  chapterTitle="Streptomiceti i razgradnja celuloze"
  chapterDescription="Testirajte svoje znanje o streptomicetima, razgradnji celuloze i antibiotskim svojstvima"
  primaryColor="lime"
  questions={questions}
  prevLink="/poglavlje-21/"
  nextLink="/poglavlje-23/"
  prevText="← Poglavlje 21"
  nextText="Poglavlje 23 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem."
  ctaPrimaryText="Poglavlje 23"
  ctaPrimaryLink="/poglavlje-23/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  breadcrumbPath={breadcrumbPath}
/>
