---
import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    "question": "Što je test toksičnosti?",
    "options": {
      "a": "Test za određivanje pH vrijednosti",
      "b": "Test za određivanje štetnih učinaka tvari na organizme",
      "c": "Test za brojanje bakterija",
      "d": "Test za identifikaciju bakterija"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koji organizmi se najčešće koriste u testovima toksičnosti?",
    "options": {
      "a": "Sisavci",
      "b": "Daphnia (vodene buhe) i bakterije",
      "c": "Ptice",
      "d": "Ribe"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što je LC50 u testovima toksičnosti?",
    "options": {
      "a": "Koncentracija koja uzrokuje 50% smrtnosti",
      "b": "Koncentracija koja uzrokuje 50% inhibicije rasta",
      "c": "Koncentracija koja uzrokuje 50% mutacija",
      "d": "Koncentracija koja uzrokuje 50% rasta"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Zašto su testovi toksičnosti važni?",
    "options": {
      "a": "Zato što su jeftini",
      "b": "Zato što omogućavaju procjenu sigurnosti kemikalija i lijekova",
      "c": "Zato što su brzi",
      "d": "Zato što su jednostavni"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koji test se koristi za određivanje toksičnosti na bakterije?",
    "options": {
      "a": "Test na sisavcima",
      "b": "Test inhibicije rasta bakterija",
      "c": "Test na ribama",
      "d": "Test na pticama"
    },
    "correctAnswer": "a"
  }
];

const breadcrumbPath = [
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 14', url: '/poglavlje-14/' },
    { name: 'Quiz 14', url: '/poglavlje-14/quiz-14/' }
  ];
---

<QuizTemplate
  chapterNumber={14}
  chapterTitle="Genetske metode"
  chapterDescription="Provjeri svoje znanje iz poglavlja o testu toksičnosti"
  primaryColor="cyan"
  questions={questions}
  prevLink="/poglavlje-14/"
  nextLink="/poglavlje-15/"
  prevText="← Povratak na Poglavlje 14"
  nextText="Poglavlje 15 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem i upoznajte metode identifikacije bakterija."
  ctaPrimaryText="Poglavlje 15"
  ctaPrimaryLink="/poglavlje-15/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  breadcrumbPath={breadcrumbPath}
/>