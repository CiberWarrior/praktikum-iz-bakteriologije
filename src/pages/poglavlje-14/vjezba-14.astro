---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 14: Test toksičnosti s kvascem',
  description = 'Vježbe za test toksičnosti s kvascem'
} = Astro.props;

const contentBlocks = [
  {
    id: "ispitivanje-toksicnosti",
    title: "1. Ispitivanje toksičnosti fenola",
    icon: "🧪",
    content: `
      <div class="space-y-6">
        <!-- Postupak pripreme -->
        <div class="bg-gray-700 border border-cyan-500/30 rounded-lg p-4">
          <h4 class="text-lg font-semibold text-cyan-300 mb-3">🧪 Priprema uzoraka:</h4>
          <p class="text-gray-300 mb-3">
            Pripremiti seriju različitih koncentracija fenola: <strong class="text-cyan-300">25, 50, 100, 200, 400, 500, 600 i 1000 mg/L</strong>.
          </p>
          <p class="text-gray-300">
            U bočicu s <strong class="text-cyan-300">4 mL</strong> podloge za izvedbu testa nacijepiti <strong class="text-cyan-300">0,5 mL</strong> suspenzije kvasca. Bočicu nadopuniti do vrha (uz zabodenu dodatnu iglu za izlaz zraka) određenom koncentracijom fenola.
          </p>
        </div>

        <!-- Kontrolna fermentacija -->
        <div class="bg-gray-700 border border-blue-500/30 rounded-lg p-4">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🎯 Kontrola:</h4>
          <p class="text-gray-300">
            Jednu bočicu, koja će služiti kao kontrolna fermentacija, nadopuniti destiliranom vodom.
          </p>
        </div>

        <!-- Princip testa -->
        <div class="bg-gray-700 border border-green-500/30 rounded-lg p-4">
          <h4 class="text-lg font-semibold text-green-300 mb-2">⚙️ Princip testa:</h4>
          <ul class="text-gray-300 space-y-2">
            <li class="flex items-start">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3 mt-2 flex-shrink-0"></span>
              Ako fenol ne ubija kvasac → saharoza se fermentira → stvara se CO₂
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3 mt-2 flex-shrink-0"></span>
              Stvoreni plin potiskuje tekućinu u otvorenu špricu
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-green-500 rounded-full mr-3 mt-2 flex-shrink-0"></span>
              Količina istisnute tekućine proporcionalna je volumenu stvorenog plina
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-red-500 rounded-full mr-3 mt-2 flex-shrink-0"></span>
              Ako fenol ubija kvasac → manja količina plina ili se plin neće stvoriti
            </li>
          </ul>
        </div>

        <!-- Slika 65 -->
        <figure class="image-figure">
          <img
            src="/Images/slika65.jpg"
            alt="Nacjepljivanje bočica za test toksičnosti s kvascem"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-cyan-100 text-cyan-800 px-3 py-1 rounded-full text-sm font-medium">Slika 65</span>
            <span class="block mt-2 text-gray-300">Nacjepljivanje bočica za test toksičnosti s kvascem</span>
          </figcaption>
        </figure>

        <!-- Inkubacija i rezultati -->
        <div class="bg-gray-700 border border-orange-500/30 rounded-lg p-4">
          <h4 class="text-lg font-semibold text-orange-300 mb-2">🌡️ Inkubacija i analiza:</h4>
          <p class="text-gray-300 mb-3">
            Nacijepljene bočice inkubirati na <strong class="text-orange-300">28°C/18 h</strong>.
          </p>
          <p class="text-gray-300 mb-3">
            Nakon inkubacije očitati volumen istisnute tekućine u špricama.
          </p>
          <p class="text-gray-300">
            Izračunati efektivnu koncentraciju fenola koja inhibira fermentaciju za 50% u odnosu prema kontroli <strong class="text-orange-300">(EC₅₀)</strong>.
          </p>
        </div>

        <!-- Slika 66 -->
        <figure class="image-figure">
          <img
            src="/Images/slika66.jpg"
            alt="Test toksičnosti s kvascem Saccharomyces cerevisiae za različite koncentracije fenola i kontrolna bočica"
            class="w-4/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-cyan-100 text-cyan-800 px-3 py-1 rounded-full text-sm font-medium">Slika 66</span>
            <span class="block mt-2 text-gray-300">Test toksičnosti s kvascem <em class="text-green-300">Saccharomyces cerevisiae</em> za različite koncentracije fenola i kontrolna bočica (prva slijeva)</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "cyan-500/30",
    iconGradient: "from-cyan-400 to-cyan-600"
  }
];

const navigationButtons = {
  previous: {
    text: "test toksičnosti s kvascem",
    url: "/poglavlje-14/test-toksicnosti/"
  },
  next: {
    text: "poglavlje 15",
    url: "/poglavlje-15/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={14}
  primaryColor="cyan"
  breadcrumbPath={[
    { name: 'Poglavlje 14', url: '/poglavlje-14/' },
    { name: 'Vježbe 14: Test toksičnosti s kvascem', url: '/poglavlje-14/vjezba-14/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>