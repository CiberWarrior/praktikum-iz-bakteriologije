---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Test toksičnosti s kvascem',
  description = 'Test toksičnosti s kvascem (Yeast Toxicity Test, YTT) - praktična metoda za procjenu toksičnosti različitih supstanci.'
