---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'HIL test',
  description = 'HIL test za ispitivanje kvalitete namirnica kroz produkciju H₂S, indola i likvefakciju želatine.'
} = Astro.props;

const contentBlocks = [
  {
    id: "uvod",
    title: "HIL test",
    icon: "🧪",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Ovaj test uključuje ispitivanje živežnih namirnica na produkciju H₂S (H), pozitivnu reakciju na indol (I) te likvefakciju želatine (L).
        </p>
        <div class="bg-gray-700 border border-green-500/30 rounded-lg p-4 mt-4">
          <p class="text-green-300 font-semibold">
            ✅ Ako je kvaliteta živežne namirnice dobra, svi će parametri biti negativni.
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "h2s-produkcija",
    title: "H₂S produkcija",
    icon: "⚠️",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Pozitivna reakcija na produkciju H₂S upozorava na moguću kontaminaciju namirnice bakterijama roda <em class="text-green-300">Salmonella</em>.
        </p>
        <div class="bg-gray-700 border border-orange-500/30 rounded-lg p-4 mt-4">
          <p class="text-orange-300 font-semibold">
            🦠 Indikator: <em class="text-green-300">Salmonella</em> spp.
          </p>
        </div>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "indol-reakcija",
    title: "Indol reakcija",
    icon: "🔬",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Pozitivna reakcija na indol upućuje na moguću kontaminaciju namirnice <em class="text-green-300">Escherichia coli</em>.
        </p>
        <div class="bg-gray-700 border border-green-500/30 rounded-lg p-4 mt-4">
          <p class="text-green-300 font-semibold">
            🦠 Indikator: <em class="text-green-300">Escherichia coli</em>
          </p>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "likvefakcija",
    title: "Likvefakcija želatine",
    icon: "🧫",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Likvefakcija želatine upućuje na proteolitičke bakterije u namirnici kao što su npr. <em class="text-green-300">Proteus vulgaris</em>, <em class="text-green-300">Bacillus subtilis</em>, <em class="text-green-300">B. mesentericus</em>.
        </p>
        <div class="bg-gray-700 border border-purple-500/30 rounded-lg p-4 mt-4">
          <p class="text-purple-300 font-semibold">
            🦠 Indikatori: <em class="text-green-300">Proteus vulgaris</em>, <em class="text-green-300">Bacillus subtilis</em>, <em class="text-green-300">B. mesentericus</em>
          </p>
        </div>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "TTC test",
    url: "/poglavlje-15/ttc-test/"
  },
  next: {
    text: "vježbe 15",
    url: "/poglavlje-15/vjezba-15/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={15}
  primaryColor="emerald"
  breadcrumbPath={[
    { name: 'Poglavlje 15', url: '/poglavlje-15/' },
    { name: 'HIL test', url: '/poglavlje-15/hil-test/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>