---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'TTC test',
  description = 'TTC test za procjenu bakterijske aktivnosti i kvalitete namirnica pomoću 2,3,5-trifeniltetrazolium klorida.'
} = Astro.props;

const contentBlocks = [
  {
    id: "ttc-kemikalija",
    title: "TTC kemikalija",
    icon: "🧪",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          TTC (<strong class="text-blue-300">2,3,5-trifeniltetrazolium klorid</strong>, C₁₉H₁₆ClN₄) se koristi kao indikator za stanice s aktivnim 
          elektronskim transportnim sustavom i određivanje aktivnosti enzima dehidrogenaza.
        </p>
        <div class="bg-gray-700 border border-blue-500/30 rounded-lg p-4 mt-4">
          <p class="text-blue-300 font-semibold">
            🔬 Formula: C₁₉H₁₆ClN₄ • Bezbojna kemikalija
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "princip-rada",
    title: "Princip rada",
    icon: "⚗️",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          TTC, koji je bezbojna kemikalija, bakterije će svojim dehidrogenazama razgrađivati do crvenog spoja formazana.
        </p>
        <p class="text-gray-300 leading-relaxed mb-4">
          Intenzitet razvijene crvene boje proporcionalan je aktivnosti enzima dehidrogenaza. 
          Stoga se TTC koristi za procjenu bakterijske aktivnosti i indirektno za procjenu broja bakterija.
        </p>
        <div class="bg-gray-700 border border-orange-500/30 rounded-lg p-4 mt-4">
          <p class="text-orange-300 font-semibold">
            🔴 TTC (bezbojan) → formazan (crven) pomoću dehidrogenaza
          </p>
        </div>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "primjena",
    title: "Primjena testa",
    icon: "🥛",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Ovaj se test može primijeniti i za procjenu kvalitete mlijeka.
        </p>
        
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <!-- Visoka kvaliteta -->
          <div class="bg-gray-700 border border-green-500/30 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <span class="bg-green-500 text-white text-sm font-bold px-2 py-1 rounded">✅ Visoka kvaliteta</span>
            </div>
            <p class="text-green-300 font-semibold">Crvena se boja neće razviti</p>
          </div>
          
          <!-- Kontaminirano -->
          <div class="bg-gray-700 border border-red-500/30 rounded-lg p-4">
            <div class="flex items-center mb-2">
              <span class="bg-red-500 text-white text-sm font-bold px-2 py-1 rounded">⚠️ Kontaminirano</span>
            </div>
            <p class="text-red-300 font-semibold">Intenzivna crvena boja</p>
          </div>
        </div>

        <div class="bg-gray-700 border border-green-500/30 rounded-lg p-4 mt-4">
          <p class="text-green-300 font-semibold">
            📊 Intenzitet crvene boje = broj živih bakterija
          </p>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "slika",
    title: "Test rezultat",
    icon: "📸",
    content: `
      <figure class="image-figure">
        <img
          src="/Images/slika68.jpg"
          alt="Razvijena crvena boja u epruveti s kontaminiranim mlijekom (lijevo) i bezbojni 2,3,5-trifeniltetrazolium klorid u epruveti s mlijekom dobre kvalitete (desno)"
          class="w-3/5 mx-auto rounded-lg shadow-md"
          loading="lazy"
        />
        <figcaption class="mt-4 text-center">
          <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">Slika 68</span>
          <span class="block mt-2 text-gray-300">
            Razvijena crvena boja u epruveti s kontaminiranim mlijekom (lijevo) i bezbojni 2,3,5-trifeniltetrazolium klorid u epruveti s mlijekom dobre kvalitete (desno).
          </span>
        </figcaption>
      </figure>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "test s metilenskim modrilom",
    url: "/poglavlje-15/test-s-metilenskim-modrilom/"
  },
  next: {
    text: "HIL test",
    url: "/poglavlje-15/hil-test/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={15}
  primaryColor="emerald"
  breadcrumbPath={[
    { name: 'Poglavlje 15', url: '/poglavlje-15/' },
    { name: 'TTC test', url: '/poglavlje-15/ttc-test/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>