  title?: string;
  description?: string;
}

const { 
  title = 'TTC test',
  description = 'Sadržaj poglavlja 15 - TTC test'
} = Astro.props;

const chapterConfig = getChapterConfig(15);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={15}
  primaryColor="slate"
  prevLink="/poglavlje-15/" 
  nextLink="/poglavlje-16/" 
  prevText="← Poglavlje 15" 
  nextText="Poglavlje 16 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Bakterije mliječne fermentacije." 
  ctaPrimaryText="Poglavlje 16" 
  ctaPrimaryLink="/poglavlje-16/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-15/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 15', url: '/poglavlje-15/' },
    { name: 'TTC test', url: '/poglavlje-15/ttctest/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={15} 
    currentSection="ttc-test" 
    chapterTitle="Molekularna biologija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    


TTC (2,3,5-trifeniltetrazolium klorid, C<sub>19</sub>H<sub>16</sub>ClN<sub>4</sub>) se koristi kao indikator za stanice s aktivnim elektronskim transportnim sustavom i određivanje aktivnosti enzima dehidrogenaza. TTC, koji je bezbojna kemikalija, bakterije će svojim dehidrogenazama razgrađivati do crvenog spoja formazana (slika 68). Intenzitet razvijene crvene boje proporcionalan je aktivnosti enzima dehidrogenaza. Stoga se TTC koristi za procjenu bakterijske aktivnosti i indirektno za procjenu broja bakterija. Ovaj se test može primijeniti i za procjenu kvalitete mlijeka. Ako je kvaliteta mlijeka vrlo visoka, crvena se boja u epruveti neće razviti, a intenzitet eventualno razvijene crvene boje bit će proporcionalan broju živih bakterija.

