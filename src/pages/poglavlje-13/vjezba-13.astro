---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 13',
  description = 'Sadržaj poglavlja 13 - Vježbe 13'
} = Astro.props;

const chapterConfig = getChapterConfig(13);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={13}
  primaryColor="pink"
  prevLink="/poglavlje-13/" 
  nextLink="/poglavlje-14/" 
  prevText="← Poglavlje 13" 
  nextText="Poglavlje 14 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Kontrola kvalitete." 
  ctaPrimaryText="Poglavlje 14" 
  ctaPrimaryLink="/poglavlje-14/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-13/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 13', url: '/poglavlje-13/' },
    { name: 'Vježbe 13', url: '/poglavlje-13/vjebe13/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={13} 
    currentSection="vježbe-13" 
    chapterTitle="Higijena i dezinfekcija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<h3 style="color: #096279; font-size: 1.4rem; font-weight: 600; margin: 1.5rem 0 1rem 0;">Sadržaj vježbi</h3>

