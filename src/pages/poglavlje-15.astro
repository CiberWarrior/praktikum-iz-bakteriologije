---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Bakteriološko ispitivanje kvalitete namirnica',
  description = 'Brzi testovi za procjenu higijenske vrijednosti i kvalitete živežnih namirnica.'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={15}
  primaryColor="emerald"
  prevLink="/poglavlje-14/"
  nextLink="/poglavlje-16/" 
  prevText="← Poglavlje 14"
  nextText="Poglavlje 16 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 16" 
  ctaPrimaryLink="/poglavlje-16/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 15', url: '/poglavlje-15/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gray-800 rounded-xl p-8 border border-emerald-500/30 mb-8 shadow-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-emerald-400 to-emerald-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-white mb-3 font-heading">Dobrodošli u Poglavlje 15</h3>
        <p class="text-gray-300 text-lg leading-relaxed font-body">
          U bakteriologiji živežnih namirnica upotrebljavaju se brzi testovi kojima se može ustanoviti higijenska vrijednost namirnice, pa i ukupan broj bakterija u njima.
        </p>
      </div>
    </div>
  </div>

  <!-- Ciljevi učenja -->
  <div class="bg-gray-800 rounded-xl p-8 border border-teal-500/30 mb-8 shadow-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-teal-400 to-teal-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-white mb-4 font-heading">Ciljevi učenja</h3>
        <ul class="text-gray-300 text-lg leading-relaxed font-body space-y-2">
          <li class="flex items-start">
            <span class="text-teal-400 mr-2">•</span>
            Razumjeti princip brzih testova za procjenu kvalitete namirnica
          </li>
          <li class="flex items-start">
            <span class="text-teal-400 mr-2">•</span>
            Naučiti metode bakteriološkog ispitivanja namirnica
          </li>
          <li class="flex items-start">
            <span class="text-teal-400 mr-2">•</span>
            Steći praktične vještine u procjeni higijenske vrijednosti
          </li>
          <li class="flex items-start">
            <span class="text-teal-400 mr-2">•</span>
            Razumjeti važnost kontrole kvalitete u prehrambenoj industriji
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sadržaj poglavlja -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">Uvod 15.</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Test s metilenskim modrilom -->
      <a href="/poglavlje-15/test-s-metilenskim-modrilom/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
        <div class="bg-gray-800 rounded-xl shadow-lg border border-red-500/30 overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-red-400 to-red-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <svg class="w-6 h-6 text-gray-400 group-hover:text-red-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-red-400 transition-colors">
              Test s metilenskim modrilom
            </h3>
          </div>
        </div>
      </a>

      <!-- TTC test -->
      <a href="/poglavlje-15/ttc-test/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
        <div class="bg-gray-800 rounded-xl shadow-lg border border-green-500/30 overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <svg class="w-6 h-6 text-gray-400 group-hover:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-green-400 transition-colors">
              TTC test
            </h3>
          </div>
        </div>
      </a>

      <!-- HIL test -->
      <a href="/poglavlje-15/hil-test/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
        <div class="bg-gray-800 rounded-xl shadow-lg border border-blue-500/30 overflow-hidden">
          <div class="p-6">
            <div class="flex items-center justify-between mb-4">
              <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center">
                <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
              HIL test
            </h3>
          </div>
        </div>
      </a>
    </div>
  </div>

  <!-- Laboratorijske vježbe -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold mb-6 bg-gradient-to-r from-emerald-400 via-teal-500 to-cyan-500 bg-clip-text text-transparent">Laboratorijske vježbe 15.</h2>
    
    <a href="/poglavlje-15/vjezba-15/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
      <div class="max-w-md bg-gray-800 rounded-xl shadow-lg border border-green-500/30 overflow-hidden">
        <div class="p-6">
          <div class="flex items-center justify-between mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <svg class="w-6 h-6 text-gray-400 group-hover:text-green-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-2 group-hover:text-green-400 transition-colors">
            Bakteriološko ispitivanje kvalitete namirnica
          </h3>
        </div>
      </div>
    </a>
  </div>

  <!-- Quiz -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold mb-8 bg-gradient-to-r from-yellow-400 via-orange-500 to-red-500 bg-clip-text text-transparent">Provjeri svoje znanje</h2>
    
    <div class="grid md:grid-cols-2 gap-6">
      <!-- Quiz -->
      <div class="bg-gray-800 rounded-xl p-8 border border-sky-500/30 shadow-lg">
        <div class="text-center">
          <div class="w-16 h-16 bg-gradient-to-br from-sky-400 to-sky-600 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-xl font-bold text-white mb-4">Quiz</h3>
          <a href="/poglavlje-15/quiz-15/" class="inline-flex items-center justify-center px-6 py-3 bg-sky-600 text-white font-bold rounded-xl hover:bg-sky-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Započni quiz
            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>

    </div>
  </div>

</ChapterLayout>