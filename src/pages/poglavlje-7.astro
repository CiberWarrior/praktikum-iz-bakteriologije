---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Određivanje broja bakterija u suspenziji direktnim metodama',
  description = 'Određivanje broja bakterija u suspenziji.'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={7}
  primaryColor="green"
  prevLink="/poglavlje-6/"
  nextLink="/poglavlje-8/" 
  prevText="← Poglavlje 6"
  nextText="Poglavlje 8 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 8" 
  ctaPrimaryLink="/poglavlje-8/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 7', url: '/poglavlje-7/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gray-800 rounded-xl p-8 border border-green-500/30 mb-8 shadow-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-green-400 to-green-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-white mb-3 font-heading">Dobrodošli u Poglavlje 7</h3>
        <p class="text-gray-300 text-lg leading-relaxed font-body">
          Ovo poglavlje vodi vas kroz ključne koncepte i metodologije. 
          Naučit ćete o važnim procesima, metodama i praktičnim vježbama.
        </p>
      </div>
    </div>
  </div>

  <!-- Ciljevi učenja -->
  <div class="bg-gray-800 rounded-xl p-8 border border-indigo-500/30 mb-8 shadow-lg">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-white mb-4 font-heading">Ciljevi učenja</h3>
        <ul class="text-gray-300 text-lg leading-relaxed font-body space-y-2">
          <li class="flex items-start">
            <span class="text-indigo-400 mr-2">•</span>
            Razumjeti metode za određivanje broja bakterija u suspenziji
          </li>
          <li class="flex items-start">
            <span class="text-indigo-400 mr-2">•</span>
            Naučiti kako koristiti Petroff-Hauserovu komoricu
          </li>
          <li class="flex items-start">
            <span class="text-indigo-400 mr-2">•</span>
            Steći praktične vještine u brojanju bakterija
          </li>
          <li class="flex items-start">
            <span class="text-indigo-400 mr-2">•</span>
            Razumjeti važnost preciznog brojanja u mikrobiologiji
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sadržaj i vježbe -->
  <div class="mb-12">
    <div class="grid md:grid-cols-2 gap-8">
      
      <!-- Sadržaj poglavlja -->
      <div>
        <h2 class="text-3xl font-bold mb-6 bg-gradient-to-r from-blue-400 via-purple-500 to-pink-500 bg-clip-text text-transparent">Uvod 7.</h2>
        
        <!-- Određivanje broja bakterija u suspenziji direktnim metodama -->
        <a href="/poglavlje-7/odredivanje-broja-bakterija-u-suspenziji-direktnim-metodama/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
          <div class="bg-gray-800 rounded-xl shadow-lg border border-indigo-500/30 overflow-hidden">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <svg class="w-6 h-6 text-gray-400 group-hover:text-indigo-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-2 group-hover:text-indigo-400 transition-colors">
                Određivanje broja bakterija u suspenziji direktnim metodama
              </h3>
            </div>
          </div>
        </a>
      </div>
      
      <!-- Laboratorijske vježbe -->
      <div>
        <h2 class="text-3xl font-bold mb-6 bg-gradient-to-r from-emerald-400 via-teal-500 to-cyan-500 bg-clip-text text-transparent">Laboratorijske vježbe 7.</h2>
        
        <a href="/poglavlje-7/vjezba-7/" class="group no-underline" style="outline: none !important; box-shadow: none !important;">
          <div class="bg-gray-800 rounded-xl shadow-lg border border-blue-500/30 overflow-hidden">
            <div class="p-6">
              <div class="flex items-center justify-between mb-4">
                <div class="w-12 h-12 bg-gradient-to-br from-blue-400 to-blue-600 rounded-lg flex items-center justify-center">
                  <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                  </svg>
                </div>
                <svg class="w-6 h-6 text-gray-400 group-hover:text-blue-500 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </div>
              <h3 class="text-lg font-bold text-white mb-2 group-hover:text-blue-400 transition-colors">
                Određivanje ukupnog broja bakterija<br>
                u Petroff-Hauserovoj komorici
              </h3>
            </div>
          </div>
        </a>
      </div>
      
    </div>
  </div>


</ChapterLayout>