---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Određivanje broja bakterija u suspenziji direktnim metodama',
  description = 'Određivanje broja bakterija u suspenziji.'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={7}
  primaryColor="green"
  prevLink="/poglavlje-6/"
  nextLink="/poglavlje-8/" 
  prevText="← Poglavlje 6"
  nextText="Poglavlje 8 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 8" 
  ctaPrimaryLink="/poglavlje-8/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 7', url: '/poglavlje-7/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-8 border border-green-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-green-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-green-900 mb-3 font-heading">Dobrodošli u Poglavlje 7</h3>
        <p class="text-green-800 text-lg leading-relaxed font-body">
          Ovo poglavlje vodi vas kroz ključne koncepte i metodologije. 
          Naučit ćete o važnim procesima, metodama i praktičnim vježbama.
        </p>
      </div>
    </div>
  </div>

  <!-- Ciljevi učenja -->
  <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-xl p-8 border border-indigo-200 mb-8">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-indigo-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-indigo-900 mb-4 font-heading">Ciljevi učenja</h3>
        <ul class="text-indigo-800 text-lg leading-relaxed font-body space-y-2">
          <li class="flex items-start">
            <span class="text-indigo-600 mr-2">•</span>
            Razumjeti metode za određivanje broja bakterija u suspenziji
          </li>
          <li class="flex items-start">
            <span class="text-indigo-600 mr-2">•</span>
            Naučiti kako koristiti Petroff-Hauserovu komoricu
          </li>
          <li class="flex items-start">
            <span class="text-indigo-600 mr-2">•</span>
            Steći praktične vještine u brojanju bakterija
          </li>
          <li class="flex items-start">
            <span class="text-indigo-600 mr-2">•</span>
            Razumjeti važnost preciznog brojanja u mikrobiologiji
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sadržaj i vježbe -->
  <div class="mb-12">
    <div class="grid md:grid-cols-2 gap-8">
      
      <!-- Sadržaj poglavlja -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Sadržaj</h2>
        
        <!-- Određivanje broja bakterija u suspenziji direktnim metodama -->
        <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200 hover:shadow-xl transition-all duration-300 transform hover:-translate-y-1">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-indigo-600 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900">Određivanje broja bakterija u suspenziji direktnim metodama</h3>
          </div>
          
          <a href="/poglavlje-7/odredivanje-broja-bakterija-u-suspenziji-direktnim-metodama/" class="text-indigo-600 font-semibold hover:text-indigo-800 transition-colors duration-300">
            Pročitaj više →
          </a>
        </div>
      </div>
      
      <!-- Laboratorijske vježbe -->
      <div>
        <h2 class="text-3xl font-bold text-gray-900 mb-6">Laboratorijske vježbe</h2>
        
        <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-6 border-2 border-blue-200">
          <!-- Vježbe 7 -->
          <div class="mt-2">
            <h3 class="text-xl font-bold text-blue-900 mb-4 leading-tight">Određivanje ukupnog broja bakterija u Petroff-Hauserovoj komorici</h3>
            <div class="flex items-center justify-end">
              <a href="/poglavlje-7/vjezba-7/" class="inline-flex items-center text-blue-700 font-semibold">
                Pročitaj više 
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          </div>
        </div>
      </div>
      
    </div>
  </div>

  <!-- Quiz - Provjeri svoje znanje -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Provjeri svoje znanje</h2>
    
    <div class="max-w-2xl mx-auto">
      <div class="bg-gradient-to-br from-blue-50 to-blue-100 rounded-2xl p-8 border-2 border-blue-200 shadow-lg">
        <div class="text-center">
          <div class="w-20 h-20 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-blue-900 mb-4">Quiz - Poglavlje 7</h3>
          <p class="text-blue-800 text-lg mb-6">Testirajte svoje znanje iz ovog poglavlja s 5 pitanja</p>
          <a href="/poglavlje-7/quiz-7/" class="inline-flex items-center justify-center px-8 py-4 bg-blue-600 text-white font-bold text-lg rounded-xl hover:bg-blue-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Započni quiz
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

</ChapterLayout>