---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 8',
  description = 'Sadržaj poglavlja 8 - Vježbe 8'
} = Astro.props;

const chapterConfig = getChapterConfig(8);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={8}
  primaryColor="lime"
  prevLink="/poglavlje-8/" 
  nextLink="/poglavlje-9/" 
  prevText="← Poglavlje 8" 
  nextText="Poglavlje 9 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Gljivice." 
  ctaPrimaryText="Poglavlje 9" 
  ctaPrimaryLink="/poglavlje-9/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-8/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 8', url: '/poglavlje-8/' },
    { name: 'Vježbe 8', url: '/poglavlje-8/vjebe8/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={8} 
    currentSection="vježbe-8" 
    chapterTitle="Virusi"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<h3 style="color: #096279; font-size: 1.4rem; font-weight: 600; margin: 1.5rem 0 1rem 0;">Sadržaj vježbi</h3>

<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">[1. Usporedba broja kolonija ukupnih i fekalnih koliformnih bakterija](/poglavlje-8/vjezbe/vjezba-8-1)</h4>

<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">[2. Usporedba titra ukupnih i fekalnih koliformnih bakterija](/poglavlje-8/vjezbe/vjezba-8-2)</h4>

<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">[3. Određivanje broja kolonija fekalnih streptokoka](/poglavlje-8/vjezbe/vjezba-8-3)</h4>
  </div>

</ChapterLayout>