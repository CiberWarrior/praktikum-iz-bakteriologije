---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 8: Određivanje indikatorskih bakterija',
  description = 'Praktične vježbe iz dokazivanja bakterija indikatora sanitarnog stanja'
} = Astro.props;

const contentBlocks = [
  {
    id: "usporedba-broja-kolonija",
    title: "Usporedba broja kolonija ukupnih i fekalnih koliformnih bakterija",
    icon: "🔬",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Homogenizirati uzorak površinske ili otpadne vode u Winklerovoj boci energičnim mućkanjem. Napraviti seriju decimalnih razrjeđenja uzorka.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Po <strong class="text-blue-300">0,1 mL uzorka</strong> iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na <strong class="text-blue-300">Petrijeve zdjelice s Endo agarom i EC X-GLUC agarom u duplikatu</strong>. Jednu seriju nacjepljenih ploča inkubirati na <strong class="text-blue-300">35°C/48 h</strong> (ukupni koliformi), a drugu seriju na <strong class="text-blue-300">44,5°C/24 h</strong> (fekalni koliformi).
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Nakon razdoblja inkubacije prebrojiti na svim pločama kolonije te izračunati broj kolonija koliformnih bakterija u uzorku. Na pločama s <strong class="text-blue-300">EC X-GLUC agarom</strong> ponovno prebrojiti plavo obojene kolonije te izračunati postotak <em class="text-blue-300">Escherichia coli</em> u populaciji ukupnih i fekalnih koliforma.
        </p>
        
        <p class="text-gray-300 leading-relaxed">
          Potom nakapati na ploču s EC X-GLUC agarom <strong class="text-blue-300">Kovazcev reagens</strong> i nakon 30 sek prebrojiti kolonije okružene crvenim prstenima.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "usporedba-titra",
    title: "Usporedba titra ukupnih i fekalnih koliformnih bakterija",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Nacijepiti po <strong class="text-green-300">1,0 mL uzorka</strong> iz odgovarajuće serije decimalnog razrjeđenja u epruvete s <strong class="text-green-300">EC-bujonom u dvije serije</strong> te inkubirati jednu seriju na <strong class="text-green-300">35°C/48 h</strong> (ukupni koliformi), a drugu seriju na <strong class="text-green-300">44,5°C/24 h</strong> (fekalni koliformi).
        </p>
        
        <p class="text-gray-300 leading-relaxed">
          Nakon razdoblja inkubacije očitati titar i usporediti broj ukupnih i fekalnih koliformnih bakterija u uzorku.
        </p>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "fekalni-streptokoki",
    title: "Određivanje broja kolonija fekalnih streptokoka",
    icon: "🔍",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Profiltrirati <strong class="text-purple-300">10 i 1 mL vode</strong> kroz membranski filtar promjera pora <strong class="text-purple-300">0,45 μm</strong> i filtar položiti na Petrijevu ploču sa <strong class="text-purple-300">Slanetz-Bartleyevom podlogom</strong>.
        </p>
        
        <p class="text-gray-300 leading-relaxed">
          Ploče inkubirati na <strong class="text-purple-300">35°C/48 h</strong> te izračunati broj kolonija fekalnih streptokoka po 1 mL uzorka vode.
        </p>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "Fekalni streptokoki",
    url: "/poglavlje-8/fekalni-streptokoki/"
  },
  next: {
    text: "Poglavlje 9",
    url: "/poglavlje-9/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={8}
  primaryColor="orange"
  breadcrumbPath={[
    { name: 'Poglavlje 8', url: '/poglavlje-8/' },
    { name: 'Vježbe 8', url: '/poglavlje-8/vjezba-8/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>