---
import ChapterLayout from '../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Biogeokemijski ciklus dušika',
  description = 'Uvod u biogeokemijski ciklus dušika i njegovu važnost u mikrobiologiji. Istražujemo transformaciju dušika između različitih kemijskih oblika.'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={18}
  primaryColor="amber"
  prevLink="/poglavlje-17/"
  nextLink="/poglavlje-19/" 
  prevText="← Poglavlje 17"
  nextText="Poglavlje 19 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 19" 
  ctaPrimaryLink="/poglavlje-19/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 18', url: '/poglavlje-18/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-8 border border-amber-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-amber-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-amber-900 mb-3 font-heading">Poglavlje 18</h3>
        <p class="text-amber-800 text-lg leading-relaxed font-body">
          Istražujemo biogeokemijski ciklus dušika, jedan od najvažnijih prirodnih procesa koji omogućava transformaciju dušika između različitih kemijskih oblika.
        </p>
      </div>
    </div>
  </div>

  <!-- Ciljevi učenja -->
  <div class="bg-gradient-to-br from-amber-50 to-amber-100 rounded-xl p-8 border border-amber-200 mb-8">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-amber-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-amber-900 mb-4 font-heading">Ciljevi učenja</h3>
        <ul class="text-amber-800 text-lg leading-relaxed font-body space-y-2">
          <li class="flex items-start">
            <span class="text-amber-600 mr-2">•</span>
            Razumjeti biogeokemijski ciklus dušika i njegovu važnost u prirodi
          </li>
          <li class="flex items-start">
            <span class="text-amber-600 mr-2">•</span>
            Naučiti o nesimbiotskim fiksatorima dušika i proteolitičkim bakterijama
          </li>
          <li class="flex items-start">
            <span class="text-amber-600 mr-2">•</span>
            Steći praktične vještine u dokazivanju amonifikatora i nitrifikatora
          </li>
          <li class="flex items-start">
            <span class="text-amber-600 mr-2">•</span>
            Razumjeti ulogu denitrifikatora u ciklusu dušika
          </li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Sadržaj poglavlja -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Sadržaj</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Biogeokemijski ciklus dušika -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Biogeokemijski ciklus dušika</h3>
        </div>
        <a href="/poglavlje-18/biogeokemijski-ciklus-dusika/" class="text-blue-600 font-semibold hover:text-blue-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Nesimbiotski fiksatori dušika -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-purple-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Nesimbiotski fiksatori dušika</h3>
        </div>
        <a href="/poglavlje-18/nesimbiotski-fiksatori-dusika/" class="text-purple-600 font-semibold hover:text-purple-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Proteolitičke želatinolitičke bakterije -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-yellow-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Proteolitičke želatinolitičke bakterije</h3>
        </div>
        <a href="/poglavlje-18/proteoliticke-zelatinolitiske-bakterije/" class="text-yellow-600 font-semibold hover:text-yellow-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Amonifikatori -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-green-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Amonifikatori</h3>
        </div>
        <a href="/poglavlje-18/amonifikatori/" class="text-green-600 font-semibold hover:text-green-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Nitrifikatori -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-orange-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Nitrifikatori</h3>
        </div>
        <a href="/poglavlje-18/nitrifikatori/" class="text-orange-600 font-semibold hover:text-orange-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Denitrifikatori -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-red-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Denitrifikatori</h3>
        </div>
        <a href="/poglavlje-18/denitrifikatori/" class="text-red-600 font-semibold hover:text-red-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
      <!-- Razgradnja ureje -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-teal-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Razgradnja ureje</h3>
        </div>
        <a href="/poglavlje-18/razgradnja-ureje/" class="text-teal-600 font-semibold hover:text-teal-800 transition-colors duration-300">
          Pročitaj više →
        </a>
      </div>
    </div>
  </div>

  <!-- Laboratorijske vježbe -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Laboratorijske vježbe</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Vježbe 18 -->
      <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-2xl p-6 border-2 border-green-200">
        <div class="mt-2">
          <h3 class="text-xl font-bold text-green-900 mb-4 leading-tight">Biogeokemijski ciklus dušika</h3>
          <div class="flex items-center justify-end">
            <a href="/poglavlje-18/vjezba-18/" class="inline-flex items-center text-green-700 font-semibold">
              Pročitaj više 
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Quiz - Provjeri svoje znanje -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Provjeri svoje znanje</h2>
    
    <div class="max-w-2xl mx-auto">
      <div class="bg-gradient-to-br from-neutral-50 to-neutral-100 rounded-2xl p-8 border-2 border-neutral-200 shadow-lg">
        <div class="text-center">
          <div class="w-20 h-20 bg-neutral-600 rounded-full flex items-center justify-center mx-auto mb-6">
            <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-2xl font-bold text-neutral-900 mb-4">Quiz - Poglavlje 18</h3>
          <p class="text-neutral-800 text-lg mb-6">Testirajte svoje znanje iz ovog poglavlja s 5 pitanja</p>
          <a href="/poglavlje-18/quiz-18/" class="inline-flex items-center justify-center px-8 py-4 bg-neutral-600 text-white font-bold text-lg rounded-xl hover:bg-neutral-700 transition-all duration-300 transform hover:scale-105 shadow-lg">
            Započni quiz
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>

</ChapterLayout>