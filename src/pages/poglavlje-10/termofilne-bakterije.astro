---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Termofilne bakterije',
  description = 'Opis termofilnih bakterija i njihovog značaja'
} = Astro.props;

const contentBlocks = [
  {
    id: "osnovni-opis",
    title: "Osnovni opis",
    icon: "🌡️",
    content: `
      <p class="text-gray-300 leading-relaxed mb-4">
        Termofilne bakterije su mikroorganizmi koji prirodno žive u okolišu s povišenim temperaturama. U slobodnoj prirodi nalaze se u termalnim vrelima, a redovito su prisutne u crijevu preživača i peradi, te tako i u stajskom gnoju, gdje svojim metaboličkim aktivnostima uzrokuju prirodno zagrijavanje spomenutih materijala.
      </p>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "temperaturni-optimum",
    title: "Temperaturni optimum",
    icon: "🌡️",
    content: `
      <p class="text-gray-300 leading-relaxed mb-4">
        Njihov je temperaturni optimum <strong class="text-blue-300">od 50 do 65°C</strong>, što ih čini jedinstvenim među bakterijama.
      </p>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "epidemiologija-i-ekologija",
    title: "Epidemiologija i ekologija",
    icon: "🌍",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🌊 Unos u vodene ekosustave</h4>
          <p class="text-gray-300 leading-relaxed">
            Termofilne bakterije dospijevaju ispiranjem gnojenih tala i stajskoga gnoja oborinskim vodama u površinske vode i sedimente površinskih voda.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-red-500">
          <h4 class="text-lg font-semibold text-red-300 mb-2">⚠️ Pokazatelji zagađenja</h4>
          <p class="text-gray-300 leading-relaxed">
            U vodenim su okolišima termofilne bakterije stoga <strong class="text-red-300">pokazatelji unosa organskoga gnoja</strong>, u kojem mogu biti i patogene bakterije.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-2">🌱 Ekološki značaj</h4>
          <p class="text-gray-300 leading-relaxed">
            S ekološkog aspekta ove su bakterije pouzdani pokazatelji unosa <strong class="text-green-300">biogenih elemenata</strong>, posebno dušika i fosfora, koji stimuliraju razvoj fitoplanktona i uzrokuju ubrzavanje procesa eutrofikacije vodenih ekosustava.
          </p>
        </div>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "dokazivanje-i-izolacija",
    title: "Dokazivanje i izolacija",
    icon: "🔬",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-orange-500">
          <h4 class="text-lg font-semibold text-orange-300 mb-2">🎯 Selektivna metoda</h4>
          <p class="text-gray-300 leading-relaxed">
            Populacija termofila lako se dokazuje na podlogama s peptonom, a inkubacija uzorka na povišenoj temperaturi (<strong class="text-orange-300">55-60°C/24 h</strong>) ne dopušta razvoj mezofilnih saprofitskih bakterija prisutnih u uzorku te će selektivno porasti samo termofilne bakterije.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🧫 Podloge</h4>
          <ul class="text-gray-300 space-y-2">
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span><strong class="text-blue-300">Pepton podloge</strong> za dokazivanje</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span><strong class="text-blue-300">Selektivna inkubacija</strong> na 55-60°C/24h</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span><strong class="text-blue-300">Inhibicija mezofila</strong> - omogućava rast samo termofila</span>
            </li>
          </ul>
        </div>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "slike",
    title: "Termofilne bakterije",
    icon: "📸",
    content: `
      <div class="grid md:grid-cols-2 gap-6">
        <figure class="image-figure">
          <img
            src="/Images/slika57.jpg"
            alt="Termofilne bakterije u mješovitoj kulturi izolirane iz stajskoga gnoja"
            class="w-full h-auto rounded-lg"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">Slika 57</span>
            <span class="block mt-2 text-gray-300">Termofilne bakterije u mješovitoj kulturi izolirane iz stajskoga gnoja</span>
          </figcaption>
        </figure>

        <figure class="image-figure">
          <img
            src="/Images/slika58.jpg"
            alt="Termofilne bakterije u čistoj kulturi"
            class="w-full h-auto rounded-lg"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">Slika 58</span>
            <span class="block mt-2 text-gray-300">Termofilne bakterije u čistoj kulturi</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "red-500/30",
    iconGradient: "from-red-400 to-red-600"
  }
];

const navigationButtons = {
  previous: {
    text: "poglavlje 10",
    url: "/poglavlje-10/"
  },
  next: {
    text: "vježba 10",
    url: "/poglavlje-10/vjezba-10/"
  }
