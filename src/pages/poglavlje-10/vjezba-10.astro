---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 10',
  description = 'Praktične vježbe za rad s termofilnim bakterijama'
} = Astro.props;

const contentBlocks = [
  {
    id: "vjezba-10-1",
    title: "1. Određivanje broja kolonija termofilnih bakterija",
    icon: "🔬",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">📋 Priprema uzorka</h4>
          <p class="text-gray-300 leading-relaxed">
            Pripremiti uzorak tla pognojena stajskim gnojem tako da se <strong class="text-blue-300">1 g svježeg uzorka</strong> homogenizira u epruveti s <strong class="text-blue-300">9 mL sterilne destilirane vode</strong> s dodatkom <strong class="text-blue-300">0,3% NaCl</strong>.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-2">🧪 Razrjeđivanje i inokulacija</h4>
          <p class="text-gray-300 leading-relaxed">
            Napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-green-300">0,1 mL uzorka</strong> iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza <strong class="text-green-300">drygalskim štapićem</strong> na Petrijeve ploče s hranjivim agarom.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-orange-500">
          <h4 class="text-lg font-semibold text-orange-300 mb-2">🌡️ Inkubacija i brojanje</h4>
          <p class="text-gray-300 leading-relaxed">
            Nakon razdoblja inkubacije (<strong class="text-orange-300">56°C/24 h</strong>) izbrojiti porasle kolonije na pločama i izračunati broj kolonija termofila po gramu tla.
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "vjezba-10-2",
    title: "2. Određivanje gnojenja tala stajskim gnojem",
    icon: "🧪",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-2">📋 Priprema uzoraka</h4>
          <p class="text-gray-300 leading-relaxed">
            Po <strong class="text-green-300">1 g uzorka</strong> obrađenog i neobrađenog tla homogenizirati u epruveti s <strong class="text-green-300">9 mL sterilne destilirane vode</strong> s dodatkom <strong class="text-green-300">0,3% NaCl</strong>.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🧪 Razrjeđivanje i inokulacija</h4>
          <p class="text-gray-300 leading-relaxed">
            Napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-blue-300">0,1 mL uzorka</strong> iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na Petrijeve ploče s hranjivim agarom i inkubirati na <strong class="text-blue-300">56°C/24 h</strong>.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-purple-500">
          <h4 class="text-lg font-semibold text-purple-300 mb-2">📊 Analiza i ocjena</h4>
          <p class="text-gray-300 leading-relaxed mb-4">
            Nakon razdoblja inkubacije izbrojiti porasle kolonije na pločama i izračunati broj kolonija termofila po 1 g uzorka obrađenog i neobrađenog tla. Prema tablici (tablica 6) ocijeniti stupanj pognojenosti tla.
          </p>
        </div>
        
        <!-- Tablica 6 -->
        <div class="bg-gray-700 rounded-lg p-6 border border-green-500/30">
          <h4 class="text-lg font-semibold text-green-300 mb-4 text-center">Tablica 6. Stupanj pognojenosti tla prema brojnosti termofilnih bakterija.</h4>
          <div class="overflow-x-auto">
            <table class="w-full bg-gray-600 border border-gray-500 rounded-lg">
              <thead class="bg-gray-500">
                <tr>
                  <th class="border border-gray-400 px-4 py-3 text-left font-semibold text-gray-200">Tip tla</th>
                  <th class="border border-gray-400 px-4 py-3 text-left font-semibold text-gray-200">Broj termofilnih bakterija / g tla</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-500">
                <tr class="hover:bg-gray-600">
                  <td class="border border-gray-400 px-4 py-3 text-gray-300">Nezagađena tla</td>
                  <td class="border border-gray-400 px-4 py-3 text-gray-300 font-medium">&lt; 1000</td>
                </tr>
                <tr class="hover:bg-gray-600">
                  <td class="border border-gray-400 px-4 py-3 text-gray-300">Zagađena tla</td>
                  <td class="border border-gray-400 px-4 py-3 text-gray-300 font-medium">1000 - 100.000</td>
                </tr>
                <tr class="hover:bg-gray-600">
                  <td class="border border-gray-400 px-4 py-3 text-gray-300">Jako zagađena tla</td>
                  <td class="border border-gray-400 px-4 py-3 text-gray-300 font-medium">&gt; 100.000</td>
                </tr>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  }
];

const navigationButtons = {
  previous: {
    text: "termofilne bakterije",
    url: "/poglavlje-10/termofilne-bakterije/"
  },
  next: {
