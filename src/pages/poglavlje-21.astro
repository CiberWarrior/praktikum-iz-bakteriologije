---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getCollection } from 'astro:content';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Metoda otiska',
  description = 'Replica Plate Method za izolaciju bakterijskih mutanti i određivanje fizioloških skupina bakterija'
} = Astro.props;

// Dohvati sve MDX datoteke iz chapters kolekcije za ovo poglavlje
const allDocs = await getCollection('chapters');
const poglavljeDocs = allDocs
  .filter(entry => entry.id.startsWith('poglavlje-21/') && entry.id !== 'poglavlje-21/index')
  .sort((a, b) => {
    // Sortiraj po chapterNumber iz frontmattera, ako ne postoji koristi 0
    const aOrder = (a.data as any).chapterNumber || 0;
    const bOrder = (b.data as any).chapterNumber || 0;
    return aOrder - bOrder;
  });
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={21}
  primaryColor="indigo"
  prevLink="/poglavlje-20/"
  nextLink="/poglavlje-22/" 
  prevText="← Poglavlje 20"
  nextText="Poglavlje 22 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 22" 
  ctaPrimaryLink="/poglavlje-22/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 21', url: '/poglavlje-21/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-xl p-8 border border-indigo-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-indigo-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-indigo-900 mb-3 font-heading">Dobrodošli u Poglavlje 21</h3>
        <p class="text-indigo-800 text-lg leading-relaxed font-body">
          Ovo poglavlje vodi vas kroz metodu otiska (Replica Plate Method) za izolaciju bakterijskih mutanti otpornih na antibiotike i određivanje fizioloških skupina bakterija. Naučit ćete o tehnikama selektivnog uzgoja i temperaturnoj valenciji mikroorganizama.
        </p>
      </div>
    </div>
  </div>
  <!-- Sadržaj poglavlja - Svi dostupni linkovi -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Sadržaj</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Metoda otiska -->
      <div class="bg-white rounded-xl shadow-lg p-6 border border-gray-200">
        <div class="flex items-center mb-4">
          <div class="w-10 h-10 bg-blue-600 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-5 h-5 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
          </div>
          <h3 class="text-lg font-bold text-gray-900">Metoda otiska</h3>
        </div>

        <a href="/poglavlje-21/metoda-otiska/" class="text-blue-600 font-semibold">
          Pročitaj više →
        </a>
      </div>
    </div>
  </div>

  <!-- Laboratorijske vježbe -->
  <div class="mb-12">
    <h2 class="text-3xl font-bold text-gray-900 mb-8">Laboratorijske vježbe</h2>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      <!-- Vježba 21.1 -->
      <div class="bg-gradient-to-br from-indigo-50 to-indigo-100 rounded-2xl p-6 border-2 border-indigo-200">
        <div class="mt-2">
          <h3 class="text-xl font-bold text-indigo-900 mb-4 leading-tight">Određivanje temperaturnog optimuma i temperaturne valencije saprofitskih bakterija</h3>
          <div class="flex items-center justify-end">
            <a href="/poglavlje-21/vjezba-21-1/" class="inline-flex items-center text-indigo-700 font-semibold">
              Pročitaj više 
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>

      <!-- Vježba 21.2 -->
      <div class="bg-gradient-to-br from-purple-50 to-purple-100 rounded-2xl p-6 border-2 border-purple-200">
        <div class="mt-2">
          <h3 class="text-xl font-bold text-purple-900 mb-4 leading-tight">Određivanje zastupljenosti fizioloških skupina bakterija među populacijom ukupnih saprofita</h3>
          <div class="flex items-center justify-end">
            <a href="/poglavlje-21/vjezba-21-2/" class="inline-flex items-center text-purple-700 font-semibold">
              Pročitaj više 
              <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
              </svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

</ChapterLayout>