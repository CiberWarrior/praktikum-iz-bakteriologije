---
import ChapterLayout from '../components/ChapterLayout.astro';
import { getCollection } from 'astro:content';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Biogeokemijski ciklus sumpora',
  description = 'Praktikum iz bakteriologije - Biogeokemijski ciklus sumpora i transformacije sumpora'
} = Astro.props;

// Dohvati sve MDX datoteke iz chapters kolekcije za ovo poglavlje
const allDocs = await getCollection('chapters');
const poglavljeDocs = allDocs
  .filter(entry => entry.id.startsWith('poglavlje-19/') && entry.id !== 'poglavlje-19/index')
  .sort((a, b) => {
    // Sortiraj po chapterNumber iz frontmattera, ako ne postoji koristi 0
    const aOrder = (a.data as any).chapterNumber || 0;
    const bOrder = (b.data as any).chapterNumber || 0;
    return aOrder - bOrder;
  });
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={19}
  primaryColor="rose"
  prevLink="/poglavlje-18/"
  nextLink="/poglavlje-20/" 
  prevText="← Poglavlje 18"
  nextText="Poglavlje 20 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem." 
  ctaPrimaryText="Poglavlje 20" 
  ctaPrimaryLink="/poglavlje-20/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 19', url: '/poglavlje-19/' }
  ]}
>

<style>
  .chapter-links ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .chapter-links li {
    margin-bottom: 0.75rem;
  }
  
  .chapter-links a {
    text-decoration: none;
    color: inherit;
  }
</style>

  <!-- Uvod u poglavlje -->
  <div class="bg-gradient-to-br from-rose-50 to-rose-100 rounded-xl p-8 border border-rose-200 mb-8 hover:shadow-lg transition-all duration-300">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-rose-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-rose-900 mb-3 font-heading">Biogeokemijski ciklus sumpora</h3>
        <p class="text-rose-800 text-lg leading-relaxed font-body">
          Proučavajte ciklus kruženja sumpora u prirodi i ulogu mikroorganizama u transformacijama sumpora. 
          Naučit ćete o različitim fiziološkim skupinama bakterija i praktičnim metodama njihovog dokazivanja.
        </p>
      </div>
    </div>
  </div>

  <!-- Sadržaj poglavlja - Svi dostupni linkovi -->
