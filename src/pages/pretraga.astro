                  bakterije
                </button>
                <button class="px-3 py-1 text-xs bg-purple-100 text-purple-700 rounded-full hover:bg-purple-200 transition-colors duration-200" onclick="const input = document.getElementById('searchInput') as HTMLInputElement; if (input) { input.value='laboratorij'; input.dispatchEvent(new Event('input')); }">
                  laboratorij
                </button>
                <button class="px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full hover:bg-green-200 transition-colors duration-200" onclick="const input = document.getElementById('searchInput') as HTMLInputElement; if (input) { input.value='testovi'; input.dispatchEvent(new Event('input')); }">
                  testovi
                </button>
              </div>
            </div>
          </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-20 bg-gradient-to-b from-white to-gray-50 relative overflow-hidden">
      <!-- Background decoration -->
      <div class="absolute top-0 right-0 w-96 h-96 bg-blue-100/30 rounded-full blur-3xl -translate-y-48 translate-x-48"></div>
