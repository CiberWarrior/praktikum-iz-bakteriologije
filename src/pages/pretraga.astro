                sterilizacija
              </button>
              <button class="px-3 py-1 text-xs bg-green-100 text-green-700 rounded-full hover:bg-green-200 transition-colors duration-200" onclick="const input = document.getElementById('searchInput') as HTMLInputElement; if (input) { input.value='bakterije'; input.dispatchEvent(new Event('input')); }">
                bakterije
              </button>
              <button class="px-3 py-1 text-xs bg-orange-100 text-orange-700 rounded-full hover:bg-orange-200 transition-colors duration-200" onclick="const input = document.getElementById('searchInput') as HTMLInputElement; if (input) { input.value='mikroskopija'; input.dispatchEvent(new Event('input')); }">
                mikroskopija
              </button>
            </div>
          </div>

          <!-- Search Results -->
          <div id="searchResults" class="space-y-6">
            <!-- Initial content -->
            <div id="initialContent" class="hidden">
            </div>

            <!-- Results container -->
            <div id="resultsContainer" class="hidden">
