---
import '../styles/tailwind.css';

export interface Props {
  title?: string;
}

const { title = 'Pretraga - Mrežni udžbenik iz bakteriologije' } = Astro.props;
---

<!DOCTYPE html>
<html lang="hr">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Pretraga kroz cijeli mrežni udžbenik iz bakteriologije. Pronađite sve što trebate o bakteriološkim tehnikama, vježbama i pojmovima." />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
  </head>
  <body class="bg-gray-50">
    <!-- Navigation -->
    <nav class="bg-white shadow-lg">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between h-16">
          <div class="flex items-center">
            <a href="/" class="flex-shrink-0 flex items-center">
              <svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
              </svg>
              <span class="ml-2 text-xl font-bold text-gray-900">Bakteriologija</span>
            </a>
          </div>
          <div class="flex items-center space-x-8">
            <a href="/sadrzaj/" class="text-gray-700 hover:text-blue-600 transition-colors duration-300 font-bold uppercase text-sm">Sadržaj</a>
            <a href="/rječnik/" class="text-gray-700 hover:text-blue-600 transition-colors duration-300 font-bold uppercase text-sm">Rječnik</a>
            <a href="/pretraga/" class="text-gray-700 hover:text-blue-600 transition-colors duration-300 font-bold uppercase text-sm">Pretraga</a>
            <a href="/o-nama/" class="text-gray-700 hover:text-blue-600 transition-colors duration-300 font-bold uppercase tracking-wide text-sm">O nama</a>
            <a href="/kontakt/" class="text-gray-700 hover:text-blue-600 transition-colors duration-300 font-bold uppercase tracking-wide text-sm">Kontakt</a>
          </div>
        </div>
      </div>
    </nav>

    <!-- Header -->
    <section class="bg-gradient-to-r from-blue-600 to-purple-600 text-white py-16">
      <div class="max-w-4xl mx-auto px-4 sm:px-6 text-center">
        <div class="w-16 h-16 bg-white/20 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
          </svg>
        </div>
        <h1 class="text-4xl md:text-5xl font-bold mb-4">Upiši pojam</h1>
      </div>
    </section>

    <!-- Search Section -->
    <section class="py-12 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <div class="bg-white rounded-xl shadow-lg p-8">
          <!-- Jednostavna pretraga -->
          <div class="search-container">
            <!-- Search Input -->
            <div class="relative mb-6">
              <input
                type="text"
                id="searchInput"
                placeholder="Upišite pojam za pretragu (npr. gram, sterilizacija, bakterije)..."
                class="w-full px-6 py-4 pl-14 pr-6 text-lg border-2 border-gray-300 rounded-xl focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all duration-300"
              />
              <svg class="absolute left-5 top-5 w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
              </svg>
            </div>

            <!-- Search Results -->
            <div id="searchResults" class="space-y-4">
              <!-- Initial content -->
              <div id="initialContent" class="hidden">
              </div>

              <!-- Results container -->
              <div id="resultsContainer" class="hidden">
                <div class="flex items-center justify-between mb-4">
                  <h3 id="resultsCount" class="text-lg font-semibold text-gray-900"></h3>
                  <button id="clearSearch" class="px-4 py-2 text-sm bg-gray-600 text-white rounded-lg hover:bg-gray-700 transition-colors">
                    Očisti pretragu
                  </button>
                </div>
                <div id="resultsList" class="space-y-4"></div>
              </div>

              <!-- No results -->
              <div id="noResults" class="hidden text-center py-8">
                <p class="text-gray-500 text-lg">Nema rezultata za vašu pretragu.</p>
                <p class="text-gray-400 text-sm mt-2">Pokušajte s drugim pojmom ili provjerite pravopis.</p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Quick Links -->
    <section class="py-16 bg-gray-50">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        <h2 class="text-2xl font-bold text-gray-900 text-center mb-8">Brzi pristup</h2>
        <div class="grid md:grid-cols-4 gap-6">
          <a href="/sadrzaj/" class="p-6 bg-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 text-center">Sadržaj</h3>
            <p class="text-gray-600 text-center">Pregled svih poglavlja</p>
          </a>
          
          <a href="/rječnik/" class="p-6 bg-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-purple-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 text-center">Rječnik</h3>
            <p class="text-gray-600 text-center">Rječnik pojmova</p>
          </a>
          
          <a href="/o-nama/" class="p-6 bg-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 text-center">O nama</h3>
            <p class="text-gray-600 text-center">Saznajte više o timu</p>
          </a>
          
          <a href="/" class="p-6 bg-white rounded-xl hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1">
            <div class="w-12 h-12 bg-orange-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-6 h-6 text-orange-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"></path>
              </svg>
            </div>
            <h3 class="text-lg font-semibold text-gray-900 mb-2 text-center">Početna</h3>
            <p class="text-gray-600 text-center">Povratak na početnu</p>
          </a>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="bg-gray-900 text-white py-12">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          <div>
            <h3 class="text-lg font-bold mb-4">Mrežni udžbenik iz bakteriologije</h3>
            <p class="text-gray-300">
              Priručnik za studente s detaljnim uputama za bakteriološki praktikum i naprednom pretragom.
            </p>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Brze veze</h3>
            <ul class="space-y-2">
              <li><a href="/sadrzaj/" class="text-gray-300 hover:text-white transition-colors duration-300">Sadržaj</a></li>
              <li><a href="/rječnik/" class="text-gray-300 hover:text-white transition-colors duration-300">Rječnik</a></li>
              <li><a href="/o-nama/" class="text-gray-300 hover:text-white transition-colors duration-300">O nama</a></li>
            </ul>
          </div>
          <div>
            <h3 class="text-lg font-bold mb-4">Kontakt</h3>
            <p class="text-gray-300">
              Za dodatne informacije i podršku, posjetite našu kontakt stranicu.
            </p>
            <a href="/kontakt/" class="inline-block mt-2 text-blue-400 hover:text-blue-300 transition-colors duration-300">
              Kontaktirajte nas →
            </a>
          </div>
        </div>
        <div class="border-t border-gray-800 mt-8 pt-8 text-center text-gray-400">
          <p>&copy; 2025. Mrežni udžbenik iz bakteriologije. Sva prava pridržana.</p>
        </div>
      </div>
    </footer>

    <!-- Simple Search Script -->
    <script>
      // Jednostavna pretraga
      document.addEventListener('DOMContentLoaded', function() {
        const searchInput = document.getElementById('searchInput');
        const initialContent = document.getElementById('initialContent');
        const resultsContainer = document.getElementById('resultsContainer');
        const noResults = document.getElementById('noResults');
        const resultsCount = document.getElementById('resultsCount');
        const resultsList = document.getElementById('resultsList');
        const clearSearch = document.getElementById('clearSearch');

        // Search data - jednostavan indeks sadržaja
        const searchData = [
          {
            title: 'Bojenje bakterija',
            content: 'Gram bojenje, bojenje endospora, kapsule, flagela, negativno bojenje, fiksiranje, mikroskopija, diferencijalno bojenje',
            url: '/poglavlje-3/',
            type: 'poglavlje',
            tags: ['gram', 'bojenje', 'endospore', 'kapsule', 'flagele', 'mikroskopija']
          },
          {
            title: 'Sterilizacija',
            content: 'Sterilizacija, dezinfekcija, antisepsa, autoklaviranje, suha sterilizacija, UV sterilizacija, kemijska sterilizacija',
            url: '/poglavlje-2/',
            type: 'poglavlje',
            tags: ['sterilizacija', 'dezinfekcija', 'antisepsa', 'autoklaviranje', 'kontrola']
          },
          {
            title: 'Uvod u bakteriološki praktikum',
            content: 'Aseptika, sigurnost rada, osnovne tehnike, laboratorijski pribor, dezinfekcija, antisepsa, prva pomoć',
            url: '/poglavlje-1/',
            type: 'poglavlje',
            tags: ['aseptika', 'sigurnost', 'osnove', 'laboratorij', 'dezinfekcija']
          },
          {
            title: 'Pokretljivost bakterija',
            content: 'Pokretljivost, flagele, bičevi, motorni aparat, pokretljivost testovi, semisolidni agar',
            url: '/poglavlje-4/',
            type: 'poglavlje',
            tags: ['pokretljivost', 'flagele', 'bičevi', 'motorni aparat', 'testovi']
          },
          {
            title: 'Biokemijska svojstva bakterija',
            content: 'Biokemijski testovi, indol test, MR-VP test, katalaza, oksidaza, identifikacija bakterija',
            url: '/poglavlje-5/',
            type: 'poglavlje',
            tags: ['biokemijski', 'testovi', 'indol', 'katalaza', 'identifikacija']
          },
          {
            title: 'Određivanje broja bakterija',
            content: 'Brojanje bakterija, decimalno razrjeđenje, CFU, titar, statistika, hemacitometar',
            url: '/poglavlje-6/',
            type: 'poglavlje',
            tags: ['brojanje', 'cfu', 'titar', 'kvantitativno', 'statistika']
          },
          {
            title: 'Escherichia coli',
            content: 'E. coli, EC-X-GLUC agar, Endo agar, MacConkey, identifikacija, analiza vode, fekalno zagađenje',
            url: '/poglavlje-7/',
            type: 'poglavlje',
            tags: ['e.coli', 'escherichia', 'endo', 'macconkey', 'voda', 'fekalno']
          },
          {
            title: 'Enterokoki',
            content: 'Crijevni enterokoki, gram pozitivne bakterije, analiza vode, identifikacija, Streptococcus faecalis',
            url: '/poglavlje-8/',
            type: 'poglavlje',
            tags: ['enterokoki', 'gram pozitivne', 'voda', 'crijevni', 'streptococcus']
          },
          {
            title: 'Saprofitske bakterije',
            content: 'Ukupne saprofitske bakterije, analiza vode, brojanje, hranjivi agar, ukupan broj bakterija',
            url: '/poglavlje-9/',
            type: 'poglavlje',
            tags: ['saprofitske', 'voda', 'brojanje', 'hranjivi agar', 'heterotrofne']
          },
          {
            title: 'Koliformne bakterije',
            content: 'Koliformi, analiza vode, laktozni pozitivni, identifikacija, fekalno zagađenje',
            url: '/poglavlje-10/',
            type: 'poglavlje',
            tags: ['koliformi', 'laktoza', 'voda', 'analiza', 'fekalno']
          }
        ];

        // Search function
        function performSearch(query) {
          if (query.length < 2) {
            showInitialContent();
            return;
          }

          const searchTerm = query.toLowerCase();
          const results = searchData.filter(item => {
            const titleMatch = item.title.toLowerCase().includes(searchTerm);
            const contentMatch = item.content.toLowerCase().includes(searchTerm);
            const tagsMatch = item.tags.some(tag => tag.toLowerCase().includes(searchTerm));
            
            return titleMatch || contentMatch || tagsMatch;
          });

          displayResults(results, query);
        }

        // Display results
        function displayResults(results, query) {
          if (results.length === 0) {
            showNoResults();
            return;
          }

          // Hide no results
          noResults.classList.add('hidden');

          // Show results
          resultsContainer.classList.remove('hidden');
          resultsCount.textContent = `Pronađeno ${results.length} rezultata za "${query}"`;

          // Render results
          resultsList.innerHTML = results.map(item => `
            <div class="bg-white rounded-lg border border-gray-200 p-6 hover:shadow-lg transition-shadow duration-300">
              <div class="flex items-start justify-between">
                <div class="flex-1">
                  <div class="flex items-center mb-2">
                    <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-blue-100 text-blue-800 mr-2">
                      ${item.type}
                    </span>
                    <h3 class="text-xl font-semibold text-gray-900">${item.title}</h3>
                  </div>
                  <p class="text-gray-600 mb-3">${item.content}</p>
                  <div class="flex flex-wrap gap-2 mb-4">
                    ${item.tags.map(tag => `
                      <span class="px-2 py-1 bg-blue-100 text-blue-800 text-xs rounded-full">${tag}</span>
                    `).join('')}
                  </div>
                  <a href="${item.url}" class="inline-flex items-center text-blue-600 hover:text-blue-700 font-medium">
                    Pogledaj detalje →
                  </a>
                </div>
              </div>
            </div>
          `).join('');
        }

        // Show initial content
        function showInitialContent() {
          // initialContent je sada uvijek skriven
          resultsContainer.classList.add('hidden');
          noResults.classList.add('hidden');
        }

        // Show no results
        function showNoResults() {
          // initialContent je uvijek skriven
          resultsContainer.classList.add('hidden');
          noResults.classList.remove('hidden');
        }

        // Clear search
        function clearSearchFunction() {
          searchInput.value = '';
          showInitialContent();
        }

        // Event listeners
        searchInput.addEventListener('input', function() {
          const query = this.value.trim();
          performSearch(query);
        });

        clearSearch.addEventListener('click', clearSearchFunction);

        // Search on Enter key
        searchInput.addEventListener('keypress', function(e) {
          if (e.key === 'Enter') {
            const query = this.value.trim();
            performSearch(query);
          }
        });
      });
    </script>
  </body>
</html>
