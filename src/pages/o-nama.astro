---
import '../styles/tailwind.css';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'O nama',
  description = 'Saznajte više o timu iza mrežnog udžbenika iz bakteriologije'
} = Astro.props;
---

<!doctype html>
<html lang="hr" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
  </head>
  <body class="bg-page font-body text-page">
    
    <!-- Navigation -->
    <nav class="bg-gray-800 shadow-sm border-b border-gray-700">
      <div class="max-w-7xl mx-auto px-4 sm:px-6">
        <div class="flex justify-between items-center py-4">
          <a href="/" class="text-xl font-bold text-white hover:text-blue-400 transition-colors duration-300" style="outline: none !important; box-shadow: none !important;">
            Bakteriologija
          </a>
          <!-- Desktop navigacija -->
          <div class="hidden md:flex items-center space-x-8">
            <a href="/sadrzaj/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Sadržaj
            </a>
            <a href="/predgovor/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Predgovor
            </a>
            <a href="/rječnik/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Rječnik
            </a>
            <a href="/o-nama/" class="text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              O nama
            </a>
            <a href="/kontakt/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Kontakt
            </a>
            <!-- Search -->
            <div class="relative">
              <a href="/pretraga/" class="inline-flex items-center text-gray-300 hover:text-white transition-colors duration-300" title="Pretraga" style="outline: none !important; box-shadow: none !important;">
                <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                </svg>
              </a>
            </div>
          </div>
          
          <!-- Mobilni hamburger menu -->
          <div class="md:hidden">
            <button 
              id="mobile-menu-button" 
              class="text-gray-300 hover:text-white transition-colors duration-300"
              aria-label="Otvori navigacijski menu"
              aria-expanded="false"
              aria-controls="mobile-menu"
              style="outline: none !important; box-shadow: none !important;"
            >
              <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24" aria-hidden="true">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
              </svg>
            </button>
          </div>
        </div>
        
        <!-- Mobilni menu -->
        <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 border-t border-gray-700" role="navigation" aria-label="Mobilna navigacija">
          <div class="flex flex-col space-y-4 pt-4">
            <a href="/sadrzaj/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Sadržaj
            </a>
            <a href="/predgovor/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Predgovor
            </a>
            <a href="/rječnik/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Rječnik
            </a>
            <a href="/o-nama/" class="text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              O nama
            </a>
            <a href="/pretraga/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase text-sm" style="outline: none !important; box-shadow: none !important;">
              Pretraga
            </a>
            <a href="/kontakt/" class="text-gray-300 hover:text-white transition-colors duration-300 font-bold uppercase tracking-wide text-sm" style="outline: none !important; box-shadow: none !important;">
              Kontakt
            </a>
          </div>
        </div>
      </div>
    </nav>
    
    <!-- Hero Section -->
    <section class="relative py-20 bg-gradient-to-r from-purple-600 to-blue-600 text-white overflow-hidden">
      <!-- Pozadinski uzorak -->
      <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: radial-gradient(circle at 2px 2px, rgba(255,255,255,0.1) 1px, transparent 0); background-size: 20px 20px;"></div>
      </div>

      <div class="relative max-w-6xl mx-auto px-4 sm:px-6">
        <div class="text-center">
          <p class="text-purple-200 font-bold uppercase tracking-wide mb-4 text-sm">
            Naš tim
          </p>
          
          <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold mb-6 leading-tight">
            O nama
          </h1>
          
          <p class="text-xl text-purple-200 mb-8 leading-relaxed max-w-3xl mx-auto">
            Upoznajte tim stručnjaka koji je kreirao ovaj mrežni udžbenik iz bakteriologije. Naša misija je omogućiti studentima pristup kvalitetnom obrazovanju.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center">
            <a
              href="/"
                class="inline-flex items-center justify-center px-6 py-3 bg-white text-blue-700 font-bold rounded-full shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
            >
              ← Povratak na početnu
            </a>
            <a
              href="/kontakt/"
                class="inline-flex items-center justify-center px-6 py-3 border-2 border-white text-white font-bold rounded-full hover:bg-white hover:text-blue-700 transition-all duration-300"
            >
              Kontakt →
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Main Content Section -->
    <section class="py-16 bg-gradient-to-br from-slate-800 to-slate-700">
      <div class="max-w-6xl mx-auto px-4 sm:px-6">
        
        <!-- Naša misija -->
        <div class="mb-16">
          <div class="text-center mb-12">
            <h2 class="text-3xl md:text-4xl font-bold text-white mb-6 font-heading">Naša misija</h2>
            <p class="text-xl text-gray-300 max-w-3xl mx-auto font-body">
              Stvaramo moderan, pristupačan i interaktivan udžbenik koji će pomoći studentima da ovladaju bakteriološkim tehnikama.
            </p>
          </div>
          
          <div class="grid md:grid-cols-3 gap-8">
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-indigo-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3 font-heading">Edukacija</h3>
              <p class="text-gray-300 font-body">
                Pružamo kvalitetno obrazovanje dostupno svim studentima biologije, bez obzira na geografsku lokaciju ili vremenske ograničenja.
              </p>
            </div>
            
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3 font-heading">Inovacija</h3>
              <p class="text-gray-300 font-body">
                Kombiniramo tradicionalne metode nastave s modernim tehnologijama za stvaranje interaktivnog iskustva učenja.
              </p>
            </div>
            
            <div class="text-center p-6">
              <div class="w-16 h-16 bg-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
                </svg>
              </div>
              <h3 class="text-xl font-bold text-white mb-3 font-heading">Zajednica</h3>
              <p class="text-gray-300 font-body">
                Gradimo zajednicu studenata i stručnjaka koji dijele znanje i iskustva u području bakteriologije.
              </p>
            </div>
          </div>
        </div>

        <!-- O projektu -->
        <div class="mb-16">
          <div class="bg-gray-800 rounded-2xl p-6 border border-indigo-500/30 shadow-lg">
            <h2 class="text-3xl font-bold text-white mb-6 font-heading">O projektu</h2>
            <div class="grid md:grid-cols-2 gap-8">
              <div class="prose prose-lg text-gray-300 font-body">
                <p class="text-lg leading-relaxed mb-4">
                  Mrežni udžbenik iz bakteriologije nastao je kao rezultat potrebe za modernizacijom nastave u području mikrobiologije. 
                  Prepoznavajući da studenti trebaju pristupačan i interaktivan materijal koji može pratiti njihov tempo učenja, 
                  tim stručnjaka s Prirodoslovno-matematičkog fakulteta Sveučilišta u Zagrebu kreirao je ovu platformu.
                </p>
                <p class="text-lg leading-relaxed">
                  Udžbenik pokriva sve ključne aspekte bakteriološkog praktikuma - od osnovnih sigurnosnih mjera do naprednih 
                  tehnika identifikacije bakterija. Svako poglavlje je pažljivo strukturirano s teorijskim uvodom, 
                  praktičnim vježbama i provjerom znanja.
                </p>
              </div>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-indigo-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">23 poglavlja s detaljnim uputama</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-indigo-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Praktične vježbe s fotografijama</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-indigo-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Interaktivni sadržaj 24/7</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-indigo-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Kontinuirano ažuriranje sadržaja</p>
                </div>
              </div>
            </div>
            <div class="mt-6 pt-6 border-t border-gray-700">
              <p class="text-lg leading-relaxed text-gray-300 font-body">
                Projekt je kontinuirano ažuriran i poboljšavan na temelju povratnih informacija studenata i nastavnika, 
                osiguravajući da sadržaj ostane relevantan i koristan za sve korisnike.
              </p>
            </div>
          </div>
        </div>

        <!-- Naš tim -->
        <div class="mb-16">
          <h2 class="text-3xl md:text-4xl font-bold text-white text-center mb-12 font-heading">O nama</h2>
          
          <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <!-- Član tima 1 -->
            <div class="bg-gray-800 rounded-xl shadow-lg border border-indigo-500/30">
              <div class="p-6 text-center">
                <div class="w-24 h-24 bg-gradient-to-br from-indigo-400 to-indigo-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-2 font-heading">Prof. dr. sc. Jasna Hrenović</h3>
                <p class="text-indigo-400 font-semibold mb-3">Autorica</p>
                <p class="text-gray-300 text-sm font-body">
                  Profesorica mikrobiologije s više od 25 godina iskustva u nastavi. 
                  Autorica brojnih znanstvenih radova iz područja bakteriologije.
                </p>
              </div>
            </div>
            
            <!-- Član tima 2 -->
            <div class="bg-gray-800 rounded-xl shadow-lg border border-green-500/30">
              <div class="p-6 text-center">
                <div class="w-24 h-24 bg-gradient-to-br from-green-400 to-green-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-2 font-heading">Dr. sc. Ivan  Ivić</h3>
                <p class="text-green-400 font-semibold mb-3">autor</p>
                <p class="text-gray-300 text-sm font-body">
                  Specijalist za mikrobiologiju s više od 20 godina iskustva u nastavi. 
                  Autorica brojnih znanstvenih radova iz područja bakteriologije.
                </p>
              </div>
            </div>
            
            <!-- Član tima 3 -->
            <div class="bg-gray-800 rounded-xl shadow-lg border border-blue-500/30">
              <div class="p-6 text-center">
                <div class="w-24 h-24 bg-gradient-to-br from-blue-400 to-blue-600 rounded-full flex items-center justify-center mx-auto mb-4">
                  <svg class="w-12 h-12 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                  </svg>
                </div>
                <h3 class="text-xl font-bold text-white mb-2 font-heading">Renata Horvat</h3>
                <p class="text-blue-400 font-semibold mb-3">Web dizajnerka</p>
                <p class="text-gray-300 text-sm font-body">
                  Specijalistica za korisničko iskustvo i web dizajn. 
                  Odgovorna za vizualni izgled i funkcionalnost platforme.
                </p>
              </div>
            </div>
          </div>
        </div>

        <!-- Budućnost projekta -->
        <div class="mb-16">
          <div class="bg-gray-800 rounded-2xl p-6 border border-yellow-500/30 shadow-lg">
            <h2 class="text-3xl font-bold text-white mb-6 font-heading">Budućnost projekta</h2>
            <div class="grid md:grid-cols-2 gap-6">
              <div class="prose prose-lg text-gray-300 font-body">
                <p class="text-lg leading-relaxed mb-4">
                  Planiramo kontinuirano poboljšavanje udžbenika kroz dodavanje novih sadržaja, interaktivnih elemenata 
                  i integraciju s najnovijim tehnologijama.
                </p>
                <p class="text-lg leading-relaxed">
                  Naš cilj je stvoriti sveobuhvatnu platformu za učenje bakteriologije koja će biti dostupna 
                  zainteresiranim studentima biologije i srodnih struka.
                </p>
              </div>
              <div class="space-y-4">
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Dodavanje novih poglavlja i vježbi</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Interaktivni kvizovi i testovi</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">3D vizualizacije i animacije</p>
                </div>
                <div class="flex items-start space-x-3">
                  <div class="w-6 h-6 bg-yellow-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                    <svg class="w-3 h-3 text-white" fill="currentColor" viewBox="0 0 20 20">
                      <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"></path>
                    </svg>
                  </div>
                  <p class="text-gray-300 font-body">Integracija s novim tehnologijama</p>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Statistike -->
        <div class="mb-16">
          <div class="bg-gray-800 rounded-2xl p-8 border border-gray-500/30 shadow-lg">
            <h2 class="text-3xl font-bold text-white text-center mb-8 font-heading">Naši rezultati</h2>
            
            <div class="grid md:grid-cols-4 gap-8">
              <div class="text-center">
                <div class="text-4xl font-bold text-indigo-400 mb-2">23</div>
                <p class="text-gray-300 font-body">Poglavlja</p>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-green-400 mb-2">500+</div>
                <p class="text-gray-300 font-body">Studenata</p>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-blue-400 mb-2">50+</div>
                <p class="text-gray-300 font-body">Vježbi</p>
              </div>
              <div class="text-center">
                <div class="text-4xl font-bold text-purple-400 mb-2">24/7</div>
                <p class="text-gray-300 font-body">Dostupnost</p>
              </div>
            </div>
          </div>
        </div>


      </div>
    </section>

    <!-- Call to Action Section -->
    <section class="relative py-20 overflow-hidden">
      <!-- Animated background -->
      <div class="absolute inset-0 bg-gradient-to-br from-indigo-900 via-purple-900 to-pink-900">
        <div class="absolute inset-0 bg-gradient-to-r from-blue-600/20 via-purple-600/20 to-pink-600/20"></div>
