<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={3}
  primaryColor="red"
  breadcrumbPath={[
    { name: 'Poglavlje 3', url: '/poglavlje-3/' },
    { name: 'Vježba 3.4 - Bojenje bakterija po Gramu', url: '/poglavlje-3/vjezba-3-4/' }
