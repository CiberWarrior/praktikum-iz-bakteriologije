    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 3', url: '/poglavlje-3/' },
    { name: 'Vježba 3.2 - Bojenje bakterija gencijanom violet', url: '/poglavlje-3/vjeba32-bojenjebakterijagencijanomviolet/' }
