---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Test s kalijevom lužinom',
  description = 'Pouzdan nadomjestak bojenja po Gramu za razlikovanje Gram-pozitivnih i Gram-negativnih bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "test-s-kalijevom-luzinom",
    title: "Test s kalijevom lužinom",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <h4 class="text-xl font-semibold text-purple-300 mb-4">Test s kalijevom lužinom</h4>
        <p class="text-gray-300 leading-relaxed mb-4">
          Test s kalijevom lužinom navodi se u literaturi kao vrlo pouzdan nadomjestak bojenja po Gramu.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Provodi se tako da se čista bakterijska kultura, ne starija od 24 sata, razmuti bakteriološkom ušicom u kapljici 3%-tne KOH. Nakon 30 sek ušica se polagano podiže iz kapljice.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Ako je bakterija Gram-negativna, izvlače se u roku od 1 min na ušici tanke sluzave niti iz kapljice lužine, zbog prisutnosti lipopolisaharida iz sastava razorene stanične stijenke.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Ako je bakterija Gram-pozitivna, stanična stijenka ne biva razorena, sadržaj kapljice ostaje grudast, nema izvlačenja niti.
        </p>
      </div>
    `,
    borderColor: "red-500/30",
    iconGradient: "from-red-400 to-red-600"
  }
];

const navigationButtons = {
  previous: {
    text: "složena bojanja",
    url: "/poglavlje-3/slozena-bojanja/"
  },
  next: {
    text: "bojenje bakterija po Ziehl-Neelsenu",
    url: "/poglavlje-3/bojenje-acidorezistentnih-bakterija-po-ziehl-neelsenu/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={3}
  primaryColor="red"
  breadcrumbPath={[
    { name: 'Poglavlje 3', url: '/poglavlje-3/' },
    { name: 'Test s kalijevom lužinom', url: '/poglavlje-3/test-s-kalijevom-luzinom/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>

