---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 3',
  description = 'Sadržaj poglavlja 3 - Vježbe 3'
} = Astro.props;

const chapterConfig = getChapterConfig(3);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={3}
  primaryColor="purple"
  prevLink="/poglavlje-3/" 
  nextLink="/poglavlje-4/" 
  prevText="← Poglavlje 3" 
  nextText="Poglavlje 4 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Kultivacija mikroorganizama." 
  ctaPrimaryText="Poglavlje 4" 
  ctaPrimaryLink="/poglavlje-4/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-3/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 3', url: '/poglavlje-3/' },
    { name: 'Vježbe 3', url: '/poglavlje-3/vjebe3/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={3} 
    currentSection="vježbe-3" 
    chapterTitle="Bojanje mikroorganizama"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    
  <section class="cards-grid">
    <article class="card-sheen">
      <h3 class="card-sheen__title">1. Bojenje karbolfuksinom</h3>
      <p>Osnovno bojenje bakterija pomoću karbolfuksina</p>
      <a href="/poglavlje-3/vjezba-3-1/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">2. Bojenje gencijanom violet</h3>
      <p>Osnovno bojenje bakterija pomoću gencijana violet</p>
      <a href="/poglavlje-3/vjezba-3-2/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">3. Bojenje metilenskim plavim</h3>
      <p>Osnovno bojenje bakterija pomoću metilenskog plavog</p>
      <a href="/poglavlje-3/vjezba-3-3/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">4. Bojenje po Gramu</h3>
      <p>Složeno diferencijalno bojenje za razlikovanje Gram-pozitivnih i Gram-negativnih bakterija</p>
      <a href="/poglavlje-3/vjezba-3-4/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">5. Test s KOH-om</h3>
      <p>Brza metoda za razlikovanje Gram-pozitivnih i Gram-negativnih bakterija</p>
      <a href="/poglavlje-3/vjezba-3-5/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">6. Bojenje po Ziehl-Neelsenu</h3>
      <p>Specifično bojenje za bakterije roda Mycobacterium</p>
      <a href="/poglavlje-3/vjezba-3-6/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">7. Bojenje endospora</h3>
      <p>Bojenje bakterijskih endospora po Schäffer-Fultonu</p>
      <a href="/poglavlje-3/vjezba-3-7/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
    
    <article class="card-sheen">
      <h3 class="card-sheen__title">8. Negativno bojenje kapsula</h3>
      <p>Negativno bojenje za dokazivanje bakterijskih kapsula</p>
      <a href="/poglavlje-3/vjezba-3-8/" style="color: var(--brand); text-decoration: none; font-weight: 600;">→ Pogledaj vježbu</a>
    </article>
  </section>

  <aside class="callout-edu callout-edu--warn">
    <strong>⚠️ Napomena:</strong> Prije izvođenja vježbi obavezno pročitajte teorijski dio o metodama bojenja bakterija.
  </aside>


  </div>

</ChapterLayout>