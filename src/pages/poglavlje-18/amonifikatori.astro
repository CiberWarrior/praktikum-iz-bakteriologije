const navigationButtons = {
  previous: {
    text: "proteolitičke želatinolitičke bakterije",
    url: "/poglavlje-18/proteoliticke-zelatinolitiske-bakterije/"
  },
  next: {
    text: "nitrifikatori",
    url: "/poglavlje-18/nitrifikatori/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={18}
  primaryColor="amber"
  breadcrumbPath={[
    { name: 'Poglavlje 18', url: '/poglavlje-18/' },
    { name: 'Amonifikatori', url: '/poglavlje-18/amonifikatori/' }
