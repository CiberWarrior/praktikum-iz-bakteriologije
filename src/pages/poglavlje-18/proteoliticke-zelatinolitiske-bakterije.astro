<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={18}
  primaryColor="amber"
  breadcrumbPath={[
    { name: 'Poglavlje 18', url: '/poglavlje-18/' },
    { name: 'Proteolitičke želatinolitičke bakterije', url: '/poglavlje-18/proteoliticke-zelatinolitiske-bakterije/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>