---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 17.2: Određivanje postotka fiziološke skupine amilolitičkih bakterija',
  description = 'Praktična vježba za određivanje postotka amilolitičkih bakterija unutar populacije ukupnih saprofitskih bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "postupak-rada",
    title: "Postupak vježbe",
    icon: "⚗️",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <p class="text-gray-300 leading-relaxed mb-3">
            Homogenizirati uzorak površinske vode u Winklerovoj boci energičnim mućkanjem. Napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-blue-300">0,1 mL</strong> uzorka iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na Petrijeve ploče s podlogom <strong class="text-blue-300">Bredemann</strong>. Paralelno, nacijepiti uzorak na Petrijeve ploče s hranjivim agarom za uzgoj aerobnih saprofitskih bakterija.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-3">📊 Analiza rezultata</h4>
          <p class="text-gray-300 leading-relaxed mb-3">
            Nakon razdoblja inkubacije prebrojiti na pločama s hranjivim agarom sve kolonije te izračunati broj ukupnih saprofitskih bakterija. Nakapati <strong class="text-green-300">lugolovu otopinu</strong> na ploče za uzgoj amilolita, izbrojiti kolonije s okolnim prozirnim zonama te izračunati broj kolonija amilolita.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-purple-500">
          <h4 class="text-lg font-semibold text-purple-300 mb-3">🧮 Izračun postotka</h4>
          <p class="text-gray-300 leading-relaxed">
            Na osnovi broja kolonija saprofitskih bakterija i broja kolonija amilolitičkih bakterija izračunati <strong class="text-purple-300">postotak amilolitičkih bakterija</strong> u populaciji ostalih saprofitskih bakterija u uzorku.
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježba 17.1",
    url: "/poglavlje-17/vjezba-17-1/"
  },
  next: {
    text: "poglavlje 18",
    url: "/poglavlje-18/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={17}
  primaryColor="lime"
  breadcrumbPath={[
    { name: 'Poglavlje 17', url: '/poglavlje-17/' },
    { name: 'Vježba 17.2: Određivanje postotka fiziološke skupine amilolitičkih bakterija', url: '/poglavlje-17/vjezba-17-2/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>