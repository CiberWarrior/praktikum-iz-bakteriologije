  ctaDescription="Nastavite s učenjem i upoznajte acidofilne bakterije."
  ctaPrimaryText="Poglavlje 18"
  ctaPrimaryLink="/poglavlje-18/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
