import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 17.1: Određivanje broja kolonija oligokarbofilnih i polikarbofilnih saprofitskih bakterija',
  description = 'Praktična vježba za određivanje broja kolonija oligokarbofilnih i polikarbofilnih saprofitskih bakterija u uzorcima tla'
} = Astro.props;

const contentBlocks = [
  {
    id: "postupak-rada",
    title: "Postupak vježbe",
    icon: "⚗️",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <p class="text-gray-300 leading-relaxed mb-3">
            Homogenizirati uzorak površinske vode u Winklerovoj boci energičnim mućkanjem. Razrijediti <strong class="text-blue-300">1 mL</strong> uzorka vode s <strong class="text-blue-300">9 mL</strong> sterilne destilirane vode s dodatkom <strong class="text-blue-300">0,3% NaCl</strong> te napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-blue-300">0,1 mL</strong> uzorka iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na Petrijeve ploče s hranjivim agarom i na ploče s istom podlogom razrijeđenom destiliranom vodom u omjeru <strong class="text-blue-300">1:10</strong>. Na Petrijevim pločama s originalnim hranjivim agarom porast će eutrofne, a na pločama s hranjivim agarom 1:10 oligotrofne bakterije.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-3">📊 Analiza rezultata</h4>
          <p class="text-gray-300 leading-relaxed mb-3">
            Nakon razdoblja inkubacije izbrojiti porasle kolonije na pločama i izračunati broj kolonija oligotrofa i eutrofa po <strong class="text-green-300">1 mL</strong> uzorka. Iz omjera broja kolonija <strong class="text-green-300">eutrofi/oligotrofi</strong> izračunati indeks opterećenja vode lako razgradivom organskom tvari. Što je manji omjer između broja kolonija eutrofa i oligotrofa, voda je manje opterećena organskom tvari i obratno.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-yellow-500">
          <h4 class="text-lg font-semibold text-yellow-300 mb-3">⚠️ Interpretacija rezultata</h4>
          <p class="text-gray-300 leading-relaxed">
            Iznad indeksa <strong class="text-yellow-300">1,0</strong> može se smatrati da je vodotok zagađen većim koncentracijama lako razgradivih organskih tvari.
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
