---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Fosfat-akumulirajuće bakterije',
  description = 'Bakterije koje intracelularno akumuliraju fosfate u obliku polifosfatnih zrnaca'
} = Astro.props;

const contentBlocks = [
  {
    id: "karakteristike",
    title: "Karakteristike i primjena",
    icon: "🏭",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed">
          Fosfat-akumulirajuće bakterije prirodno se nalaze u visoko opterećenim otpadnim vodama. Zbog svojstva akumulacije fosfata intracelularno u obliku u vodi netopivih zrnaca polifosfata primjenjuju se u uređajima za pročišćivanje otpadnih voda radi boljeg uklanjanja fosfata iz otpadnih voda.
        </p>
        <p class="text-gray-300 leading-relaxed">
          Najčešće primjenjivana metoda pročišćivanja otpadnih voda uređaji su s aktivnim muljem.
        </p>
        
        <div class="bg-gray-800 rounded-lg p-4 border border-gray-600">
          <h4 class="font-semibold text-purple-300 mb-3">Uvjeti za akumulaciju:</h4>
          <p class="text-gray-300">
            Aerobna sredina s malom količinom organske tvari i suviškom otopljenih fosfata
          </p>
        </div>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "bojenje-neisser",
    title: "Bojanje po Neisserovoj metodi",
    icon: "🔬",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed">
          One se lako mogu dokazati u flokulama aktivnog mulja bojenjem po Neisserovoj metodi. Po Neisserovoj metodi protoplazma bakterija oboji se smeđkasto, a zrnca polifosfata tamnomodro (slika 86).
        </p>

        <div class="bg-gray-800 rounded-lg p-4 border border-gray-600">
          <h4 class="font-semibold text-blue-300 mb-3">Postupak bojenja</h4>
          <ol class="list-decimal list-inside space-y-3 text-gray-300">
            <li class="leading-relaxed">
              <strong>Korak 1:</strong> Osušeni i na plamenu fiksirani razmaz prelije se otopinom boje Neisser I i boja na njemu ostavi 1–2 min.
            </li>
            <li class="leading-relaxed">
              <strong>Korak 2:</strong> Preparat se opere destiliranom vodom.
            </li>
            <li class="leading-relaxed">
              <strong>Korak 3:</strong> Preparat se prelije otopinom boje Neisser II i boja na njemu ostavi 1–2 min.
            </li>
            <li class="leading-relaxed">
              <strong>Korak 4:</strong> Preparat se opere vodom iz slavine, osuši između papira za filtriranje i promatra na mikroskopu imerzijskog objektiva.
            </li>
          </ol>
          <div class="mt-4 p-3 bg-gray-700 border border-blue-500/30 rounded-lg">
            <p class="text-blue-300 font-semibold text-sm">
              🎨 Rezultat: Protoplazma smeđkasta, zrnca polifosfata tamnomodra
            </p>
          </div>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "mikroskopski-prikaz",
    title: "Mikroskopski prikaz",
    icon: "🔍",
    content: `
      <div class="space-y-4">
        <figure class="image-figure">
          <img
            src="/Images/slika86.jpg"
            alt="Plavo obojena zrnca polifosfata u flokuli aktivnog mulja"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-green-100 text-green-800 px-3 py-1 rounded-full text-sm font-medium">Slika 86</span>
            <span class="block mt-2 text-gray-300">Plavo obojena zrnca polifosfata u flokuli aktivnog mulja</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  }
];

const navigationButtons = {
  previous: {
    text: "fosfomobilizatori",
    url: "/poglavlje-20/fosfomobilizatori/"
  },
  next: {
    text: "vježbe 20",
    url: "/poglavlje-20/vjezba-20/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={20}
  primaryColor="teal"
  breadcrumbPath={[
    { name: 'Poglavlje 20', url: '/poglavlje-20/' },
    { name: 'Fosfat-akumulirajuće bakterije', url: '/poglavlje-20/fosfat-akumulirajuce-bakterije/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>