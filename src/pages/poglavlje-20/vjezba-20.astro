---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Vježbe 20: Biogeokemijski ciklus fosfora',
  description = 'Praktične vježbe s fosfat-akumulirajućim bakterijama i fosfomobilizatorima'
} = Astro.props;

const contentBlocks = [
  {
    id: "vjezba-1",
    title: "1. Određivanje broja kolonija fiziološke skupine fosfomobilizatora",
    icon: "⚡",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-800 rounded-lg p-4 border border-gray-600">
          <p class="text-gray-300 leading-relaxed">
            Homogenizirati uzorak površinske vode u Winklerovoj boci energičnim mućkanjem. Napraviti seriju decimalnih razrjeđenja uzorka. Po 0,1 mL uzorka iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na Petrijeve ploče s podlogama za uzgoj fosfomibilizirajućih bakterija. Nakon inkubacije 22°C/72 h na podlogama za uzgoj fosfomibilizirajućih bakterija izbrojiti kolonije s okolnim prozirnim zonama te izračunati broj kolonija fosfomobilizatora po 1 mL uzorka vode.
          </p>
        </div>
        
        <div class="bg-gray-700 border border-orange-500/30 rounded-lg p-4">
          <p class="text-orange-300 font-semibold">
            🎯 Pozitivna reakcija: Kolonije s okolnim prozirnim zonama
          </p>
        </div>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "vjezba-2",
    title: "2. Bojanje zrnaca polifosfata u fosfat-akumulirajućim bakterijama",
    icon: "🔬",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-800 rounded-lg p-4 border border-gray-600">
          <p class="text-gray-300 leading-relaxed">
            Uzeti uzorak aktivnog mulja iz aerobnog bazena uređaja za pročišćivanje otpadnih voda. Kapalicom uzeti uzorak i napraviti razmaz na predmetnom stakalcu. Obojiti prema uputama za bojanje po Neisseru. Mikroskopirati pod imerzijom. Nakupine polifosfata vide se kao jasno ograničena tamnoplava zrnca.
          </p>
        </div>
        
        <div class="bg-gray-700 border border-blue-500/30 rounded-lg p-4">
          <p class="text-blue-300 font-semibold">
            🎨 Rezultat: Jasno ograničena tamnoplava zrnca polifosfata
          </p>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "fosfat-akumulirajuće bakterije",
    url: "/poglavlje-20/fosfat-akumulirajuce-bakterije/"
  },
  next: {
    text: "poglavlje 21",
    url: "/poglavlje-21/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={20}
  primaryColor="teal"
  breadcrumbPath={[
    { name: 'Poglavlje 20', url: '/poglavlje-20/' },
    { name: 'Vježbe 20: Biogeokemijski ciklus fosfora', url: '/poglavlje-20/vjezba-20/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>