---
import SubPageLayout from '../../components/SubPageLayout.astro';
import Icon from '../../components/ui/Icon.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Spaljivanje',
  description = 'Sterilizacija spaljivanjem za biljne i životinjske mikroorganizme'
} = Astro.props;
---

<SubPageLayout 
  title={title} 
  description={description}
  chapterNumber={2}
  primaryColor="red"
  breadcrumbPath={[
    { name: 'Spaljivanje', url: '/poglavlje-2/spaljivanje/' }
  ]}
>

  <!-- Main Content with Sidebar -->
  <div class="flex max-w-7xl mx-auto">
    
    <!-- Table of Contents Sidebar -->
    <aside class="hidden lg:block w-64 p-6 bg-gradient-to-b from-gray-50 to-gray-100 border-r border-gray-200 sticky top-0 h-screen overflow-y-auto shadow-lg">
      <div class="mb-6">
        <div class="flex items-center mb-6">
          <div class="w-8 h-8 bg-red-600 rounded-lg flex items-center justify-center mr-3">
            <Icon name="IconFlame" class="w-5 h-5 text-white" />
          </div>
          <h3 class="text-xl font-bold text-gray-900">Sadržaj stranice</h3>
        </div>
        
        <!-- Bookmark Button -->
        <button id="bookmark-btn" class="flex items-center space-x-3 text-sm text-gray-600 hover:text-red-600 transition-all duration-300 mb-6 p-3 rounded-lg hover:bg-red-50 w-full">
          <Icon id="bookmark-icon" name="IconBookmark" class="w-5 h-5" />
          <span id="bookmark-text" class="font-medium">Označiti kao bookmark</span>
        </button>
        
        <!-- Table of Contents -->
        <nav class="space-y-1">
          <div class="text-xs font-semibold text-gray-500 uppercase tracking-wide mb-2">Sadržaj stranice</div>
          <a href="#opis-metode" class="toc-link group flex items-center text-sm text-gray-600 hover:text-red-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-red-50" data-target="opis-metode">
            <span class="w-2 h-2 bg-red-400 rounded-full mr-3 transition-all duration-300"></span>
            Opis metode
          </a>
          <a href="#sigurnosni-postupci" class="toc-link group flex items-center text-sm text-gray-600 hover:text-red-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-red-50" data-target="sigurnosni-postupci">
            <span class="w-2 h-2 bg-red-400 rounded-full mr-3 transition-all duration-300"></span>
            Sigurnosni postupci
          </a>
          <a href="#primjena" class="toc-link group flex items-center text-sm text-gray-600 hover:text-red-600 transition-all duration-300 py-2 px-3 rounded-lg hover:bg-red-50" data-target="primjena">
            <span class="w-2 h-2 bg-red-400 rounded-full mr-3 transition-all duration-300"></span>
            Primjena
          </a>
        </nav>
      </div>
    </aside>

    <!-- Main Content -->
    <main class="flex-1 px-6 py-8">
      <div class="max-w-4xl mx-auto">
        <div class="prose prose-lg max-w-none">
          
          <!-- Content Blocks -->
          <div class="space-y-8">
            
            <!-- Opis metode -->
            <div id="opis-metode" class="bg-gradient-to-br from-red-50 to-orange-50 rounded-xl p-8 shadow-lg border border-red-200">
              <div class="flex items-center mb-6">
                <div class="w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mr-4">
                  <Icon name="IconFlame" class="w-8 h-8 text-white" />
                </div>
                <h3 class="text-2xl font-bold text-red-900">Opis metode</h3>
              </div>
              <div class="bg-white rounded-lg p-6 shadow-sm">
                <h4 class="text-xl font-semibold text-red-800 mb-4 flex items-center">
                  <Icon name="IconThermometer" class="w-6 h-6 mr-2 text-red-600" />
                  Sterilizacija spaljivanjem
                </h4>
                <p class="text-gray-700 leading-relaxed mb-4">
                  Koristi se za predmete, biljne i životinjske organizme zaražene patogenim mikroorganizmima visokorizičnim za zdravlje. Visoka temperatura razvijena pri spaljivanju ubija sve mikroorganizme, pa i najotpornije spore.
                </p>
               </div>
              </div>
            </div>
          </div>
        </div>
      </div>

         
                

  <!-- Navigacijski gumbovi -->
  <div class="flex justify-between mt-16 mb-8 max-w-4xl mx-auto px-4 sm:px-6">
    <!-- Prethodna stranica -->
    <a
      href="/poglavlje-2/fizicka-sterilizacija/"
      class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-gray-600 to-gray-700 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 no-underline transform hover:-translate-y-1"
      aria-label="Prijeđi na prethodnu stranicu: Fizička sterilizacija"
    >
      <Icon name="IconChevronLeft" class="w-5 h-5 mr-3" />
      <span class="text-lg">Fizička sterilizacija</span>
    </a>
    
    <!-- Iduća stranica -->
    <a
      href="/poglavlje-2/zarenje/"
      class="inline-flex items-center justify-center px-8 py-4 bg-gradient-to-r from-emerald-600 to-emerald-700 text-white font-semibold rounded-full shadow-lg hover:shadow-xl transition-all duration-300 no-underline transform hover:-translate-y-1"
      aria-label="Prijeđi na sljedeću stranicu: Žarenje"
    >
      <span class="text-lg">Žarenje</span>
      <Icon name="IconChevronRight" class="w-5 h-5 ml-3" />
    </a>
  </div>

</SubPageLayout>

<script>
  // Bookmark functionality
  document.addEventListener('DOMContentLoaded', () => {
    const bookmarkBtn = document.getElementById('bookmark-btn');
    const bookmarkIcon = document.getElementById('bookmark-icon');
    const bookmarkText = document.getElementById('bookmark-text');
    
    if (bookmarkBtn && bookmarkText) {
      bookmarkBtn.addEventListener('click', () => {
        const isBookmarked = bookmarkBtn.classList.contains('text-red-600');
        
        if (isBookmarked) {
          bookmarkBtn.classList.remove('text-red-600', 'bg-red-50');
          bookmarkBtn.classList.add('text-gray-600');
          bookmarkText.textContent = 'Označiti kao bookmark';
          localStorage.removeItem('bookmark-spaljivanje');
        } else {
          bookmarkBtn.classList.add('text-red-600', 'bg-red-50');
          bookmarkBtn.classList.remove('text-gray-600');
          bookmarkText.textContent = 'Ukloniti bookmark';
          localStorage.setItem('bookmark-spaljivanje', 'true');
        }
      });
      
      // Check if already bookmarked
      if (localStorage.getItem('bookmark-spaljivanje')) {
        bookmarkBtn.classList.add('text-red-600', 'bg-red-50');
        bookmarkBtn.classList.remove('text-gray-600');
        bookmarkText.textContent = 'Ukloniti bookmark';
      }
    }
    
    // TOC functionality
    const tocLinks = document.querySelectorAll('.toc-link');
    const sections = document.querySelectorAll('[id]');
    
    const observerOptions = {
      rootMargin: '-20% 0px -80% 0px',
      threshold: 0
    };
    
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          const id = entry.target.id;
          tocLinks.forEach(link => {
            link.classList.remove('text-red-600', 'bg-red-50');
            link.classList.add('text-gray-600');
            if (link.getAttribute('data-target') === id) {
              link.classList.add('text-red-600', 'bg-red-50');
              link.classList.remove('text-gray-600');
            }
          });
        }
      });
    }, observerOptions);
    
    sections.forEach(section => {
      observer.observe(section);
    });
  });
</script>

<style>
  .toc-link.active {
    @apply text-red-600 bg-red-50 font-semibold;
  }
  
  .toc-link.active span {
    @apply w-3 h-3 scale-125;
  }
</style>