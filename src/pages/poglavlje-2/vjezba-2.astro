---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Untitled',
  description = 'Sadržaj poglavlja 2 - Untitled'
} = Astro.props;

const chapterConfig = getChapterConfig(2);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={2}
  primaryColor="blue"
  prevLink="/poglavlje-2/" 
  nextLink="/poglavlje-3/" 
  prevText="← Poglavlje 2" 
  nextText="Poglavlje 3 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Bojanje mikroorganizama." 
  ctaPrimaryText="Poglavlje 3" 
  ctaPrimaryLink="/poglavlje-3/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-2/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 2', url: '/poglavlje-2/' },
    { name: 'Untitled', url: '/poglavlje-2/untitled/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={2} 
    currentSection="untitled" 
    chapterTitle="Mikroskopija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    
