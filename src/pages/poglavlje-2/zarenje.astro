---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Žarenje',
  description = 'Sterilizacija žarenjem - metoda za metalne instrumente'
} = Astro.props;

const contentBlocks = [
  {
    id: "opis-metode",
    title: "Opis metode",
    icon: "🔥",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <h4 class="text-xl font-semibold text-red-300 mb-4">Sterilizacija žarenjem</h4>
        <p class="text-gray-300 leading-relaxed mb-6">
          Obavlja se izlaganjem zagađenih predmeta izravnom djelovanju plamena dok se ne usijaju. Tako se steriliziraju uglavnom metalni predmeti, prije svega bakteriološke ušice (slika 16), igle, oštrice skalpela i sl.
        </p>
        
        <!-- Slika -->
        <figure class="image-figure bg-white rounded-lg p-4 shadow-sm">
          <img src="/Images/slika16.jpg" alt="Bakteriološke ušice" class="w-3/5 h-auto rounded-lg mx-auto" />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">Slika 16</span>
            <span class="block mt-2 text-gray-700">Žarenje bakteriološke ušice</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "spaljivanje",
    url: "/poglavlje-2/spaljivanje/"
  },
  next: {
    text: "opaljivanje",
    url: "/poglavlje-2/opaljivanje/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={2}
  primaryColor="blue"
  breadcrumbPath={[
    { name: 'Žarenje', url: '/poglavlje-2/zarenje/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>
