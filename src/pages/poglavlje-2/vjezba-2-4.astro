---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 2.4 - Membranska filtracija',
  description = 'Praktična vježba membranske filtracije bunarske vode'
} = Astro.props;

const contentBlocks = [
  {
    id: "opis-metode",
    title: "Opis metode",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          Uzorak bunarske vode uzeti u Winklerovu bocu. Pripremiti uređaj za membransku filtraciju i membranski filtar s promjerom pora 0,2 μm. Profiltrirati 100 mL uzorka kroz filtar te ga položiti na Petrijevu ploču s hranjivim agarom (slika 18). Nacijepljenu ploču inkubirati na 22°C/72 h. Nakon inkubacije, na pločama izbrojiti broj poraslih kolonija sadržanih u 100 mL bunarske vode.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "slike",
    title: "Postavljanje membranskog filtra i porasle kolonije",
    icon: "🧫",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
          
          <!-- Slika 18 -->
          <figure class="image-figure">
            <img src="/Images/slika18.jpg" alt="Postavljanje membranskog filtra na hranjivu podlogu." class="w-3/5 h-auto rounded-lg mx-auto" />
            <figcaption class="mt-4 text-center">
              <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">Slika 18</span>
              <span class="block mt-2 text-gray-300">Postavljanje membranskog filtra na hranjivu podlogu</span>
            </figcaption>
          </figure>

          <!-- Slika 18b -->
          <figure class="image-figure">
            <img src="/Images/slika18b.jpg" alt="Porasle plave kolonije Escherichia coli na membranskom filtru" class="w-3/5 h-auto rounded-lg mx-auto" />
            <figcaption class="mt-4 text-center">
              <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">Slika 18b</span>
              <span class="block mt-2 text-gray-300">Porasle plave kolonije <em>Escherichia coli</em> na membranskom filtru</span>
            </figcaption>
          </figure>

        </div>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježba 2.3",
    url: "/poglavlje-2/vjezba-2-3/"
  },
  next: {
    text: "vježba 2.5",
    url: "/poglavlje-2/vjezba-2-5/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={2}
  primaryColor="green"
  breadcrumbPath={[
    { name: 'Vježba 2.4 - Membranska filtracija', url: '/poglavlje-2/vjezba-2-4/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>
