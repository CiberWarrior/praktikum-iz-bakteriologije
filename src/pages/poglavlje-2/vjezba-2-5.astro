---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 2.5 - Priprema kosog agara',
  description = 'Postupak pripreme kosog hranjivog agara za uzgoj bakterijskih kultura'
} = Astro.props;

const contentBlocks = [
  {
    id: "postupak",
    title: "Postupak",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          U Erlenmeyerovu tikvicu odvagati određenu količinu odabranog dehidriranog hranjivog agaroznog medija prema uputi proizvođača i nadoliti destilirane vode do 1L. Provjeriti pH-vrijednost otopine pH-metrom. Na plameniku zagrijati u loncu vodovodnu vodu, te u lonac staviti sadržaj u Erlenmeyerovoj tikvici. Zagrijati vodu do vrenja i rastopiti medij 5 min. U pripremljene epruvete pipetirati po 7 mL toplog medija. Epruvete začepiti čepom. Epruvete autoklavirati na 121°C/20 min. Nakon autoklaviranja epruvete ukositi (slika 19) i ostaviti da se skrutnu.
        </p>
        
        <!-- Slika 19 -->
        <figure class="image-figure w-3/5 h-auto rounded-lg mx-auto mt-4">
          <img 
            src="/Images/slika19.jpg" 
            alt="Priprema kosih agara - Sterilizacija" 
            class="w-full h-auto rounded-lg shadow-lg"
          />
          <figcaption class="text-center inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium block mt-2 text-gray-700">
            Slika 19. Priprema kosih aga. 
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježba 2.4",
    url: "/poglavlje-2/vjezba-2-4/"
  },
  next: {
    text: "poglavlje 3",
    url: "/poglavlje-3/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={2}
  primaryColor="green"
  breadcrumbPath={[
    { name: 'Vježba 2.5 - Priprema kosog agara', url: '/poglavlje-2/vjezba-2-5/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>
