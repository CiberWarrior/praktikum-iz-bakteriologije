---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 2.1 - Ispitati učinak vremena kuhanja na bakterije',
  description = 'Praktična vježba o učinku vremena kuhanja na bakterije'
} = Astro.props;

const contentBlocks = [
  {
    id: "postupak",
    title: "Postupak",
    icon: "⚗️",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          Suspendirati i homogenizirati 1 g svježeg tla u epruvetu s 9 mL sterilne destilirane vode s dodatkom 0,3% NaCl. Za ispitivanje učinka kuhanja u vodenoj pari na smanjenje broja bakterija epruvetu sa suspenzijom tla staviti u Kochov lonac ili u lonac s uzavrelom vodom. Epruvetu izvaditi nakon 3 min kuhanja, uzeti 0,1 mL uzorka i razmazati drygalskim štapićem po Petrijevoj zdjelici s hranjivim agarom. Istu epruvetu ponovno staviti u Kochov lonac te uzeti uzorak nakon 10 i 20 min kuhanja. Petrijeve zdjelice s nacijepljenih 0,1 mL uzorka nakon 3, 10 i 20 min kuhanja staviti u inkubator na 22°C/72 h. Nakon inkubacije, na svakoj ploči izbrojati broj poraslih kolonija i zaključiti o djelotvornosti vremena kuhanja na 100°C na uklanjanje bakterija u suspenziji tla.
        </p>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  }
];

const navigationButtons = {
  previous: {
    text: "hladna sterilizacija ili membranska filtracija",
    url: "/poglavlje-2/hladna-sterilizacija/"
  },
  next: {
    text: "vježba 2.2",
    url: "/poglavlje-2/vjezba-2-2/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={2}
  primaryColor="green"
  breadcrumbPath={[
    { name: 'Vježba 2.1 - Ispitati učinak vremena kuhanja na bakterije', url: '/poglavlje-2/vjezba-2-1/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>
