<QuizTemplate
  chapterNumber={2}
  chapterTitle="Sterilizacija i dezinfekcija"
  chapterDescription="Provjeri svoje znanje iz poglavlja o sterilizaciji i dezinfekciji"
  primaryColor="blue"
  questions={questions}
  prevLink="/poglavlje-2/"
  nextLink="/poglavlje-3/"
  prevText="← Povratak na Poglavlje 2"
  nextText="Poglavlje 3 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem i upoznajte metode bojenja bakterija."
  ctaPrimaryText="Poglavlje 3"
  ctaPrimaryLink="/poglavlje-3/"
