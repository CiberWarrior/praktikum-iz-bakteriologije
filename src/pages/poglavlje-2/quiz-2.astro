import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    "question": "Koja je najefikasnija metoda sterilizacije za stakleno posuđe?",
    "options": {
      "a": "Kuhanje",
      "b": "Autoklaviranje",
      "c": "Pasterizacija",
      "d": "Flambiranje"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što je glavna prednost suhe sterilizacije?",
    "options": {
      "a": "Brza je",
      "b": "Jeftina je",
      "c": "Ne oštećuje stakleno posuđe",
      "d": "Efikasna je za sve materijale"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koja temperatura se koristi u autoklavu za sterilizaciju?",
    "options": {
      "a": "100°C",
      "b": "121°C",
      "c": "160°C",
      "d": "180°C"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što je glavna svrha kemijske sterilizacije?",
    "options": {
      "a": "Ubrzavanje rasta bakterija",
      "b": "Sprečavanje kontaminacije",
      "c": "Bojenje bakterija",
      "d": "Mikroskopiranje"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koja metoda se koristi za sterilizaciju termolabilnih materijala?",
    "options": {
      "a": "Autoklaviranje",
      "b": "Suha sterilizacija",
      "c": "Filtracija",
      "d": "Flambiranje"
    },
    "correctAnswer": "a"
  }
];

const breadcrumbPath = [
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 2', url: '/poglavlje-2/' },
    { name: 'Quiz 2', url: '/poglavlje-2/quiz-2/' }
  ];
