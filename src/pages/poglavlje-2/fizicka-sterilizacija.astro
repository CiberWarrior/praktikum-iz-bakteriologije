---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Fizička sterilizacija',
  description = 'Sadržaj poglavlja 2 - Fizička sterilizacija'
} = Astro.props;

const chapterConfig = getChapterConfig(2);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={2}
  primaryColor="blue"
  prevLink="/poglavlje-2/" 
  nextLink="/poglavlje-3/" 
  prevText="← Poglavlje 2" 
  nextText="Poglavlje 3 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Bojanje mikroorganizama." 
  ctaPrimaryText="Poglavlje 3" 
  ctaPrimaryLink="/poglavlje-3/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-2/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 2', url: '/poglavlje-2/' },
    { name: 'Fizička sterilizacija', url: '/poglavlje-2/fizikasterilizacija/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={2} 
    currentSection="fizička-sterilizacija" 
    chapterTitle="Mikroskopija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<div style="background: linear-gradient(135deg, #e8f4fd 0%, #d1ecf1 100%); border-radius: 15px; padding: 25px; margin: 20px 0;">
  
  <div style="background: rgba(255,255,255,0.9); padding: 20px; border-radius: 10px; margin-bottom: 20px; border-left: 4px solid #2196f3;">
    <div style="display: flex; align-items: center; margin-bottom: 15px;">
      <h3 style="margin: 0; color: #1565c0; font-size: 1.3rem; font-weight: 600;">Pregled metoda fizičke sterilizacije</h3>
    </div>
    <p style="margin: 0; color: #2d3748; line-height: 1.6;">
      Fizička sterilizacija uključuje metode koje koriste fizičke agense za uništavanje svih oblika mikrobnog života, uključujući vegetativne stanice, spore i viruse.
    </p>
  </div>

  <div style="background: rgba(255,255,255,0.9); padding: 20px; border-radius: 10px; margin-bottom: 20px; border-left: 4px solid #ff9800;">
    <div style="display: flex; align-items: center; margin-bottom: 15px;">
      <h4 style="margin: 0; color: #f57c00; font-size: 1.2rem; font-weight: 600;">Osnovne metode:</h4>
    </div>
    
    <div style="display: grid; gap: 15px;">
      
      <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #ff5722;">
        <div style="display: flex; align-items: center; margin-bottom: 8px;">
          <strong style="color: #d84315; font-size: 14px;">Toplina</strong>
        </div>
        <p style="margin: 0; color: #495057; line-height: 1.5; font-size: 14px;">
          Najčešći i najsigurniji način sterilizacije
        </p>
      </div>
      
      <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #9c27b0;">
        <div style="display: flex; align-items: center; margin-bottom: 8px;">
          <strong style="color: #7b1fa2; font-size: 14px;">Zračenje</strong>
        </div>
        <p style="margin: 0; color: #495057; line-height: 1.5; font-size: 14px;">
          UV, gama zračenje, elektronski snop
        </p>
      </div>
      
      <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #4caf50;">
        <div style="display: flex; align-items: center; margin-bottom: 8px;">
          <strong style="color: #388e3c; font-size: 14px;">Filtracija</strong>
        </div>
        <p style="margin: 0; color: #495057; line-height: 1.5; font-size: 14px;">
          Uklanjanje mikroorganizama prolaskom kroz filtre
        </p>
      </div>
      
      <div style="background: #f8f9fa; padding: 15px; border-radius: 8px; border-left: 4px solid #2196f3;">
        <div style="display: flex; align-items: center; margin-bottom: 8px;">
          <strong style="color: #1565c0; font-size: 14px;">Mehanička obrada</strong>
        </div>
        <p style="margin: 0; color: #495057; line-height: 1.5; font-size: 14px;">
          Ultrazvuk, visoki tlak
        </p>
      </div>
      
    </div>
  </div>

  <div style="background: rgba(255,255,255,0.9); padding: 20px; border-radius: 10px; border-left: 4px solid #4caf50;">
    <div style="display: flex; align-items: center; margin-bottom: 15px;">
      <h4 style="margin: 0; color: #388e3c; font-size: 1.2rem; font-weight: 600;">Prednosti fizičke sterilizacije</h4>
    </div>
    <p style="margin: 0; color: #2d3748; line-height: 1.6;">
      Fizička sterilizacija se smatra najsigurnijom jer ne ostavlja ostatke kemijskih tvari u steriliziranom materijalu.
    </p>
  </div>

</div>

  </div>

</ChapterLayout>