---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 12',
  description = 'Vježbe iz anaerobnih bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "vjezba-1",
    title: "1. Izolacija anaerobnih bakterija iz površinskih voda",
    icon: "🦠",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-pink-500">
          <h4 class="text-lg font-semibold text-pink-300 mb-2">🧪 Priprema uzorka</h4>
          <p class="text-gray-300 leading-relaxed">
            Od uzorka površinske vode iz Winklerove boce napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-pink-300">0,1 mL</strong> iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na hranjivi agar.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-purple-500">
          <h4 class="text-lg font-semibold text-purple-300 mb-2">🫙 Anaerobna atmosfera</h4>
          <p class="text-gray-300 leading-relaxed">
            Za postizanje anaerobne sredine koristi se posebna posuda (slika 61). U nju se stavi komercijalni reagens koji kemijski veže kisik i stvara anaerobnu atmosferu samo s <strong class="text-purple-300">CO₂</strong>. U posudu se stave inokulirane Petrijeve zdjelice i ona se zaklopi.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🌡️ Inkubacija</h4>
          <p class="text-gray-300 leading-relaxed">
            Pripremljena se posuda stavi u inkubator. Anaerobna se atmosfera postiže otprilike <strong class="text-blue-300">30 min</strong> nakon zaklapanja. Nakon razdoblja inkubacije (<strong class="text-blue-300">22°C/72 h</strong>) izbrojiti kolonije (slika 62) i izračunati broj anaerobnih bakterija po 1 mL uzorka.
          </p>
        </div>
        
        <figure class="image-figure">
          <img
            src="/Images/slika62.jpg"
            alt="Kolonije anaerobnih bakterija porasle na hranjivom agaru"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-pink-100 text-pink-800 px-3 py-1 rounded-full text-sm font-medium">Slika 62</span>
            <span class="block mt-2 text-gray-300">Kolonije anaerobnih bakterija porasle na hranjivom agaru</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "pink-500/30",
    iconGradient: "from-pink-400 to-pink-600"
  }
];

const navigationButtons = {
  previous: {
    text: "anaerobne bakterije",
    url: "/poglavlje-12/anaerobne-bakterije/"
  },
  next: {
    text: "poglavlje 13",
    url: "/poglavlje-13/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={12}
  primaryColor="pink"
  breadcrumbPath={[
    { name: 'Poglavlje 12', url: '/poglavlje-12/' },
    { name: 'Vježbe 12', url: '/poglavlje-12/vjezba-12/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>