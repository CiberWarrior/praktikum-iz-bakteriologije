---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 12',
  description = 'Sadržaj poglavlja 12 - Vježbe 12'
} = Astro.props;

const chapterConfig = getChapterConfig(12);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={12}
  primaryColor="red"
  prevLink="/poglavlje-12/" 
  nextLink="/poglavlje-13/" 
  prevText="← Poglavlje 12" 
  nextText="Poglavlje 13 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Higijena i dezinfekcija." 
  ctaPrimaryText="Poglavlje 13" 
  ctaPrimaryLink="/poglavlje-13/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-12/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 12', url: '/poglavlje-12/' },
    { name: 'Vježbe 12', url: '/poglavlje-12/vjebe12/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={12} 
    currentSection="vježbe-12" 
    chapterTitle="Epidemiologija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<h3 style="color: #096279; font-size: 1.4rem; font-weight: 600; margin: 1.5rem 0 1rem 0;">Sadržaj vježbi</h3>

1. [Izolacija anaerobnih bakterija iz površinskih voda](/poglavlje-12/vjezbe/vjezba-12-1)

[← Povratak na Poglavlje 12](/poglavlje-12/)

  </div>

</ChapterLayout>