---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Anaerobne bakterije',
  description = 'Neke su bakterije u odnosu prema kisiku obligatni anaerobi, što znači da neće rasti u okolišu s atmosferskom koncentracijom kisika.'
} = Astro.props;

const contentBlocks = [
  {
    id: "obligatni-anaerobi",
    title: "Obligatni anaerobi",
    icon: "🔒",
    content: `
      <p class="text-gray-300 leading-relaxed mb-4">
        Neke su bakterije u odnosu prema kisiku obligatni anaerobi, što znači da neće rasti u okolišu s atmosferskom koncentracijom kisika.
      </p>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "vrste-bakterija",
    title: "Vrste anaerobnih bakterija",
    icon: "🦠",
    content: `
      <p class="text-gray-300 leading-relaxed mb-4">
        Takve skupine bakterija su disimilatorne sulfat-reducirajuće bakterije, anaerobni Gram-negativni koki, bakterije roda <em class="text-orange-300">Clostridium</em>.
      </p>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "uvjeti-kultivacije",
    title: "Uvjeti kultivacije",
    icon: "🧫",
    content: `
      <p class="text-gray-300 leading-relaxed mb-4">
        Za uzgoj pojedinačnih kolonija takvih bakterija potrebni su posebni uvjeti kultivacije s atmosferom bez kisika.
      </p>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "anaerobna-posuda",
    title: "Posuda za anaerobnu inkubaciju",
    icon: "🫙",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed mb-4">
          Za postizanje anaerobne sredine koristi se posebna posuda (slika 61). U posudu se stavi komercijalni reagens koji kemijski veže kisik i stvara anaerobnu atmosferu samo s CO₂. U posudu se stave inokulirane Petrijeve zdjelice i ona se zaklopi. Pripremljena se posuda stavi u inkubator na odabranu temperaturu inkubacije. Anaerobna se atmosfera postiže otprilike 30 min nakon zaklapanja.
        </p>
        
        <figure class="image-figure">
          <img
            src="/Images/slika61.jpg"
            alt="Posuda za anaerobnu inkubaciju"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">Slika 61</span>
            <span class="block mt-2 text-gray-300">Posuda za anaerobnu inkubaciju</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "poglavlje 12",
    url: "/poglavlje-12/"
  },
  next: {
    text: "vježbe 12",
    url: "/poglavlje-12/vjezba-12/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={12}
  primaryColor="pink"
  breadcrumbPath={[
    { name: 'Poglavlje 12', url: '/poglavlje-12/' },
    { name: 'Anaerobne bakterije', url: '/poglavlje-12/anaerobne-bakterije/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>