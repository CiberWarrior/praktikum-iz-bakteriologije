  title={title}
  description={description}
  chapterNumber={5}
  primaryColor="blue"
  breadcrumbPath={[
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Test na Kliglerovu dvostrukom šećeru', url: '/poglavlje-5/test-na-kliglerovu-dvostrukom-seceru/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>