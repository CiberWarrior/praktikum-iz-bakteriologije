---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Biokemijska svojstva bakterija',
  description = 'Detaljan pregled biokemijskih svojstava bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "content",
    title: "Biokemijska svojstva bakterija",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Biokemijska svojstva bakterija su ključna za njihovu identifikaciju i klasifikaciju. Ova svojstva uključuju sposobnost bakterija da koriste različite izvore ugljika i energije, proizvode specifične enzime, te reagiraju na različite biokemijske testove.
        </p>
        <p class="text-gray-300 leading-relaxed">
          Testiranje biokemijskih svojstava omogućava diferencijaciju između različitih vrsta bakterija na temelju njihovih metaboličkih karakteristika. Ovi testovi su posebno važni u kliničkoj mikrobiologiji za identifikaciju patogenih bakterija.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "Poglavlje 5",
    url: "/poglavlje-5/"
  },
  next: {
    text: "Razgradnja ugljikohidrata",
    url: "/poglavlje-5/razgradnja-ugljikohidrata/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={5}
  primaryColor="blue"
  breadcrumbPath={[
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Biokemijska svojstva bakterija', url: '/poglavlje-5/biokemijska-svojstva-bakterija/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>