import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Biokemijska svojstva bakterija',
  description = 'Sadržaj poglavlja 5 - Biokemijska svojstva bakterija'
} = Astro.props;

const chapterConfig = getChapterConfig(5);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={5}
  primaryColor="cyan"
  prevLink="/poglavlje-5/" 
  nextLink="/poglavlje-6/" 
  prevText="← Poglavlje 5" 
  nextText="Poglavlje 6 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Antibiotici i antimikrobna sredstva." 
  ctaPrimaryText="Poglavlje 6" 
  ctaPrimaryLink="/poglavlje-6/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-5/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Biokemijska svojstva bakterija', url: '/poglavlje-5/biokemijskasvojstvabakterija/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={5} 
    currentSection="biokemijska-svojstva-bakterija" 
    chapterTitle="Identifikacija bakterija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

Determinacija bakterija osniva se na određivanju morfoloških i biokemijskih (fizioloških) odlika bakterija, na osnovi sustava za njihovu determinaciju među kojima je najpoznatiji priručnik koji je osmislio mikrobiolog Bergey (1923.), njemu u čast prozvan [*Bergey's Manual of Determinative Bacteriology*](https://www.bergeys.org/publications). U tom kapitalnom djelu surađuju vodeći bakteriolozi svijeta, specijalisti za mnogobrojne skupine bakterija, sa svim poznatim vrstama. „Berđi", kako ga u praksi zovemo, svakih nekoliko godina doživljava nova izdanja, utemeljenana najnovijim spoznajama o genetici i biokemijskim osobinama bakterija,posebno inventarizaciji novih sojeva i vrsta.



  </div>

</ChapterLayout>