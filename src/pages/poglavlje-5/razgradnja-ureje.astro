  title?: string;
  description?: string;
}

const { 
  title = 'Razgradnja ureje',
  description = 'Sadržaj poglavlja 5 - Razgradnja ureje'
} = Astro.props;

const chapterConfig = getChapterConfig(5);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={5}
  primaryColor="cyan"
  prevLink="/poglavlje-5/" 
  nextLink="/poglavlje-6/" 
  prevText="← Poglavlje 5" 
  nextText="Poglavlje 6 →" 
