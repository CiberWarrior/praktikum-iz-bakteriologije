---
import ChapterLayout from '../../components/ChapterLayout.astro';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Quiz - Poglavlje 5',
  description = 'Provjeri svoje znanje iz poglavlja o biokemijskim svojstvima bakterija'
} = Astro.props;
---

<ChapterLayout 
  title={title}
  description={description}
  chapterNumber={5}
  primaryColor="red"
  prevLink="/poglavlje-5/"
  nextLink="/poglavlje-6/" 
  prevText="← Povratak na Poglavlje 5"
  nextText="Poglavlje 6 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte metode brojanja bakterija." 
  ctaPrimaryText="Poglavlje 6" 
  ctaPrimaryLink="/poglavlje-6/" 
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Quiz 5', url: '/poglavlje-5/quiz-5/' }
  ]}
>

  <!-- Quiz Header -->
  <div class="bg-gradient-to-br from-red-50 to-red-100 rounded-xl p-8 border-2 border-red-200 mb-8">
    <div class="text-center">
      <div class="w-20 h-20 bg-red-600 rounded-full flex items-center justify-center mx-auto mb-6">
        <svg class="w-10 h-10 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <h1 class="text-3xl font-bold text-red-900 mb-4">Quiz - Poglavlje 5</h1>
      <p class="text-red-700 text-xl mb-6">Biokemijska svojstva bakterija</p>
      <div class="bg-white rounded-lg p-4 inline-block">
        <p class="text-red-800 text-lg font-semibold">5 pitanja • Bez vremena • Detaljni rezultat</p>
      </div>
    </div>
  </div>

  <!-- Quiz Instructions -->
  <div class="bg-red-50 rounded-xl p-6 border border-red-200 mb-8">
    <div class="flex items-start">
      <div class="flex-shrink-0 w-12 h-12 bg-red-600 rounded-lg flex items-center justify-center mr-4">
        <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div>
        <h3 class="text-xl font-bold text-red-900 mb-3">Upute za quiz</h3>
        <ul class="text-red-800 space-y-2">
          <li>Odgovorite na sva 5 pitanja</li>
          <li>Svako pitanje ima 4 moguća odgovora (a, b, c, d)</li>
          <li>Možete promijeniti odgovor prije slanja</li>
          <li>Nakon slanja vidjet ćete svoj rezultat i postotak uspjeha</li>
          <li>Možete pokušati ponovno ako niste zadovoljni rezultatom</li>
        </ul>
      </div>
    </div>
  </div>

  <!-- Quiz Form -->
  <div class="bg-white rounded-xl shadow-lg p-8 border border-gray-200">
    <form id="quizForm" class="space-y-8">
      <!-- Question 1 -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">1. Što je katalaza test?</h3>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q1" value="a" class="mr-3 text-red-600" required>
            <span class="text-gray-700">a) Test za pokretljivost bakterija</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q1" value="b" class="mr-3 text-red-600" required>
            <span class="text-gray-700">b) Test za detekciju enzima katalaze</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q1" value="c" class="mr-3 text-red-600" required>
            <span class="text-gray-700">c) Test za bojenje po Gramu</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q1" value="d" class="mr-3 text-red-600" required>
            <span class="text-gray-700">d) Test za pokretljivost</span>
          </label>
        </div>
      </div>

      <!-- Question 2 -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">2. Koji plin se oslobađa u katalaza testu?</h3>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q2" value="a" class="mr-3 text-red-600" required>
            <span class="text-gray-700">a) Ugljični dioksid</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q2" value="b" class="mr-3 text-red-600" required>
            <span class="text-gray-700">b) Kisik</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q2" value="c" class="mr-3 text-red-600" required>
            <span class="text-gray-700">c) Dušik</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q2" value="d" class="mr-3 text-red-600" required>
            <span class="text-gray-700">d) Vodik</span>
          </label>
        </div>
      </div>

      <!-- Question 3 -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">3. Što je oksidaza test?</h3>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q3" value="a" class="mr-3 text-red-600" required>
            <span class="text-gray-700">a) Test za detekciju enzima oksidaze</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q3" value="b" class="mr-3 text-red-600" required>
            <span class="text-gray-700">b) Test za pokretljivost</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q3" value="c" class="mr-3 text-red-600" required>
            <span class="text-gray-700">c) Test za bojenje po Gramu</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q3" value="d" class="mr-3 text-red-600" required>
            <span class="text-gray-700">d) Test za pokretljivost</span>
          </label>
        </div>
      </div>

      <!-- Question 4 -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">4. Koja se boja koristi za oksidaza test?</h3>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q4" value="a" class="mr-3 text-red-600" required>
            <span class="text-gray-700">a) Safranin</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q4" value="b" class="mr-3 text-red-600" required>
            <span class="text-gray-700">b) Metilen plavo</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q4" value="c" class="mr-3 text-red-600" required>
            <span class="text-gray-700">c) Tetrametil-p-fenilendiamin</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q4" value="d" class="mr-3 text-red-600" required>
            <span class="text-gray-700">d) Eozin</span>
          </label>
        </div>
      </div>

      <!-- Question 5 -->
      <div class="border-b border-gray-200 pb-6">
        <h3 class="text-lg font-semibold text-gray-900 mb-4">5. Što pokazuje pozitivan oksidaza test?</h3>
        <div class="space-y-3">
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q5" value="a" class="mr-3 text-red-600" required>
            <span class="text-gray-700">a) Bakterije su gram-pozitivne</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q5" value="b" class="mr-3 text-red-600" required>
            <span class="text-gray-700">b) Bakterije su gram-negativne</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q5" value="c" class="mr-3 text-red-600" required>
            <span class="text-gray-700">c) Bakterije imaju enzim oksidazu</span>
          </label>
          <label class="flex items-center cursor-pointer hover:bg-gray-50 p-3 rounded-lg transition-colors">
            <input type="radio" name="q5" value="d" class="mr-3 text-red-600" required>
            <span class="text-gray-700">d) Bakterije su pokretljive</span>
          </label>
        </div>
      </div>

      <!-- Submit Button -->
      <div class="text-center pt-6">
        <button 
          type="submit" 
          class="bg-gradient-to-r from-red-600 to-red-700 text-white px-10 py-4 rounded-xl font-semibold text-xl hover:from-red-700 hover:to-red-800 transition-all duration-300 transform hover:scale-105 shadow-lg"
        >
          Provjeri rezultat
        </button>
      </div>
    </form>

    <!-- Results (Hidden by default) -->
    <div id="quizResults" class="hidden mt-8 p-8 bg-gradient-to-r from-red-50 to-blue-50 rounded-xl border-2 border-red-200">
      <div class="text-center">
        <div class="w-20 h-20 bg-red-100 rounded-full flex items-center justify-center mx-auto mb-6">
          <svg class="w-10 h-10 text-red-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
        </div>
        <h3 class="text-3xl font-bold text-gray-900 mb-4">Rezultat quiz-a</h3>
        <p class="text-gray-600 text-xl mb-6">Odgovorili ste na <span id="correctAnswers" class="font-bold text-red-600">0</span> od <span id="totalQuestions" class="font-bold">5</span> pitanja</p>
        <div class="text-6xl font-bold text-red-600 mb-6">
          <span id="percentage">0</span>%
        </div>
        <p id="resultMessage" class="text-xl text-gray-700 mb-8"></p>
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <button 
            onclick="resetQuizGlobal()" 
            class="bg-red-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-red-700 transition-colors duration-300"
          >
            Pokušaj ponovno
          </button>
          <a 
            href="/poglavlje-5/"
            class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold text-lg hover:bg-blue-700 transition-colors duration-300"
          >
            Povratak na poglavlje
          </a>
        </div>
      </div>
    </div>
  </div>

</ChapterLayout>

<script>
  // Quiz functionality
  const correctAnswers = {
    q1: 'b', // Test za detekciju enzima katalaze
    q2: 'b', // Kisik
    q3: 'a', // Test za detekciju enzima oksidaze
    q4: 'c', // Tetrametil-p-fenilendiamin
    q5: 'c'  // Bakterije imaju enzim oksidazu
  };

  const totalQuestions = Object.keys(correctAnswers).length;

  const form = document.getElementById('quizForm');
  if (form) {
    form.addEventListener('submit', function(e) {
      e.preventDefault();
      
      let correctCount = 0;
      
      // Check each answer
      Object.keys(correctAnswers).forEach(question => {
        const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`) as HTMLInputElement;
        if (selectedAnswer && selectedAnswer.value === correctAnswers[question as keyof typeof correctAnswers]) {
          correctCount++;
        }
      });
      
      // Calculate percentage
      const percentage = Math.round((correctCount / totalQuestions) * 100);
      
      // Update results
      const correctAnswersEl = document.getElementById('correctAnswers');
      const totalQuestionsEl = document.getElementById('totalQuestions');
      const percentageEl = document.getElementById('percentage');
      
      if (correctAnswersEl) correctAnswersEl.textContent = correctCount.toString();
      if (totalQuestionsEl) totalQuestionsEl.textContent = totalQuestions.toString();
      if (percentageEl) percentageEl.textContent = percentage.toString();
      
      // Set result message
      const resultMessage = document.getElementById('resultMessage');
      if (resultMessage) {
        if (percentage === 100) {
          resultMessage.innerHTML = '🎉 <strong>Odlično!</strong><br><span class="text-lg">Odgovorili ste na sva pitanja bez greške!<br>Vaše znanje iz ovog poglavlja je <em>izvrsno</em> i možete nastaviti s učenjem sljedećeg poglavlja.</span>';
          resultMessage.className = 'text-xl text-red-700 mb-8 font-semibold leading-relaxed';
        } else if (percentage >= 80) {
          resultMessage.innerHTML = '👏 <strong>Izvrsno!</strong><br><span class="text-lg">Imate <em>odlično</em> znanje iz ovog poglavlja!<br>Samo malo više pažnje i bit ćete savršeni. Nastavite s učenjem!</span>';
          resultMessage.className = 'text-xl text-red-600 mb-8 font-semibold leading-relaxed';
        } else if (percentage >= 60) {
          resultMessage.innerHTML = '👍 <strong>Dobro!</strong><br><span class="text-lg">Imate <em>solidno</em> znanje iz ovog poglavlja.<br>Preporučujemo da ponovno pročitate gradivo za još bolje razumijevanje.</span>';
          resultMessage.className = 'text-xl text-blue-700 mb-8 font-semibold leading-relaxed';
        } else if (percentage >= 40) {
          resultMessage.innerHTML = '⚠️ <strong>Prosjecno</strong><br><span class="text-lg">Potrebno je <em>više učenja</em>.<br>Vratite se na gradivo, pročitajte ponovno i pokušajte quiz ponovno.</span>';
          resultMessage.className = 'text-xl text-yellow-700 mb-8 font-semibold leading-relaxed';
        } else {
          resultMessage.innerHTML = '📚 <strong>Potrebno više učenja</strong><br><span class="text-lg">Preporučujemo da <em>detaljno pročitate</em> sve dijelove poglavlja.<br>Učenje je proces - ne odustajte, vratite se na gradivo!</span>';
          resultMessage.className = 'text-xl text-red-700 mb-8 font-semibold leading-relaxed';
        }
      }
      
      // Show results
      const quizResults = document.getElementById('quizResults');
      if (quizResults) {
        quizResults.classList.remove('hidden');
        quizResults.scrollIntoView({ behavior: 'smooth' });
      }
    });
  }

  function resetQuiz() {
    // Reset form
    const form = document.getElementById('quizForm') as HTMLFormElement;
    if (form) form.reset();
    
    // Hide results
    const results = document.getElementById('quizResults');
    if (results) results.classList.add('hidden');
    
    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }

  // Global function for onclick
  function resetQuizGlobal() {
    resetQuiz();
  }
</script>
