---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 5.1: Biokemijski testovi',
  description = 'Praktične vježbe za biokemijske testove'
} = Astro.props;

const contentBlocks = [
  {
    id: "ispitivanje-biokemijskih-svojstava",
    title: "Ispitivanje biokemijskih svojstava bakterija",
    icon: "🔬",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Bakteriološkom ušicom uzeti čistu kulturu bakterije izoliranu na kosom hranjivom agaru i nacijepiti u pripremljenu seriju epruveta za ispitivanje različitih biokemijskih svojstava bakterija.
        </p>
        <p class="text-gray-300 leading-relaxed mb-4">
          <strong class="text-blue-300">Inkubacija:</strong> 35 °C / 24 ili 48 h
        </p>
        <p class="text-gray-300 leading-relaxed">
          Nakon inkubacije, prema gore navedenim uputama očitati reakcije u pojedinim epruvetama.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "Važni testovi u determinaciji koliformnih bakterija",
    url: "/poglavlje-5/vazni-testovi-u-determinaciji-koliformnih-bakterija/"
  },
  next: {
    text: "Vježba 5.2",
    url: "/poglavlje-5/vjezba-5-2/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={5}
  primaryColor="blue"
  breadcrumbPath={[
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Vježba 5.1: Biokemijski testovi', url: '/poglavlje-5/vjezba-5-1/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>