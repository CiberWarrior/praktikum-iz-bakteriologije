---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Stvaranje indola',
  description = 'Detalji o stvaranju indola'
} = Astro.props;

const contentBlocks = [
  {
    id: "uvod-test",
    title: "Uvod u test",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          Za dokazivanje stvaranja indola upotrebljava se tekuća podloga bogata aminokiselinom triptofanom (<strong class="text-blue-300">triptofan bujon</strong>).
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "sastav-bujona",
    title: "Sastav triptofan bujona za dokazivanje indola",
    icon: "🧪",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <div class="bg-gray-700 rounded-xl p-6 border border-blue-500/30">
          <div class="flex items-center mb-4">
          </div>
          <div class="bg-gray-800 rounded-lg p-4 border border-blue-500/30">
            <div class="space-y-3">
              <div class="flex justify-between items-center">
                <span class="font-medium text-gray-300">Pepton</span>
                <span class="bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-semibold">10,0 g</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-medium text-gray-300">NaCl</span>
                <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-semibold">5,0 g</span>
              </div>
              <div class="flex justify-between items-center">
                <span class="font-medium text-gray-300">Destilirana voda</span>
                <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">1000 mL</span>
              </div>
            </div>
            <div class="mt-4 pt-4 border-t border-gray-600">
              <div class="flex justify-center">
                <span class="bg-green-500 text-white px-4 py-2 rounded-full text-sm font-semibold">pH = 7,0 ± 0,1</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "mehanizam-testa",
    title: "Mehanizam testa",
    icon: "⚙️",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          Ako bakterija posjeduje enzim <strong class="text-orange-300">triptofanazu</strong>, može razgrađivati triptofan do <strong class="text-orange-300">indola</strong>.
        </p>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "kovaczev-reagens-test",
    title: "Kovaczev reagens test",
    icon: "🔬",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Ako je u epruveti stvoren indol, dokazuje se dodatkom <strong class="text-purple-300">Kovaczevog reagensa</strong>. Indol je topiv u organskim otapalima i butanol (amilni alkohol) sadržan u Kovaczevom reagensu može ekstrahirati indol iz vodenog medija, te će isplivati na površinu tekućeg medija u obliku prstena.
        </p>
        <p class="text-gray-300 leading-relaxed">
          Koncentrirani ekstrahirani indol će u prstenu reagirati s reaktivnom komponentom <strong class="text-purple-300">p-dimetilaminobenzaldehidom</strong>, te će prsten biti obojen <strong class="text-purple-300">crveno</strong>.
        </p>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "interpretacija-rezultata",
    title: "Interpretacija rezultata",
    icon: "📊",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <div class="bg-gray-600 rounded-lg p-4 shadow-sm mb-4">
          <ul class="space-y-2 text-gray-300">
            <li class="flex items-start">
              <span class="inline-block bg-red-100 text-red-800 px-2 py-1 rounded text-sm font-medium mr-3">+</span>
              <span><strong class="text-red-300">Pozitivna reakcija</strong>: Prsten crvene boje - bakterija stvara indol</span>
            </li>
            <li class="flex items-start">
              <span class="inline-block bg-yellow-100 text-yellow-800 px-2 py-1 rounded text-sm font-medium mr-3">-</span>
              <span><strong class="text-yellow-300">Negativna reakcija</strong>: Prsten žute boje - bakterija ne stvara indol</span>
            </li>
          </ul>
        </div>
        
        <!-- Slika 31 -->
        <figure class="image-figure">
          <img 
            src="/Images/slika31.jpg" 
            alt="Pozitivna (desno) i negativna (lijevo) reakcija na indol" 
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-blue-100 text-blue-800 px-3 py-1 rounded-full text-sm font-medium">Slika 31</span>
            <span class="block mt-2 text-gray-300">Pozitivna (desno) i negativna (lijevo) reakcija na indol</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "red-500/30",
    iconGradient: "from-red-400 to-red-600"
  }
];

const navigationButtons = {
  previous: {
    text: "Stvaranje amonijaka",
    url: "/poglavlje-5/stvaranje-amonijaka/"
  },
  next: {
    text: "Stvaranje sumporovodika",
    url: "/poglavlje-5/stvaranje-sumporovodika/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={5}
  primaryColor="blue"
  breadcrumbPath={[
    { name: 'Poglavlje 5', url: '/poglavlje-5/' },
    { name: 'Stvaranje indola', url: '/poglavlje-5/stvaranje-indola/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>