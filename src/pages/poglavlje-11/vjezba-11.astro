---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 11',
  description = 'Vježbe iz aerobnih sporogenih bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "vjezba-1",
    title: "1. Izolacija sporogenih bakterija iz površinskih voda",
    icon: "💧",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🧪 Priprema uzorka</h4>
          <p class="text-gray-300 leading-relaxed">
            Uzorak površinske vode iz Winklerove boce preliti u sterilne epruvete. Pasterizirati u vodenoj kupelji 20 min na 80°C.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-2">🔬 Razrjeđivanje i inokulacija</h4>
          <p class="text-gray-300 leading-relaxed">
            Napraviti seriju decimalnih razrjeđenja uzorka. Po <strong class="text-green-300">0,1 mL</strong> iz odgovarajuće serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza na hranjivi agar.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-orange-500">
          <h4 class="text-lg font-semibold text-orange-300 mb-2">📊 Inkubacija i brojanje</h4>
          <p class="text-gray-300 leading-relaxed">
            Nakon razdoblja inkubacije izbrojiti kolonije i izračunati broj po 1 mL uzorka.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-purple-500">
          <h4 class="text-lg font-semibold text-purple-300 mb-2">🔍 Karakteristike kolonija</h4>
          <p class="text-gray-300 leading-relaxed">
            Površina kolonija sporogenih bakterija uglavnom je hrapava s raznim specifičnim crtežima (slika 60).
          </p>
        </div>
        
        <figure class="image-figure">
          <img
            src="/Images/slika60.jpg"
            alt="Kolonija aerobne sporogene bakterije roda Bacillus"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-purple-100 text-purple-800 px-3 py-1 rounded-full text-sm font-medium">Slika 60</span>
            <span class="block mt-2 text-gray-300">Kolonija aerobne sporogene bakterije roda <em class="text-green-300">Bacillus</em></span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "vjezba-2",
    title: "2. Izolacija sporogenih bakterija iz tla",
    icon: "🌱",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <h4 class="text-lg font-semibold text-green-300 mb-2">🌱 Priprema uzorka tla</h4>
          <p class="text-gray-300 leading-relaxed">
            Po <strong class="text-green-300">1 g tla</strong> suspendira se u epruveti sa sterilnom destiliranom vodom uz dodatak <strong class="text-green-300">0,3% NaCl</strong> i pasterizira <strong class="text-green-300">20 min/80°C</strong>.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-2">🔬 Razrjeđivanje i inokulacija</h4>
          <p class="text-gray-300 leading-relaxed">
            Po <strong class="text-blue-300">0,1 mL</strong> pasteriziranog uzorka iz epruveta serije decimalnog razrjeđenja nacijepiti metodom širenja razmaza <strong class="text-blue-300">drygalskim štapićem</strong> na hranjivi agar.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-orange-500">
          <h4 class="text-lg font-semibold text-orange-300 mb-2">📊 Inkubacija i brojanje</h4>
          <p class="text-gray-300 leading-relaxed">
            Nakon razdoblja inkubacije (<strong class="text-orange-300">22°C/72 h</strong>) izbrojiti kolonije bakterija i izračunati broj spora po 1 g uzorka.
          </p>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  }
];

const navigationButtons = {
  previous: {
    text: "aerobne sporogene bakterije",
    url: "/poglavlje-11/aerobne-sporogene-bakterije/"
  },
  next: {
    text: "poglavlje 12",
    url: "/poglavlje-12/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={11}
  primaryColor="indigo"
  breadcrumbPath={[
    { name: 'Poglavlje 11', url: '/poglavlje-11/' },
    { name: 'Vježbe 11', url: '/poglavlje-11/vjezba-11/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>