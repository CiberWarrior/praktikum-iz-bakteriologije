---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 11',
  description = 'Sadržaj poglavlja 11 - Vježbe 11'
} = Astro.props;

const chapterConfig = getChapterConfig(11);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={11}
  primaryColor="orange"
  prevLink="/poglavlje-11/" 
  nextLink="/poglavlje-12/" 
  prevText="← Poglavlje 11" 
  nextText="Poglavlje 12 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Epidemiologija." 
  ctaPrimaryText="Poglavlje 12" 
  ctaPrimaryLink="/poglavlje-12/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-11/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 11', url: '/poglavlje-11/' },
    { name: 'Vježbe 11', url: '/poglavlje-11/vjebe11/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={11} 
    currentSection="vježbe-11" 
    chapterTitle="Imunologija"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<h3 style="color: #096279; font-size: 1.4rem; font-weight: 600; margin: 1.5rem 0 1rem 0;">Sadržaj vježbi</h3>

1. [Izolacija sporogenih bakterija iz površinskih voda](/poglavlje-11/vjezbe/vjezba-11-1)
