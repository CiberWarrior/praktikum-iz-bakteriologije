---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 11-1: Izolacija sporogenih bakterija iz površinskih voda',
  description = 'Praktična vježba izolacije aerobnih sporogenih bakterija iz uzoraka površinskih voda'
} = Astro.props;

const contentBlocks = [
  {
    id: "cil-vjezbe",
    title: "Cilj vježbe",
    icon: "🎯",
    content: `
      <div class="space-y-4">
        <p class="text-gray-300 leading-relaxed text-lg">
          Naučiti metodu izolacije aerobnih sporogenih bakterija iz uzoraka površinskih voda 
          pomoću pasterizacije i uzgoja na neselektivnoj podlozi.
        </p>
        <ul class="text-gray-300 space-y-2">
          <li class="flex items-start">
            <span class="w-2 h-2 bg-purple-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
            <span>Primijeniti tehniku pasterizacije za eliminaciju vegetativnih oblika</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-purple-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
            <span>Proučiti morfologiju sporogenih bakterija</span>
          </li>
          <li class="flex items-start">
            <span class="w-2 h-2 bg-purple-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
            <span>Odrediti broj sporogenih bakterija u vodi</span>
          </li>
        </ul>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "potreban-materijal",
    title: "Potreban materijal",
    icon: "🧪",
    content: `
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-gray-700 rounded-lg p-4 border border-blue-500/30">
          <h4 class="text-lg font-bold text-blue-300 mb-3">Podloge i kemikalije</h4>
          <ul class="text-gray-300 space-y-2">
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Hranjivi agar (neselektivna podloga)</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Sterilizirane epruvete s vodom</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Petrijeve zdjelice</span>
            </li>
          </ul>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border border-blue-500/30">
          <h4 class="text-lg font-bold text-blue-300 mb-3">Oprema</h4>
          <ul class="text-gray-300 space-y-2">
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Vodena kupelj (80°C)</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Termostat (22°C)</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Sterilne pipete</span>
            </li>
            <li class="flex items-start">
              <span class="w-2 h-2 bg-blue-400 rounded-full mr-2 mt-2 flex-shrink-0"></span>
              <span>Mikroskop</span>
            </li>
          </ul>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "postupak",
    title: "Postupak rada",
    icon: "⚗️",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <div class="flex items-center mb-3">
            <span class="bg-green-500 text-white font-bold text-sm px-3 py-1 rounded-full mr-3">1</span>
            <h4 class="text-lg font-bold text-green-300">Priprema uzorka</h4>
          </div>
          <p class="text-gray-300 leading-relaxed">
            Uzorak površinske vode (<strong class="text-green-300">10 ml</strong>) staviti u sterilnu epruvetu i postaviti u vodenu kupelj 
            zagrijanu na <strong class="text-green-300">80°C</strong>. Držati <strong class="text-green-300">20 minuta</strong> radi pasterizacije.
          </p>
        </div>

        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <div class="flex items-center mb-3">
            <span class="bg-green-500 text-white font-bold text-sm px-3 py-1 rounded-full mr-3">2</span>
            <h4 class="text-lg font-bold text-green-300">Razrjeđenja</h4>
          </div>
          <p class="text-gray-300 leading-relaxed">
            Pripremiti serijska razrjeđenja (<strong class="text-green-300">10⁻¹, 10⁻², 10⁻³</strong>) pomoću sterilne vode.
            Iz svakog razrjeđenja uzeti <strong class="text-green-300">0,1 ml</strong> za nasađivanje.
          </p>
        </div>

        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <div class="flex items-center mb-3">
            <span class="bg-green-500 text-white font-bold text-sm px-3 py-1 rounded-full mr-3">3</span>
            <h4 class="text-lg font-bold text-green-300">Nasađivanje</h4>
          </div>
          <p class="text-gray-300 leading-relaxed">
            Nasaditi razrjeđenja na hranjivi agar metodom nalijevanja. 
            Inkubirati u termostatu na <strong class="text-green-300">22°C</strong> tijekom <strong class="text-green-300">72 sata</strong>.
          </p>
        </div>

        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-green-500">
          <div class="flex items-center mb-3">
            <span class="bg-green-500 text-white font-bold text-sm px-3 py-1 rounded-full mr-3">4</span>
            <h4 class="text-lg font-bold text-green-300">Analiza</h4>
          </div>
          <p class="text-gray-300 leading-relaxed">
            Prebrojiti kolonije, izračunati broj sporogenih bakterija po ml uzorka. 
            Izdvojiti karakteristične kolonije za mikroskopsku analizu.
          </p>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "rezultati",
    title: "Očekivani rezultati",
    icon: "📊",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 border border-yellow-500/30">
          <h4 class="text-lg font-bold text-yellow-300 mb-3">Morfologija kolonija</h4>
          <p class="text-gray-300 leading-relaxed">
            Sporogene bakterije roda <em class="text-yellow-300">Bacillus</em> stvaraju velike, nepravilne kolonije 
            s hrapavom površinom. Kolonije mogu biti prozirne do bijele boje.
          </p>
        </div>
        
        <div class="bg-gray-700 rounded-lg p-4 border border-yellow-500/30">
          <h4 class="text-lg font-bold text-yellow-300 mb-3">Mikroskopska slika</h4>
          <p class="text-gray-300 leading-relaxed">
            Pod mikroskopom vidljivi su veliki, Gram-pozitivni bacili s centralnim ili 
            subterminalnim endosporama. Neki mogu pokazati pokretljivost.
          </p>
        </div>
      </div>
    `,
    borderColor: "yellow-500/30",
    iconGradient: "from-yellow-400 to-yellow-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježbe 11",
    url: "/poglavlje-11/vjezba-11/"
  },
  next: {
    text: "vježba 11-2",
    url: "/poglavlje-11/vjezbe/vjezba-11-2/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={11}
  primaryColor="purple"
  breadcrumbPath={[
    { name: 'Poglavlje 11', url: '/poglavlje-11/' },
    { name: 'Vježbe 11', url: '/poglavlje-11/vjezba-11/' },
    { name: 'Vježba 11-1', url: '/poglavlje-11/vjezbe/vjezba-11-1/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>