---
import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    "question": "Što je pokretljivost bakterija?",
    "options": {
      "a": "Sposobnost bakterija da se razmnožavaju",
      "b": "Sposobnost bakterija da se kreću u tekućem mediju",
      "c": "Sposobnost bakterija da mijenjaju oblik",
      "d": "Sposobnost bakterija da proizvode toksine"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koji organel omogućava pokretljivost bakterija?",
    "options": {
      "a": "Kapsula",
      "b": "Flagel",
      "c": "Endospora",
      "d": "Ribosom"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Kako se naziva test za pokretljivost?",
    "options": {
      "a": "Test s metilenskim modrilom",
      "b": "Test s TTC",
      "c": "Test s HIL",
      "d": "Test s metilenskim modrilom"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koja se boja koristi za test pokretljivosti?",
    "options": {
      "a": "Safranin",
      "b": "Metilen plavo",
      "c": "Kristal vijolec",
      "d": "Eozin"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što pokazuje pozitivan test pokretljivosti?",
    "options": {
      "a": "Bakterije su pokretljive",
      "b": "Bakterije su nepokretljive",
      "c": "Bakterije su gram-pozitivne",
      "d": "Bakterije su gram-negativne"
    },
    "correctAnswer": "a"
  }
];

const breadcrumbPath = [
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 4', url: '/poglavlje-4/' },
    { name: 'Quiz 4', url: '/poglavlje-4/quiz-4/' }
  ];
---

<QuizTemplate
  chapterNumber={4}
  chapterTitle="Hranjivi mediji"
  chapterDescription="Provjeri svoje znanje iz poglavlja o pokretljivosti bakterija"
  primaryColor="purple"
  questions={questions}
  prevLink="/poglavlje-4/"
  nextLink="/poglavlje-5/"
  prevText="← Povratak na Poglavlje 4"
  nextText="Poglavlje 5 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem i upoznajte biokemijske testove za identifikaciju bakterija."
  ctaPrimaryText="Poglavlje 5"
  ctaPrimaryLink="/poglavlje-5/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  breadcrumbPath={breadcrumbPath}
/>