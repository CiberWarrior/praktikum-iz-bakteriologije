---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const {
  title = 'Vježba 21.2: Zastupljenost fizioloških skupina saprofita',
  description = 'Određivanje zastupljenosti fizioloških skupina bakterija među populacijom ukupnih saprofita pomoću metode otiska'
} = Astro.props;

const contentBlocks = [
  {
    id: "vjezba-2",
    title: "2. Određivanje zastupljenosti fizioloških skupina bakterija među populacijom ukupnih saprofita",
    icon: "🧬",
    content: `
      <div class="space-y-4">
        <div class="bg-gray-800 rounded-lg p-4 border border-gray-600">
          <p class="text-gray-300 leading-relaxed">
            Iz Petrijeve ploče s hranjivim agarom gdje su se razvile kolonije saprofitskih bakterija iz površinskih voda ili tla (20-60 kolonija, inkubacija 22°C/72 h) uzeti otisak sterilnim baršunom na držaču. Baršun opet lagano pritisnuti na ploče s podlogama za uzgoj amilolitičkih, želatinolitičkih i fosfomobilizirajućih bakterija te kontrolnu ploču s hranjivim agarom. Ploče inkubirati na 22°C/72 h. Nakon inkubacije preliti površinu podloge odgovarajućim reagensom i prebrojiti pozitivne kolonije amilolita, želatinolita i fosfomobilizatora te izračunati postotak poraslih kolonija fizioloških skupina bakterija u odnosu prema broju kolonija s kontrolne ploče.
          </p>
        </div>

        <div class="bg-gray-700 border border-purple-500/30 rounded-lg p-4">
          <p class="text-purple-300 font-semibold">
            🧬 Rezultat: Postotak zastupljenosti amilolita, želatinolita i fosfomobilizatora u uzorku
          </p>
        </div>
      </div>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježba 21.1",
    url: "/poglavlje-21/vjezba-21-1/"
  },
  next: {
    text: "poglavlje 22",
    url: "/poglavlje-22/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={21}
  primaryColor="indigo"
  breadcrumbPath={[
    { name: 'Poglavlje 21', url: '/poglavlje-21/' },
    { name: 'Vježba 21.2: Zastupljenost fizioloških skupina saprofita', url: '/poglavlje-21/vjezba-21-2/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>