---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Untitled',
  description = 'Sadržaj poglavlja 1 - Untitled'
} = Astro.props;

const chapterConfig = getChapterConfig(1);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={1}
  primaryColor="emerald"
  prevLink="/poglavlje-1/" 
  nextLink="/poglavlje-2/" 
  prevText="← Poglavlje 1" 
  nextText="Poglavlje 2 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Mikroskopija." 
  ctaPrimaryText="Poglavlje 2" 
  ctaPrimaryLink="/poglavlje-2/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-1/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 1', url: '/poglavlje-1/' },
    { name: 'Untitled', url: '/poglavlje-1/untitled/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={1} 
    currentSection="untitled" 
    chapterTitle="Osnove laboratorijskog rada"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    
---
title: Vježba 3 - Izolacija čiste kulture iz Petrijeve zdjelice
---

<section class="cards-grid">
  <article class="card-sheen">
    <h3 class="card-sheen__title">Opis vježbe</h3>
    <p>Pikirati pojedinačnu koloniju (slika 12) s površine ploče bakteriološkom ušicom i prenijeti materijal u epruvetu, opalivši njezin otvor i držeći istodobno savijenim malim prstom čep epruvete onom rukom kojom držimo ušicu.</p>
    <p>Izolirati čistu kulturu u epruveti s kosim hranjivim agarom (slika 13), a ušicu pritom pomicati lijevo–desno po površini podloge.</p>

    <h3 class="card-sheen__title">Inkubacija</h3>
    <p>Nakon inokulacije, epruvete inkubirati na 22 °C / 72h.</p>
  </article>
</section>

<div style="display: flex; gap: 2rem; justify-content: center; flex-wrap: wrap;">
<figure class="image-figure">
  <img src="/images/slika12.jpg" alt="Slika 12 – Pojedinačna kolonija na agaru" />
  <figcaption>Slika 12. Pojedinačna kolonija na hranjivom agaru</figcaption>
</figure>

<figure class="image-figure">
  <img src="/images/slika13.jpg" alt="Slika 13 – Čista kultura u epruveti s kosim agarom" style="max-width: 300px;" />
  <figcaption>Slika 13. Čista kultura u epruveti s kosim agarom</figcaption>
</figure>
</div>



  </div>

</ChapterLayout>