---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježba 3 - Izolacija čiste kulture iz Petrijeve zdjelice',
  description = 'Praktična vježba za izolaciju čiste kulture iz Petrijeve zdjelice'
} = Astro.props;

const contentBlocks = [
  {
    id: "opis-vjezbe",
    title: "Opis vježbe",
    icon: "🧫",
    content: `
      <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Pikirati pojedinačnu koloniju (slika 12) s površine ploče bakteriološkom ušicom i prenijeti materijal u epruvetu, opalivši njezin otvor i držeći istodobno savijenim malim prstom čep epruvete onom rukom kojom držimo ušicu.
        </p>
        <p class="text-gray-300 leading-relaxed">
          Izolirati čistu kulturu u epruveti s kosim hranjivim agarom (slika 13), a ušicu pritom pomicati lijevo–desno po površini podloge.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "inkubacija",
    title: "Inkubacija",
    icon: "🌡️",
    content: `
      <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
        <p class="text-gray-300 leading-relaxed">
          Nakon inokulacije, epruvete inkubirati na 22 °C / 72h.
        </p>
      </div>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "slike",
    title: "Pikiranje kolonija",
    icon: "🧫",
    content: `
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <!-- Slika 12 -->
        <figure class="image-figure bg-gray-700 rounded-lg p-4 shadow-sm">
          <img src="/Images/slika12.jpg" alt="Slika 12 – Pojedinačna kolonija na agaru" class="w-full h-auto rounded-lg" />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-emerald-500/20 text-emerald-300 px-3 py-1 rounded-full text-sm font-medium">Slika 12</span>
            <span class="block mt-2 text-gray-300">Pojedinačna kolonija na hranjivom agaru</span>
          </figcaption>
        </figure>

        <!-- Slika 13 -->
        <figure class="image-figure bg-gray-700 rounded-lg p-4 shadow-sm">
          <img src="/Images/slika13.jpg" alt="Slika 13 – Čista kultura u epruveti s kosim agarom" class="w-full h-auto rounded-lg" />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-emerald-500/20 text-emerald-300 px-3 py-1 rounded-full text-sm font-medium">Slika 13</span>
            <span class="block mt-2 text-gray-300">Čista kultura u epruveti s kosim agarom</span>
          </figcaption>
        </figure>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  }
];

const navigationButtons = {
  previous: {
    text: "vježba 2",
    url: "/poglavlje-1/vjezba-2/"
  },
  next: {
    text: "vježba 4",
    url: "/poglavlje-1/vjezba-4/"
  }
};
---

<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={1}
  primaryColor="emerald"
  breadcrumbPath={[
    { name: 'Vježba 3', url: '/poglavlje-1/vjezba-3/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>
