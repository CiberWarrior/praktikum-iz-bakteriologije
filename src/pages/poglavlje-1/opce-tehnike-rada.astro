---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Opće tehnike rada',
  description = 'Pravila sigurnosti u radu'
} = Astro.props;

const contentBlocks = [
  {
    id: "osnovno-pravilo",
    title: "Osnovno pravilo sigurnosti",
    icon: "⚠️",
    content: `
      <p class="text-gray-300 leading-relaxed font-medium">
        Treba strogo poštovati pravilo da <strong class="text-red-300">svaka bakterijska kultura u velikoj količini</strong> (čiste kulture, kolonije bakterija na hranjivoj podlozi) može biti <strong class="text-red-300">potencijalan izvor zaraze</strong> makar bila u literaturi citirana kao nepatogena vrsta.
      </p>
    `,
    borderColor: "red-500/30",
    iconGradient: "from-red-400 to-red-600"
  },
  {
    id: "kljucne-tehnike",
    title: "Ključne tehnike rada",
    icon: "🔥",
    content: `
              <div class="space-y-4">
        <div class="bg-gray-700 rounded-lg p-4 shadow-sm border-l-4 border-orange-500">
                  <div class="flex items-start">
                    <div>
              <strong class="text-orange-300 text-lg">Rad u blizini plamenika</strong>
              <p class="text-gray-300 leading-relaxed mt-2">
                        Sve bakteriološke tehnike rada moraju se odvijati u neposrednoj blizini plamenika radi izbjegavanja kontaminacije hranjivih sterilnih medija i čistih kultura bakterijama raspršenim u zraku praktikuma.
                      </p>
                    </div>
                  </div>
                </div>
                
        <div class="bg-gray-700 rounded-lg p-4 shadow-sm border-l-4 border-pink-500">
                  <div class="flex items-start">
                    <div>
              <strong class="text-pink-300 text-lg">Sterilizacija instrumenata</strong>
              <p class="text-gray-300 leading-relaxed mt-2">
                        Otvori epruveta, tikvica, bakteriološke ušice opaljuju se radi sterilizacije na plameniku prije svakog rukovanja s bakterijskim materijalom.
                      </p>
                    </div>
                  </div>
                </div>
                
        <div class="bg-gray-700 rounded-lg p-4 shadow-sm border-l-4 border-purple-500">
                  <div class="flex items-start">
                    <div>
              <strong class="text-purple-300 text-lg">Sigurno pipetiranje</strong>
              <p class="text-gray-300 leading-relaxed mt-2">
                        Pipetiranje je dopušteno samo vatom zaštićenim gornjim otvorom pipeta (serološke pipete) ili automatskim pipetama.
                      </p>
                    </div>
                  </div>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  }
];

const navigationButtons = {
  previous: {
    text: "pravila ponašanja",
    url: "/poglavlje-1/pravila-ponasanja/"
  },
  next: {
    text: "dezinfekcija i antisepsa",
    url: "/poglavlje-1/dezinfekcija-i-antisepsa/"
  }
};
---

<SubPageTemplate
  title={title}
  description={description}
  chapterNumber={1}
  primaryColor="emerald"
  breadcrumbPath={[
    { name: 'Opće tehnike rada', url: '/poglavlje-1/opce-tehnike-rada/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>