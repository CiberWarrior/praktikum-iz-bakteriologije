---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Opće tehnike rada',
  description = 'Sadržaj poglavlja 1 - Opće tehnike rada'
} = Astro.props;

const chapterConfig = getChapterConfig(1);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={1}
  primaryColor="emerald"
  prevLink="/poglavlje-1/" 
  nextLink="/poglavlje-2/" 
  prevText="← Poglavlje 1" 
  nextText="Poglavlje 2 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Mikroskopija." 
  ctaPrimaryText="Poglavlje 2" 
  ctaPrimaryLink="/poglavlje-2/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-1/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 1', url: '/poglavlje-1/' },
    { name: 'Opće tehnike rada', url: '/poglavlje-1/opetehnikerada/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={1} 
    currentSection="opće-tehnike-rada" 
    chapterTitle="Osnove laboratorijskog rada"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<div style="background: linear-gradient(135deg, #fff5f5 0%, #fed7d7 100%); border-radius: 15px; padding: 25px; margin: 25px 0; border: 2px solid #e53e3e;">
  <div style="display: flex; align-items: center; margin-bottom: 15px;">
    <h4 style="margin: 0; color: #c53030; font-weight: 600; font-size: 18px;">Osnovno pravilo sigurnosti</h4>
  </div>
  <p style="margin: 0; color: #2d3748; line-height: 1.6; font-weight: 500;">
    Treba strogo poštovati pravilo da <strong>svaka bakterijska kultura u velikoj količini</strong> (čiste kulture, kolonije bakterija na hranjivoj podlozi) može biti <strong>potencijalan izvor zaraze</strong> makar bila u literaturi citirana kao nepatogena vrsta.
  </p>
</div>

<div style="background: linear-gradient(135deg, #e8f4fd 0%, #d1ecf1 100%); border-radius: 15px; padding: 25px; margin: 20px 0; border: 2px solid #3498db;">
  <div style="display: flex; align-items: center; margin-bottom: 20px;">
    <h4 style="margin: 0; color: #2980b9; font-weight: 600; font-size: 18px;">Ključne tehnike rada</h4>
  </div>
  
  <div style="display: grid; gap: 15px;">
    
    <div style="background: rgba(255,255,255,0.9); padding: 15px; border-radius: 10px; border-left: 4px solid #ff9800;">
      <div style="display: flex; align-items: flex-start;">
        <div>
          <strong style="color: #f57c00; font-size: 15px;">Rad u blizini plamenika</strong>
          <p style="margin: 5px 0 0 0; color: #495057; line-height: 1.5; font-size: 14px;">
            Sve bakteriološke tehnike rada moraju se odvijati u neposrednoj blizini plamenika radi izbjegavanja kontaminacije hranjivih sterilnih medija i čistih kultura bakterijama raspršenim u zraku praktikuma.
          </p>
        </div>
      </div>
    </div>
    
    <div style="background: rgba(255,255,255,0.9); padding: 15px; border-radius: 10px; border-left: 4px solid #e91e63;">
      <div style="display: flex; align-items: flex-start;">
        <div>
          <strong style="color: #c2185b; font-size: 15px;">Sterilizacija instrumenata</strong>
          <p style="margin: 5px 0 0 0; color: #495057; line-height: 1.5; font-size: 14px;">
            Otvori epruveta, tikvica, bakteriološke ušice opaljuju se radi sterilizacije na plameniku prije svakog rukovanja s bakterijskim materijalom.
          </p>
        </div>
      </div>
    </div>
    
    <div style="background: rgba(255,255,255,0.9); padding: 15px; border-radius: 10px; border-left: 4px solid #9c27b0;">
      <div style="display: flex; align-items: flex-start;">
        <div>
          <strong style="color: #7b1fa2; font-size: 15px;">Sigurno pipetiranje</strong>
          <p style="margin: 5px 0 0 0; color: #495057; line-height: 1.5; font-size: 14px;">
            Pipetiranje je dopušteno samo vatom zaštićenim gornjim otvorom pipeta (serološke pipete) ili automatskim pipetama.
          </p>
        </div>
      </div>
    </div>
    
  </div>
</div>

<div style="background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%); border-radius: 10px; padding: 18px; margin: 20px 0; border-left: 4px solid #f39c12;">
  <div style="display: flex; align-items: center; margin-bottom: 8px;">
    <strong style="color: #e67e22;">Ključno za sigurnost</strong>
  </div>
  <p style="margin: 0; color: #d68910; line-height: 1.5; font-weight: 500;">
    Sterilizacija otvorenih instrumenata i rad u blizini plamenika ključni su za održavanje sterilnosti i sigurnosti u radu.
  </p>
</div>

  </div>

</ChapterLayout>