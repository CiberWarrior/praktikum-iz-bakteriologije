---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Zbrinjavanje materijala',
  description = 'Zbrinjavanje upotrijebljenog materijala u bakteriologiji'
} = Astro.props;

const contentBlocks = [
  {
    id: "stroga-zabrana",
    title: "Važno!",
    icon: "🚫",
    content: `
      <p class="text-gray-300 leading-relaxed font-medium">
        Živi bakterijski materijal najstrože je zabranjeno odbaciti kao otpad u kontejner. Sav materijal, koji je došao u dodir s bakterijama, mora se dekontaminirati.
      </p>
    `,
    borderColor: "red-500/30",
    iconGradient: "from-red-400 to-red-600"
  },
  {
    id: "pipete",
    title: "Pipete",
    icon: "🧪",
    content: `
      <p class="text-gray-300 leading-relaxed">
        Pipete odmah nakon upotrebe valja odložiti u kadice s dezinficijensom i ostaviti stajati nekoliko sati. Nakon ispiranja tekućom i destiliranom vodom pipete treba staviti u zaštitne cilindre i sterilizirati u suhom sterilizatoru.
      </p>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "mikroskopski-preparati",
    title: "Mikroskopski preparati",
    icon: "🔬",
    content: `
      <p class="text-gray-300 leading-relaxed">
        Mikroskopske preparate treba uroniti u posudu s dezinfi cijensom.
      </p>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "stakleno-posude",
    title: "Stakleno posuđe",
    icon: "🧪",
    content: `
      <p class="text-gray-300 leading-relaxed">
        Stakleno posuđe (petrijevke, epruvete) s razvijenim bakterijskim kulturama potrebno je odložiti u metalne košarice i autoklavirati. Nakon autoklaviranja valja isprati ostatke agarne podloge ručno, a zatim isprati stakleno posuđe u perilici za pranje laboratorijskog posuđa.
      </p>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "plasticno-posude",
    title: "Plastično posuđe",
    icon: "♻️",
    content: `
      <p class="text-gray-300 leading-relaxed">
        Plastično posuđe za jednokratnu upotrebu s razvijenim bakterijskim kulturama valja odložiti u posebne plastične vreće i autoklavirati.
      </p>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  }
];

const navigationButtons = {
  previous: {
    text: "prva pomoć",
    url: "/poglavlje-1/prva-pomoc/"
  },
  next: {
    text: "uređaji u laboratoriju",
    url: "/poglavlje-1/uredaji-u-laboratoriju/"
  }
};
---

<SubPageTemplate
  title={title} 
  description={description}
  chapterNumber={1}
  primaryColor="emerald"
  breadcrumbPath={[
    { name: 'Zbrinjavanje materijala', url: '/poglavlje-1/zbrinjavanje-materijala/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>