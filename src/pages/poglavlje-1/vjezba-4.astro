            <!-- Slike -->
            <div id="slike" class="bg-gradient-to-br from-orange-50 to-amber-50 rounded-xl p-6 shadow-lg border border-orange-200">
              <div class="flex items-center mb-4">
                <span class="text-3xl mr-4">üì∏</span>
