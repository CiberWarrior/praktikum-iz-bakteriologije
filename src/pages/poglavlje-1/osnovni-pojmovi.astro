---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Osnovni pojmovi u bakteriologiji',
  description = ''
} = Astro.props;

const contentBlocks = [
  {
    id: "bakterijska-kultura",
    title: "Bakterijska kultura",
    icon: "🧪",
    content: `
      <p class="mb-4 text-gray-300">
        Bakterijska kultura predstavlja populaciju bakterija, nastalu na hranjivim krutim ili tekućim podlogama razmnožavanjem iz jedne ili više istovrsnih stanica, prisutnih u materijalu kojim je nacijepljen hranjivi medij.
      </p>
      <div class="bg-gray-700 rounded-lg p-4 shadow-sm">
        <h4 class="font-semibold text-blue-300 mb-3">Uzorci materijala:</h4>
        <div class="grid grid-cols-2 md:grid-cols-4 gap-2">
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">💧 Voda</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">🌱 Tlo</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">💨 Zrak</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">🩸 Krv</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">💛 Urin</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">👄 Slina</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">🥛 Mlijeko</span>
          <span class="bg-blue-500/20 text-blue-300 px-3 py-1 rounded-full text-sm text-center">🍎 Hrana</span>
        </div>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "mjesovita-kultura",
    title: "Mješovita kultura",
    icon: "🦠",
    content: `
      <p class="text-gray-300">
        Mješovita kultura je kultura bakterija koja sadrži <strong class="text-orange-300">dvije ili više vrsta ili sojeva bakterija</strong>.
      </p>
    `,
    borderColor: "orange-500/30",
    iconGradient: "from-orange-400 to-orange-600"
  },
  {
    id: "cista-kultura",
    title: "Čista kultura",
    icon: "🧫",
    content: `
      <p class="text-gray-300">
        Čista kultura je kultura <strong class="text-green-300">samo jedne vrste, odnosno jednog soja bakterija</strong>.
      </p>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  },
  {
    id: "bakterijska-kolonija",
    title: "Bakterijska kolonija",
    icon: "⚫",
    content: `
      <p class="text-gray-300">
        Bakterijska kolonija je <strong class="text-purple-300">nakupina bakterijskih stanica na krutoj hranjivoj podlozi</strong> nastala rastom i razmnožavanjem od jedne prvobotne bakterijske stanice.
      </p>
    `,
    borderColor: "purple-500/30",
    iconGradient: "from-purple-400 to-purple-600"
  },
  {
    id: "bakterijska-suspenzija",
    title: "Bakterijska suspenzija",
    icon: "🧪",
    content: `
      <p class="text-gray-300">
        Bakterijska suspenzija predstavlja <strong class="text-pink-300">raspršene bakterijske stanice u tekućem mediju</strong>.
      </p>
    `,
    borderColor: "pink-500/30",
    iconGradient: "from-pink-400 to-pink-600"
  }
];

const navigationButtons = {
  previous: {
    text: "bakteriološke tehnike rada",
    url: "/poglavlje-1/bakterioloske-tehnike/"
  },
  next: {
    text: "dokazivanje mikroba u okolišu",
    url: "/poglavlje-1/vjezba-1/"
  }
};
---

<SubPageTemplate
  title={title} 
  description={description}
  chapterNumber={1}
  primaryColor="green"
  breadcrumbPath={[
    { name: 'Osnovni pojmovi u bakteriologiji', url: '/poglavlje-1/osnovni-pojmovi/' }
  ]}
  contentBlocks={contentBlocks}
  navigationButtons={navigationButtons}
/>