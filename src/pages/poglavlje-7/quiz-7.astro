---
import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    "question": "Koja je glavna prednost direktnih metoda brojanja bakterija?",
    "options": {
      "a": "Brzina izvršavanja",
      "b": "Točnost brojanja živih i mrtvih stanica",
      "c": "Niska cijena opreme",
      "d": "Jednostavnost izvršavanja"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što je hemacitometar?",
    "options": {
      "a": "Uređaj za mjerenje temperature",
      "b": "Uređaj za brojanje stanica s kalibriranim rešetkama",
      "c": "Uređaj za centrifugiranje",
      "d": "Uređaj za sterilizaciju"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koja je najčešće korištena rešetka u hemacitometru?",
    "options": {
      "a": "Neubauer rešetka",
      "b": "Thoma rešetka",
      "c": "Petroff-Hauser rešetka",
      "d": "Svi navedeni"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koliko velika je Neubauer rešetka?",
    "options": {
      "a": "1 mm × 1 mm",
      "b": "3 mm × 3 mm",
      "c": "5 mm × 5 mm",
      "d": "10 mm × 10 mm"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Kako se računa broj bakterija u hemacitometru?",
    "options": {
      "a": "Broj stanica × 10^4 × razrjeđenost",
      "b": "Broj stanica × 10^5 × razrjeđenost",
      "c": "Broj stanica × 10^6 × razrjeđenost",
      "d": "Broj stanica × 10^7 × razrjeđenost"
    },
    "correctAnswer": "a"
  }
];

const breadcrumbPath = [
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 7', url: '/poglavlje-7/' },
    { name: 'Quiz 7', url: '/poglavlje-7/quiz-7/' }
  ];
---

<QuizTemplate
  chapterNumber={7}
  chapterTitle="Direktne metode brojanja bakterija"
  chapterDescription="Provjeri svoje znanje iz poglavlja o direktnim metodama brojanja bakterija"
  primaryColor="blue"
  questions={questions}
  prevLink="/poglavlje-7/"
  nextLink="/poglavlje-8/"
  prevText="← Povratak na Poglavlje 7"
  nextText="Poglavlje 8 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem i upoznajte metode identifikacije bakterija."
  ctaPrimaryText="Poglavlje 8"
  ctaPrimaryLink="/poglavlje-8/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  breadcrumbPath={breadcrumbPath}
/>