---
import SubPageTemplate from "../../components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 7: Određivanje ukupnog broja bakterija u Petroff-Hauserovoj komorici',
  description = 'Praktične vježbe iz direktnog određivanja broja bakterija'
} = Astro.props;

const contentBlocks = [
  {
    id: "odredivanje-ukupnog-broja-bakterija",
    title: "Određivanje ukupnog broja bakterija u Petroff-Hauserovoj komorici",
    icon: "🔢",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Uzorak površinske vode u Winklerovoj boci homogenizirati energičnim mućkanjem. Na mrežicu Petroff-Hauserove komorice, koja je u <strong class="text-blue-300">središnjem dijelu</strong>, staviti <strong class="text-blue-300">pokrovno stakalce</strong> tako da čvrsto prianja uz komoricu. Pipetom nanijeti kap uzorka uz rub na sredini pokrovnog stakalca, a filtar papirom pokupiti eventualni višak uzorka. Uzorak će <strong class="text-blue-300">kapilarno ispuniti</strong> mrežicu Petroff-Hauserove komorice.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Na pokrovnicu staviti kap <strong class="text-blue-300">imerzijskog ulja</strong> (anisol ili cedrovo ulje) i mikroskopirati pod <strong class="text-blue-300">imerzijskim objektivom</strong> (povećanje <strong class="text-blue-300">1000 x</strong>). Izbrojati stanice unutar <strong class="text-blue-300">25 kvadratića</strong> središnje mreže (uključujući i one koje se nalaze na crti) i izračunati ukupan broj stanica u 1 mL uzorka, uzimajući u obzir volumen komorice.
        </p>
      </div>
    `,
    borderColor: "blue-500/30",
    iconGradient: "from-blue-400 to-blue-600"
  },
  {
    id: "izracun-broja-bakterija",
    title: "Izračun broja bakterija",
    icon: "🧮",
    content: `
      <div class="bg-gray-700 rounded-lg p-6 shadow-sm">
        <p class="text-gray-300 leading-relaxed mb-4">
          Petroff-Hauserova komorica podijeljena je u kvadratiće, a stanice se broje u <strong class="text-green-300">25 središnjih kvadratića</strong> omeđenih dvostrukim crtama. Volumen svakog malog kvadratića u komorici je <strong class="text-green-300">5 × 10⁴ μm³</strong> (slika 47). Kako 1 mL iznosi <strong class="text-green-300">1 × 10¹² μm³</strong>, frakcija 1 mL volumena u svakom kvadratiću komorice je 1 × 10¹² μm³ podijeljena u 5 × 10⁴ μm³, što iznosi <strong class="text-green-300">5 × 10⁻⁸ mL</strong> po kvadratiću.
        </p>
        
        <p class="text-gray-300 leading-relaxed mb-4">
          Drugim riječima, ima <strong class="text-green-300">2 × 10⁷ kvadratića</strong> po jednom mL. Stoga, za izračun broja stanica po 1 mL iz broja ustanovljenog u Petroff-Hauserovoj komorici, potrebno je srednju vrijednost broja u 25 kvadratića pomnožiti sa <strong class="text-green-300">2 × 10⁷</strong>.
        </p>
        
        <div class="bg-green-500/20 border-l-4 border-green-400 p-4 rounded-r-lg">
          <h4 class="text-green-300 font-semibold mb-3">Primjer izračuna</h4>
          <p class="text-green-200">
            Ako je npr. u Petroff-Hauserovoj komorici volumena <strong class="text-green-300">0,02 mm³</strong>, što pokriva 25 kvadratića središnje mreže, izbrojeno prosječno <strong class="text-green-300">150 stanica</strong>, potrebno je dobiveni broj pomnožiti sa <strong class="text-green-300">2 × 10⁷</strong>, što će iznositi <strong class="text-green-300">3,0 × 10⁹ stanica po 1 mL</strong>.
          </p>
        </div>
      </div>
    `,
    borderColor: "green-500/30",
    iconGradient: "from-green-400 to-green-600"
  }
];

const navigationButtons = {
  previous: {
    text: "Određivanje broja bakterija u suspenziji direktnim metodama",
    url: "/poglavlje-7/odredivanje-broja-bakterija-u-suspenziji-direktnim-metodama/"
  },
  next: {
    text: "Poglavlje 8",
    url: "/poglavlje-8/"
  }
};
