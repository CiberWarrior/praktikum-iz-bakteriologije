<script>
  function initBookmarks() {
    const bookmarkButtons = document.querySelectorAll('.bookmark-btn');
    bookmarkButtons.forEach(btn => {
      btn.addEventListener('click', function(this: HTMLElement) {
        const pageId = this.getAttribute('data-page-id');
        toggleBookmark(pageId);
        updateBookmarkUI(pageId);
      });
    });
  }

  function updateBookmarkUI(pageId: string) {
    const bookmarkButtons = document.querySelectorAll(`[data-page-id="${pageId}"]`);
    const isBookmarked = localStorage.getItem(`bookmark_${pageId}`) === 'true';
    
    bookmarkButtons.forEach(btn => {
      const icon = btn.querySelector('svg');
      if (icon) {
        if (isBookmarked) {
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>';
          btn.classList.add('text-red-500');
          btn.classList.remove('text-gray-400');
        } else {
          icon.innerHTML = '<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 5a2 2 0 012-2h10a2 2 0 012 2v16l-7-3.5L5 21V5z"></path>';
          btn.classList.remove('text-red-500');
          btn.classList.add('text-gray-400');
        }
      }
    });
  }

  function toggleBookmark(pageId: string) {
    const currentState = localStorage.getItem(`bookmark_${pageId}`) === 'true';
    localStorage.setItem(`bookmark_${pageId}`, (!currentState).toString());
  }

  // Inicijalizacija bookmark funkcionalnosti
  document.addEventListener('DOMContentLoaded', function() {
    initBookmarks();
    updateBookmarkUI('odredivanje-broja-bakterija-u-suspenziji-direktnim-metodama');
  });
</script>
