---
import QuizTemplate from '../../components/QuizTemplate.astro';

const questions = [
  {
    "question": "Što je titar bakterija?",
    "options": {
      "a": "Broj bakterija u 1 ml suspenzije",
      "b": "Najveća razrjeđenost pri kojoj se još mogu vidjeti kolonije",
      "c": "Broj kolonija na Petrijevoj ploči",
      "d": "Vrijeme potrebno za rast bakterija"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Kako se računa broj bakterija u suspenziji?",
    "options": {
      "a": "Broj kolonija × razrjeđenost × 10",
      "b": "Broj kolonija × razrjeđenost × 100",
      "c": "Broj kolonija × razrjeđenost × 1000",
      "d": "Broj kolonija × razrjeđenost × 10000"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Koji je optimalan broj kolonija za brojanje?",
    "options": {
      "a": "10-50 kolonija",
      "b": "30-300 kolonija",
      "c": "100-500 kolonija",
      "d": "500-1000 kolonija"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Što je razrjeđenost?",
    "options": {
      "a": "Broj bakterija u 1 ml",
      "b": "Omjer između originalne i razrjeđene suspenzije",
      "c": "Broj kolonija na ploči",
      "d": "Vrijeme inkubacije"
    },
    "correctAnswer": "a"
  },
  {
    "question": "Kako se izražava razrjeđenost?",
    "options": {
      "a": "U postocima",
      "b": "U omjerima (npr. 1:10, 1:100)",
      "c": "U gramima",
      "d": "U mililitrima"
    },
    "correctAnswer": "a"
  }
];

const breadcrumbPath = [
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 6', url: '/poglavlje-6/' },
    { name: 'Quiz 6', url: '/poglavlje-6/quiz-6/' }
  ];
---

<QuizTemplate
  chapterNumber={6}
  chapterTitle="Osnovne tehnike rada"
  chapterDescription="Provjeri svoje znanje iz poglavlja o broju kolonija i titaru bakterija"
  primaryColor="orange"
  questions={questions}
  prevLink="/poglavlje-6/"
  nextLink="/poglavlje-7/"
  prevText="← Povratak na Poglavlje 6"
  nextText="Poglavlje 7 →"
  ctaTitle="Nastavi na sljedeće poglavlje"
  ctaDescription="Nastavite s učenjem i upoznajte metode identifikacije bakterija."
  ctaPrimaryText="Poglavlje 7"
  ctaPrimaryLink="/poglavlje-7/"
  ctaSecondaryText="Povratak na sadržaj"
  ctaSecondaryLink="/sadrzaj/"
  breadcrumbPath={breadcrumbPath}
/>