<SubPageTemplate 
  title={title}
  description={description}
  chapterNumber={16}
  primaryColor="violet"
  breadcrumbPath={[
    { name: 'Poglavlje 16', url: '/poglavlje-16/' },
    { name: 'Vježbe 16', url: '/poglavlje-16/vjezba-16/' }
