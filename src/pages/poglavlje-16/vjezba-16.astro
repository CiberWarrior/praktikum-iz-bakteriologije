---
import SubPageTemplate from "@/components/SubPageTemplate.astro";

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 16: Bakterije mliječne fermentacije',
  description = 'Laboratorijske vježbe za dokazivanje bakterija mliječne fermentacije u acidofilnom jogurtu.'
} = Astro.props;

const contentBlocks = [
  {
    id: "dokazivanje-bakterija",
    title: "Dokazivanje bakterija mliječne fermentacije u acidofilnom jogurtu",
    icon: "🥛",
    content: `
      <div class="space-y-6">
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-violet-500">
          <h4 class="text-lg font-semibold text-violet-300 mb-2">🧪 Postupak vježbe</h4>
          <p class="text-gray-300 leading-relaxed mb-3">
            Napraviti seriju decimalnih razrjeđenja komercijalnog acidofilnog jogurta. Nacijepiti na Petrijeve ploče s hranjivim agarom po <strong class="text-violet-300">0,1 mL</strong> uzorka metodom širenja razmaza iz odgovarajuće serije decimalnog razrjeđenja.
          </p>
          <p class="text-gray-300 leading-relaxed">
            Inkubirati ploče na <strong class="text-violet-300">37°C/5 dana</strong>. Izbrojati kolonije bakterija mliječne fermentacije koje su okrugle, ispupčene, male, sjajne, žute do bijele boje (Slika 69) i izračunati broj po <strong class="text-violet-300">1 mL</strong> bakterija mliječne fermentacije. Izmjeriti pH jogurta.
          </p>
        </div>

        <figure class="image-figure">
          <img
            src="/Images/slika69.jpg"
            alt="Kolonije bakterija mliječne fermentacije izolirane iz jogurta na hranjivom agaru"
            class="w-3/5 h-auto rounded-lg mx-auto"
            loading="lazy"
          />
          <figcaption class="mt-4 text-center">
            <span class="inline-block bg-violet-100 text-violet-800 px-3 py-1 rounded-full text-sm font-medium">Slika 69</span>
            <span class="block mt-2 text-gray-300">Kolonije bakterija mliječne fermentacije izolirane iz jogurta na hranjivom agaru</span>
          </figcaption>
        </figure>
        
        <div class="bg-gray-700 rounded-lg p-4 border-l-4 border-blue-500">
          <h4 class="text-lg font-semibold text-blue-300 mb-3">🧫 MRS agar za izolaciju laktobacila:</h4>
          <p class="text-gray-300 mb-4">
            Za izolaciju laktobacila iz acidofilnog jogurta može se koristiti gore navedena procedura i inokulacija na MRS agar. MRS agar je specifična podloga za uzgoj laktobacila.
          </p>
          
          <div class="bg-gray-700 rounded-xl p-6 border border-blue-500/30">
            <div class="bg-gray-800 rounded-lg p-4 border border-blue-500/30">
              <div class="space-y-3">
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Pepton</span>
                  <span class="bg-blue-500 text-white px-3 py-1 rounded-full text-sm font-semibold">10,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Mesni ekstrakt</span>
                  <span class="bg-orange-500 text-white px-3 py-1 rounded-full text-sm font-semibold">10,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Kvasčev ekstrakt</span>
                  <span class="bg-red-500 text-white px-3 py-1 rounded-full text-sm font-semibold">5,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Glukoza</span>
                  <span class="bg-purple-500 text-white px-3 py-1 rounded-full text-sm font-semibold">20,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">K₂HPO₄</span>
                  <span class="bg-green-500 text-white px-3 py-1 rounded-full text-sm font-semibold">2,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Amoni citrat</span>
                  <span class="bg-teal-500 text-white px-3 py-1 rounded-full text-sm font-semibold">2,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Na-acetat</span>
                  <span class="bg-indigo-500 text-white px-3 py-1 rounded-full text-sm font-semibold">5,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">MgSO₄</span>
                  <span class="bg-pink-500 text-white px-3 py-1 rounded-full text-sm font-semibold">0,2 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">MnSO₄</span>
                  <span class="bg-yellow-500 text-white px-3 py-1 rounded-full text-sm font-semibold">0,05 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Agar</span>
                  <span class="bg-cyan-500 text-white px-3 py-1 rounded-full text-sm font-semibold">15,0 g</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Tween 80</span>
                  <span class="bg-rose-500 text-white px-3 py-1 rounded-full text-sm font-semibold">1 mL</span>
                </div>
                <div class="flex justify-between items-center">
                  <span class="font-medium text-gray-300">Destilirana voda</span>
                  <span class="bg-emerald-500 text-white px-3 py-1 rounded-full text-sm font-semibold">1000 mL</span>
                </div>
              </div>
              <div class="mt-4 pt-4 border-t border-gray-600">
                <div class="flex justify-center">
                  <span class="bg-violet-500 text-white px-4 py-2 rounded-full text-sm font-semibold">pH = 6,4 ± 0,2</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    `,
    borderColor: "violet-500/30",
    iconGradient: "from-violet-400 to-violet-600"
  }
];

const navigationButtons = {
  previous: {
    text: "bakterije mliječne fermentacije",
    url: "/poglavlje-16/bakterije-mlijecne-fermentacije/"
  },
  next: {
    text: "poglavlje 17",
    url: "/poglavlje-17/"
  }
};
