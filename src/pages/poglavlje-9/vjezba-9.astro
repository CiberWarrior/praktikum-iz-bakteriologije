---
import ChapterLayout from '../../components/ChapterLayout.astro';
import ChapterNavigation from '../../components/ChapterNavigation.astro';
import { getChapterConfig } from '../../config/chapters';

export interface Props {
  title?: string;
  description?: string;
}

const { 
  title = 'Vježbe 9',
  description = 'Sadržaj poglavlja 9 - Vježbe 9'
} = Astro.props;

const chapterConfig = getChapterConfig(9);
---

<ChapterLayout 
  title={title} 
  description={description} 
  chapterNumber={9}
  primaryColor="yellow"
  prevLink="/poglavlje-9/" 
  nextLink="/poglavlje-10/" 
  prevText="← Poglavlje 9" 
  nextText="Poglavlje 10 →" 
  ctaTitle="Nastavi na sljedeće poglavlje" 
  ctaDescription="Nastavite s učenjem i upoznajte Paraziti." 
  ctaPrimaryText="Poglavlje 10" 
  ctaPrimaryLink="/poglavlje-10/" 
  ctaSecondaryText="Povratak na pregled" 
  ctaSecondaryLink="/poglavlje-9/"
  showBreadcrumb={true}
  breadcrumbPath={[
    { name: 'Sadržaj', url: '/sadrzaj/' },
    { name: 'Poglavlje 9', url: '/poglavlje-9/' },
    { name: 'Vježbe 9', url: '/poglavlje-9/vjebe9/' }
  ]}
>
  <!-- Navigacija kroz poglavlje -->
  <ChapterNavigation 
    chapterNumber={9} 
    currentSection="vježbe-9" 
    chapterTitle="Gljivice"
  />

  <!-- Sadržaj poglavlja -->
  <div class="prose prose-lg max-w-none">
    

<h3 style="color: #096279; font-size: 1.4rem; font-weight: 600; margin: 1.5rem 0 1rem 0;">Sadržaj vježbi</h3>

<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">1. [Prethodni test u sanitarnoj analizi vode](/poglavlje-9/vjezbe/vjezba-9-1)</h4>



<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">2. [Potvrdni test u sanitarnoj analizi vode](/poglavlje-9/vjezbe/vjezba-9-2)</h4>



<h4 style="color: #096279; font-size: 1.2rem; font-weight: 600; margin: 1.2rem 0 0.8rem 0;">3. [Završni test u sanitarnoj analizi vode](/poglavlje-9/vjezbe/vjezba-9-3)</h4>


  </div>

</ChapterLayout>