    q4: 'c', // Metoda za odre캠ivanje najvjerojatnijeg broja bakterija
    q5: 'b'  // Zato 코to ukazuju na fekalno one캜i코캖enje vode
  };

  const totalQuestions = Object.keys(correctAnswers).length;

  document.getElementById('quizForm').addEventListener('submit', function(e) {
    e.preventDefault();

    let correctCount = 0;

    // Check each answer
    Object.keys(correctAnswers).forEach(question => {
      const selectedAnswer = document.querySelector(`input[name="${question}"]:checked`);
      if (selectedAnswer && selectedAnswer.value === correctAnswers[question]) {
        correctCount++;
      }
    });

    // Calculate percentage
    const percentage = Math.round((correctCount / totalQuestions) * 100);

    // Update results
    document.getElementById('correctAnswers').textContent = correctCount;
    document.getElementById('totalQuestions').textContent = totalQuestions;
    document.getElementById('percentage').textContent = percentage;

    // Set result message
    const resultMessage = document.getElementById('resultMessage');
    if (percentage === 100) {
      resultMessage.innerHTML = '游꿀 <strong>Odli캜no!</strong><br><span class="text-lg">Odgovorili ste na sva pitanja bez gre코ke!<br>Va코e znanje iz ovog poglavlja je <em>izvrsno</em> i mo쬰te nastaviti s u캜enjem sljede캖eg poglavlja.</span>';
      resultMessage.className = 'text-xl text-indigo-700 mb-8 font-semibold leading-relaxed';
    } else if (percentage >= 80) {
      resultMessage.innerHTML = '游녪 <strong>Izvrsno!</strong><br><span class="text-lg">Imate <em>odli캜no</em> znanje iz ovog poglavlja!<br>Samo malo vi코e pa쬹je i bit 캖ete savr코eni. Nastavite s u캜enjem!</span>';
      resultMessage.className = 'text-xl text-indigo-600 mb-8 font-semibold leading-relaxed';
    } else if (percentage >= 60) {
      resultMessage.innerHTML = '游녨 <strong>Dobro!</strong><br><span class="text-lg">Imate <em>solidno</em> znanje iz ovog poglavlja.<br>Preporu캜ujemo da ponovno pro캜itate gradivo za jo코 bolje razumijevanje.</span>';
      resultMessage.className = 'text-xl text-blue-700 mb-8 font-semibold leading-relaxed';
    } else if (percentage >= 40) {
      resultMessage.innerHTML = '丘멆잺 <strong>Prosjecno</strong><br><span class="text-lg">Potrebno je <em>vi코e u캜enja</em>.<br>Vratite se na gradivo, pro캜itajte ponovno i poku코ajte quiz ponovno.</span>';
      resultMessage.className = 'text-xl text-yellow-700 mb-8 font-semibold leading-relaxed';
    } else {
      resultMessage.innerHTML = '游닄 <strong>Potrebno vi코e u캜enja</strong><br><span class="text-lg">Preporu캜ujemo da <em>detaljno pro캜itate</em> sve dijelove poglavlja.<br>U캜enje je proces - ne odustajte, vratite se na gradivo!</span>';
      resultMessage.className = 'text-xl text-red-700 mb-8 font-semibold leading-relaxed';
    }

    // Show results
    document.getElementById('quizResults').classList.remove('hidden');

    // Scroll to results
    document.getElementById('quizResults').scrollIntoView({ behavior: 'smooth' });
  });

  function resetQuiz() {
    // Reset form
    document.getElementById('quizForm').reset();

    // Hide results
    document.getElementById('quizResults').classList.add('hidden');

    // Scroll to top
    window.scrollTo({ top: 0, behavior: 'smooth' });
  }
</script>
