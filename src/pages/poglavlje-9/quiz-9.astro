<script>
  // Quiz functionality
  const correctAnswers = {
    q1: 'b', // Gram-negativne 코tapi캖aste bakterije koje fermentiraju laktozu
    q2: 'b', // Fermentiraju laktozu s proizvodnjom kiselina i plinova
