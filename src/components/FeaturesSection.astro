---
export interface Props {
  title?: string;
  subtitle?: string;
  items?: Array<{
    title: string;
    description: string;
    buttonText?: string;
    buttonLink?: string;
  }>;
}

const {
  title = 'Značajke',
  subtitle = '',
  items = [
    {
      title: 'Fokus na praksu',
      description: 'Sažete upute, jasno označeni koraci i fotografije očekivanih rezultata.',
      buttonText: 'Pogledaj primjere',
      buttonLink: '/sadrzaj/',
    },
    {
      title: 'Standardizirani protokoli',
      description: 'Sterilizacija, bojenja, brojanja i biokemijski testovi – sve na jednom mjestu.',
      buttonText: 'Istraži protokole',
      buttonLink: '/poglavlje-1/',
    },
    {
      title: 'Učenje po modulima',
      description: 'Svako poglavlje je samostalna cjelina s ciljevima i provjerom znanja.',
      buttonText: 'Započni učenje',
      buttonLink: '/predgovor/',
    },
  ],
} = Astro.props;
---

<section class="py-16 bg-gray-50">
  <div class="max-w-5xl mx-auto px-4 sm:px-6">
    <div class="text-center mb-16">
      {title && (
        <h2 class="text-4xl md:text-5xl lg:text-6xl font-bold leading-tight tracking-tight mb-6 font-heading text-gray-900">
          {title}
        </h2>
      )}
      {subtitle && (
        <p class="text-xl md:text-2xl text-gray-600 mb-8 max-w-4xl mx-auto leading-relaxed">
          {subtitle}
        </p>
      )}
    </div>
    
    <div class="grid gap-8 md:gap-12 md:grid-cols-3">
      {items.map((item, index) => {
        const gradients = [
          'bg-gradient-to-br from-purple-50 to-pink-50 border-purple-200',
          'bg-gradient-to-br from-indigo-50 to-purple-50 border-indigo-200',
          'bg-gradient-to-br from-violet-50 to-purple-50 border-violet-200'
        ];
        const colors = [
          'text-purple-600 hover:text-purple-800',
          'text-indigo-600 hover:text-indigo-800',
          'text-violet-600 hover:text-violet-800'
        ];
        const iconColors = [
          'bg-gradient-to-br from-purple-500 to-pink-500',
          'bg-gradient-to-br from-indigo-500 to-purple-500',
          'bg-gradient-to-br from-violet-500 to-purple-500'
        ];
        
        return (
          <div class={`${gradients[index]} border rounded-xl p-6 hover:shadow-lg transition-all duration-300 transform hover:-translate-y-1`}>
            <div class="flex items-start mb-4">
              <div class={`text-white rounded-full w-12 h-12 p-3 mr-4 flex-shrink-0 ${iconColors[index]}`}>
                {index === 0 && (
                  <!-- Žarulja za "Fokus na praksu" -->
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
                  </svg>
                )}
                {index === 1 && (
                  <!-- Beaker za "Standardizirani protokoli" -->
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
                  </svg>
                )}
                {index === 2 && (
                  <!-- Knjiga za "Učenje po modulima" -->
                  <svg class="w-full h-full" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.746 0 3.332.477 4.5 1.253v13C19.832 18.477 18.246 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                  </svg>
                )}
              </div>
              <div>
                <h3 class="text-xl font-bold mb-2 md:text-[1.3rem] text-gray-900">{item.title}</h3>
                <p class="text-gray-600 mb-4">{item.description}</p>
                {item.buttonText && item.buttonLink && (
                  <a
                    href={item.buttonLink}
                    class={`inline-flex items-center font-semibold ${colors[index]} transition-all duration-300`}
                  >
                    {item.buttonText}
                    <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                  </a>
                )}
              </div>
            </div>
          </div>
        );
      })}
    </div>
  </div>
</section>
