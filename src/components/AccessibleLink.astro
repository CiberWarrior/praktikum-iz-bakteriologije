---
export interface Props {
  href: string;
  text: string;
  external?: boolean;
  class?: string;
  id?: string;
  ariaLabel?: string;
}

const { href, text, external = false, class: className, id, ariaLabel } = Astro.props;

const externalProps = external ? {
  target: '_blank',
  rel: 'noopener noreferrer',
  'aria-label': `${text} (otvara se u novom prozoru)`
} : {};
---

<a 
  href={href}
  class={className}
  id={id}
  aria-label={ariaLabel}
  {...externalProps}
>
  {text}
  {external && <span aria-hidden="true"> â†—</span>}
</a>

<style>
  a:focus {
    outline: 2px solid #096279;
    outline-offset: 2px;
  }
  
  a:hover {
    text-decoration: underline;
  }
</style>
