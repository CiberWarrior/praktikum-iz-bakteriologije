---
export interface Props {
  chapterNumber: number;
  currentSection?: 'overview' | 'theory' | 'exercises' | 'laboratory';
  chapterTitle: string;
}

const { chapterNumber, currentSection = 'overview', chapterTitle } = Astro.props;

const sections = [
  { id: 'overview', title: 'Pregled', icon: '📋', href: `/poglavlje-${chapterNumber}/` },
  { id: 'theory', title: 'Teorija', icon: '📚', href: `/poglavlje-${chapterNumber}/teorija/` },
  { id: 'exercises', title: 'Vježbe', icon: '🧪', href: `/poglavlje-${chapterNumber}/vjezbe/` },
  { id: 'laboratory', title: 'Laboratorij', icon: '🔬', href: `/poglavlje-${chapterNumber}/laboratorij/` }
];
---

<div class="bg-white rounded-xl shadow-lg p-6 mb-8">
  <h3 class="text-lg font-bold text-gray-800 mb-4">Navigacija kroz {chapterTitle}</h3>
  
  <nav class="flex flex-wrap gap-3">
    {sections.map(section => (
      <a
        href={section.href}
        class={`flex items-center gap-2 px-4 py-2 rounded-lg font-medium transition-all duration-200 ${
          currentSection === section.id
            ? 'bg-blue-100 text-blue-700 border-2 border-blue-300'
            : 'bg-gray-50 text-gray-600 hover:bg-gray-100 hover:text-gray-800 border-2 border-transparent'
        }`}
      >
        <span class="text-lg">{section.icon}</span>
        <span>{section.title}</span>
      </a>
    ))}
  </nav>
  
  <div class="mt-4 pt-4 border-t border-gray-200">
    <div class="flex items-center justify-between text-sm text-gray-600">
      <a 
        href={`/poglavlje-${chapterNumber - 1}/`}
        class="flex items-center gap-1 hover:text-blue-600 transition-colors"
      >
        ← Poglavlje {chapterNumber - 1}
      </a>
      <a 
        href={`/poglavlje-${chapterNumber + 1}/`}
        class="flex items-center gap-1 hover:text-blue-600 transition-colors"
      >
        Poglavlje {chapterNumber + 1} →
      </a>
    </div>
  </div>
</div>
