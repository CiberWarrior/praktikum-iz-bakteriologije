---
export interface Props {
  content: string;
  chapterNumber: number;
  sectionName: string;
  primaryColor?: string;
}

const { content, chapterNumber, sectionName, primaryColor = 'blue' } = Astro.props;

// Mapiranje boja za razliƒçite poglavlja
const colorMap = {
  emerald: 'from-emerald-50 to-emerald-100 border-emerald-200 text-emerald-900',
  blue: 'from-blue-50 to-blue-100 border-blue-200 text-blue-900',
  purple: 'from-purple-50 to-purple-100 border-purple-200 text-purple-900',
  indigo: 'from-indigo-50 to-indigo-100 border-indigo-200 text-indigo-900',
  cyan: 'from-cyan-50 to-cyan-100 border-cyan-200 text-cyan-900',
  teal: 'from-teal-50 to-teal-100 border-teal-200 text-teal-900',
  green: 'from-green-50 to-green-100 border-green-200 text-green-900',
  lime: 'from-lime-50 to-lime-100 border-lime-200 text-lime-900',
  yellow: 'from-yellow-50 to-yellow-100 border-yellow-200 text-yellow-900',
  amber: 'from-amber-50 to-amber-100 border-amber-200 text-amber-900',
  orange: 'from-orange-50 to-orange-100 border-orange-200 text-orange-900',
  red: 'from-red-50 to-red-100 border-red-200 text-red-900',
  pink: 'from-pink-50 to-pink-100 border-pink-200 text-pink-900',
  rose: 'from-rose-50 to-rose-100 border-rose-200 text-rose-900',
  slate: 'from-slate-50 to-slate-100 border-slate-200 text-slate-900',
  sky: 'from-sky-50 to-sky-100 border-sky-200 text-sky-900',
  violet: 'from-violet-50 to-violet-100 border-violet-200 text-violet-900',
  fuchsia: 'from-fuchsia-50 to-fuchsia-100 border-fuchsia-200 text-fuchsia-900'
};

const colorClasses = colorMap[primaryColor] || colorMap.blue;
---

<div class={`bg-gradient-to-br ${colorClasses} rounded-xl p-8 border mb-8`}>
  <h2 class="text-2xl font-bold mb-4">
    Poglavlje {chapterNumber}: {sectionName}
  </h2>
  
  <div class="prose prose-lg max-w-none">
    <Fragment set:html={content} />
  </div>
</div>

<style>
  .prose {
    @apply text-gray-800 leading-relaxed;
  }
  
  .prose h1, .prose h2, .prose h3, .prose h4, .prose h5, .prose h6 {
    @apply font-bold mb-4;
  }
  
  .prose h1 { @apply text-3xl; }
  .prose h2 { @apply text-2xl; }
  .prose h3 { @apply text-xl; }
  .prose h4 { @apply text-lg; }
  
  .prose p {
    @apply mb-4;
  }
  
  .prose ul, .prose ol {
    @apply mb-4 pl-6;
  }
  
  .prose li {
    @apply mb-2;
  }
  
  .prose table {
    @apply w-full border-collapse border border-gray-300 rounded-lg overflow-hidden shadow-lg;
  }
  
  .prose th {
    @apply bg-gray-100 font-semibold p-3 text-left border-b border-gray-300;
  }
  
  .prose td {
    @apply p-3 border-b border-gray-200;
  }
  
  .prose tr:nth-child(even) {
    @apply bg-gray-50;
  }
  
  .prose blockquote {
    @apply border-l-4 border-gray-300 pl-4 italic bg-gray-50 p-4 rounded-r-lg;
  }
  
  .prose code {
    @apply bg-gray-100 px-2 py-1 rounded text-sm font-mono;
  }
  
  .prose pre {
    @apply bg-gray-900 text-white p-4 rounded-lg overflow-x-auto;
  }
  
  .prose pre code {
    @apply bg-transparent text-white p-0;
  }
</style>
