<style>
  .advanced-search-container {
    @apply w-full;
  }
  
  .filter-group {
    @apply flex flex-col;
  }
  
  .filter-group select,
  .filter-group input[type="checkbox"] {
    @apply transition-all duration-200;
  }
  
  .filter-group select:focus,
  .filter-group input[type="checkbox"]:focus {
    @apply ring-2 ring-blue-500 border-transparent;
  }
  
  #autocompleteDropdown {
    @apply border-gray-200 bg-white shadow-lg;
  }
  
  .autocomplete-item {
    @apply px-4 py-3 hover:bg-gray-50 cursor-pointer border-b border-gray-100 last:border-b-0 transition-colors duration-150;
  }
  
  .autocomplete-item:hover {
    @apply bg-blue-50;
  }
  
  .autocomplete-item.selected {
    @apply bg-blue-100;
  }
  
  .search-result-item {
    @apply block p-6 bg-white border border-gray-200 rounded-lg hover:shadow-md transition-all duration-300;
  }
  
  .search-result-item:hover {
    @apply border-blue-300 shadow-lg;
  }
  
  .type-badge {
    @apply inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium;
  }
  
