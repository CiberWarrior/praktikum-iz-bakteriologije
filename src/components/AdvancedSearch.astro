  }
  
  .pagination-item.active {
    @apply bg-blue-600 text-white border-blue-600;
  }
  
  .pagination-item.disabled {
    @apply opacity-50 cursor-not-allowed hover:bg-white hover:text-gray-500;
  }
</style>
