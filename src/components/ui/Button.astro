---
const {
  variant = 'secondary',
  target,
  text = '',
  icon = '',
  class: className = '',
  type,
  ...rest
} = Astro.props;

const variants: Record<string, string> = {
  primary: 'btn-primary',
  secondary: 'btn-secondary',
  tertiary: 'btn btn-tertiary',
  link: 'cursor-pointer hover:text-primary',
};
---

{
  type === 'button' || type === 'submit' || type === 'reset' ? (
    <button type={type} class={`${variants[variant] || ''} ${className}`} {...rest}>
      {text}
      {icon && (
        <svg class="w-5 h-5 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 17l9.2-9.2M17 17V7H7"/>
        </svg>
      )}
    </button>
  ) : (
    <a
      class={`${variants[variant] || ''} ${className}`}
      {...(target ? { target: target, rel: 'noopener noreferrer' } : {})}
      {...rest}
    >
      {text}
      {icon && (
        <svg class="w-5 h-5 ml-1 -mr-1.5 rtl:mr-1 rtl:-ml-1.5 inline-block" fill="currentColor" viewBox="0 0 24 24">
          <path d="M7 17l9.2-9.2M17 17V7H7"/>
        </svg>
      )}
    </a>
  )
}
