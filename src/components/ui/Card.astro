---
export interface Props {
  variant?: 'default' | 'gradient' | 'bordered' | 'elevated';
  color?: 'blue' | 'green' | 'red' | 'purple' | 'yellow' | 'indigo' | 'gray';
  padding?: 'sm' | 'md' | 'lg' | 'xl';
  className?: string;
}

const { 
  variant = 'default',
  color = 'gray',
  padding = 'lg',
  className = ''
} = Astro.props;

const colorClasses = {
  blue: {
    bg: 'bg-blue-50',
    border: 'border-blue-200',
    borderLeft: 'border-l-blue-400',
    gradient: 'from-blue-50 to-blue-100',
    text: 'text-blue-900'
  },
  green: {
    bg: 'bg-green-50',
    border: 'border-green-200',
    borderLeft: 'border-l-green-400',
    gradient: 'from-green-50 to-green-100',
    text: 'text-green-900'
  },
  red: {
    bg: 'bg-red-50',
    border: 'border-red-200',
    borderLeft: 'border-l-red-400',
    gradient: 'from-red-50 to-red-100',
    text: 'text-red-900'
  },
  purple: {
    bg: 'bg-purple-50',
    border: 'border-purple-200',
    borderLeft: 'border-l-purple-400',
    gradient: 'from-purple-50 to-purple-100',
    text: 'text-purple-900'
  },
  yellow: {
    bg: 'bg-yellow-50',
    border: 'border-yellow-200',
    borderLeft: 'border-l-yellow-400',
    gradient: 'from-yellow-50 to-yellow-100',
    text: 'text-yellow-900'
  },
  indigo: {
    bg: 'bg-indigo-50',
    border: 'border-indigo-200',
    borderLeft: 'border-l-indigo-400',
    gradient: 'from-indigo-50 to-indigo-100',
    text: 'text-indigo-900'
  },
  gray: {
    bg: 'bg-gray-50',
    border: 'border-gray-200',
    borderLeft: 'border-l-gray-400',
    gradient: 'from-gray-50 to-gray-100',
    text: 'text-gray-900'
  }
};

const paddingClasses = {
  sm: 'p-4',
  md: 'p-6',
  lg: 'p-8',
  xl: 'p-10'
};

const variantClasses = {
  default: `${colorClasses[color].bg} ${colorClasses[color].border} border rounded-lg shadow-sm`,
  gradient: `bg-gradient-to-br ${colorClasses[color].gradient} border ${colorClasses[color].border} rounded-lg shadow-md`,
  bordered: `${colorClasses[color].bg} border-l-4 ${colorClasses[color].borderLeft} border-r border-t border-b ${colorClasses[color].border} rounded-r-lg shadow-sm`,
  elevated: `${colorClasses[color].bg} ${colorClasses[color].border} border rounded-xl shadow-lg hover:shadow-xl transition-shadow duration-300`
};
---

<div class={`${variantClasses[variant]} ${paddingClasses[padding]} ${className}`}>
  <slot />
</div>
