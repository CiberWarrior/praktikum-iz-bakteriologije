---
import Icon from './Icon.astro';

export interface Props {
  theme: 'laboratory' | 'safety' | 'analysis' | 'status' | 'documentation' | 'navigation';
  type: string;
  size?: 'sm' | 'md' | 'lg' | 'xl' | '2xl';
  color?: string;
  className?: string;
}

const { 
  theme, 
  type, 
  size = 'md', 
  color = 'currentColor',
  className = ''
} = Astro.props;

// Mapiranje tema na ikone
const iconThemes = {
  laboratory: {
    microscope: 'IconMicroscope',
    flask: 'IconFlask', 
    testTube: 'IconTestPipe',
    petriDish: 'IconFlask',
    bacteria: 'IconBug',
    dna: 'IconBug',
    flame: 'IconFlame',
    thermometer: 'IconThermometer'
  },
  
  safety: {
    warning: 'IconAlertTriangle',
    danger: 'IconAlertCircle',
    safety: 'IconShield',
    firstAid: 'IconFirstAidKit',
    info: 'IconInfoCircle'
  },
  
  analysis: {
    chart: 'IconChartBar',
    trending: 'IconChartBar',
    search: 'IconSearch',
    data: 'IconDatabase'
  },
  
  status: {
    success: 'IconCheck',
    error: 'IconX',
    info: 'IconInfoCircle',
    loading: 'IconClock'
  },
  
  documentation: {
    notes: 'IconNotes',
    book: 'IconBook',
    bulb: 'IconBulb'
  },
  
  navigation: {
    left: 'IconChevronLeft',
    right: 'IconChevronRight',
    bookmark: 'IconBookmark',
    bookmarkFilled: 'IconBookmarkFilled'
  }
};

const iconName = iconThemes[theme]?.[type] || 'IconInfoCircle';
---

<Icon 
  name={iconName} 
  size={size} 
  color={color} 
  className={className} 
/>
