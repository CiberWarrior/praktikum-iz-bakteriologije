---
import "@/styles/exercise.css";

const { frontmatter } = Astro.props;

const ex = frontmatter.exercise ?? {};
const duration = ex.duration ?? "60–90 min";
const group = ex.group ?? "Parovi";
const outcomes = Array.isArray(ex.outcomes) ? ex.outcomes.join(" • ") : (ex.outcomes ?? "Aseptika");

const title = frontmatter.title ?? "Vježba";
const tagline = frontmatter.description ?? "";
---

<div class="exercise-page">
  <section class="hero-edu">
    <div class="hero-edu__eyebrow">Laboratorijske vježbe</div>
    <h1 class="hero-edu__title">{title}</h1>
    {tagline && <p class="hero-edu__tagline">{tagline}</p>}

    <div class="hero-edu__meta">
      <span class="pill">⏱ {duration}</span>
      <span class="pill">👥 {group}</span>
      <span class="pill pill--accent">🎯 {outcomes}</span>
    </div>
  </section>

  <slot />
</div>

<style is:global>
  /* Hide Starlight breadcrumbs and page header elements */
  main nav[aria-label="Breadcrumb"],
  main nav[aria-label="breadcrumbs"],
  main nav[aria-label="Breadcrumbs"],
  main .sl-breadcrumb,
  main .sl-page-header,
  /* More specific selectors for the actual elements */
  .content-panel:first-child,
  h1#_top,
  /* Hide any breadcrumb navigation */
  nav[aria-label*="breadcrumb"],
  nav[aria-label*="Breadcrumb"],
  /* Hide the first content panel that contains the title */
  .content-panel:has(h1#_top) {
    display: none !important;
  }
  
  /* Reduce font size of exercise titles */
  .hero-edu__title {
    font-size: 1.8rem !important;
    line-height: 1.2 !important;
  }
</style>
